@EVENTTRAIN
#PRI
;主人公の射精を0に
BASE:MASTER:2 = 0
;主人公の精神絶頂を0に
BASE:MASTER:6 = 0
;いちおう調教対象と助手も
BASE:TARGET:2 = 0
SIF ASSI >= 0
	BASE:ASSI:2 = 0
BASE:TARGET:3 = 0

;射精フラグ、処女喪失フラグなどをリセット
REPEAT 200
	TFLAG:COUNT = 0
REND

;調教者は誰か
IF ASSIPLAY == 0
	PLAYER = MASTER
ELSE
	PLAYER = ASSI
ENDIF


;コンフィグによる各種フラグ操作
IF (FLAG:23 & 1) && TALENT:152
	;初期ウフフONで合意持ちなら最初からウフフ
	TFLAG:44 = 1
ENDIF
IF (FLAG:23 & 8)
	;主導権を初期設定
	SIF CFLAG:15 == 1
		TFLAG:45 = 0
	SIF CFLAG:15 == 2
		TFLAG:45 = 1
ENDIF

;旧FINISH.ERBから移動
@EVENTTURNEND
#PRI
;売却や助手化が可能になったか
SIF TARGET < 0
	RETURN 0
IF (ABL:0 >= 10 && ABL:1 >= 8) || (ABL:0 >= 5 && ABL:1 >= 5 && ABL:9 >= 3) || CFLAG:2 >= 1000 || TALENT:152 || TALENT:153
	IF CFLAG:1 <= 1
		TFLAG:13 = 31
		CALL SELF_KOJO
		PRINTFORMW %NAME:TARGET%が助手可能になりました
		CFLAG:1 = 2
	ENDIF
ENDIF

RETURN 0

