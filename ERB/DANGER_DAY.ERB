;月経進行
@EVENT_DANGERDAY
;CFLAG:33
;月経周期
;0～7	やや安全日
;8～11	生理
;11～14	危険日


REPEAT CHARANUM
	;妊娠してない、オトコではない
	IF TALENT:COUNT:妊娠 == 0 && TALENT:COUNT:オトコ == 0
		LOCAL = 3
		SELECTCASE CFLAG:COUNT:33
		CASE 5, 9, 12
			CFLAG:COUNT:33 += RAND:LOCAL == 0
		ENDSELECT
		CFLAG:COUNT:33 += 1
		CFLAG:COUNT:33 %= 15

		;TALENT;137	危険日
		;TALENT;138	生理
		SELECTCASE CFLAG:COUNT:33
		CASE 0 TO 7
			TALENT:COUNT:危険日 = 0
			TALENT:COUNT:生理 = 0
		CASE 8 TO 11
			TALENT:COUNT:危険日 = 0
			TALENT:COUNT:生理 = 1
		CASE 11
			TALENT:COUNT:危険日 = 1
			TALENT:COUNT:生理 = 1
		CASE 12 TO 14
			TALENT:COUNT:危険日 = 1
			TALENT:COUNT:生理 = 0
		ENDSELECT
	ELSE
		TALENT:COUNT:危険日 = 0
		TALENT:COUNT:生理 = 0
		CFLAG:COUNT:33 = 0
	ENDIF
REND


