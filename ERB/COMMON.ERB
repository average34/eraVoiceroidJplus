	ELSEIF ABL:T:戦闘技能 <= 25
		P = P * (ABL:T:戦闘技能 * 4 + 90) / 100
	ELSE
		P = P * (ABL:T:戦闘技能 * 5 + 70) / 100
	ENDIF
ELSE
	P /= 200
	IF ABL:T:戦闘技能 <= 1
		P = P * (ABL:T:戦闘技能 * 20 + 100)
	ELSEIF ABL:T:戦闘技能 <= 3
		P = P * (ABL:T:戦闘技能 * 20 + 100)
	ELSEIF ABL:T:戦闘技能 <= 5
		P = P * (ABL:T:戦闘技能 * 14 + 120)
	ELSEIF ABL:T:戦闘技能 <= 8
