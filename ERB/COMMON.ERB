	A = 0
	FOR LOCAL, 0, CHARANUM
		SIF TALENT:LOCAL:親愛
			A += 1
	NEXT
	SIF TALENT:MASTER:親愛ボーナス強化
		TIMES A , 3.00
	P = P / 5 * (5 + A)
ENDIF

CALL GET_BATTLE_POWER_LIMIT

;戦闘技能レベルによる倍率
IF P < 1000000
	IF ABL:T:戦闘技能 <= 1
		P = P * (ABL:T:戦闘技能 * 10 + 50) / 100
	ELSEIF ABL:T:戦闘技能 <= 3
		P = P * (ABL:T:戦闘技能 * 10 + 50) / 100
