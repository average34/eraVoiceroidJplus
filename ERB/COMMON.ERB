ELSEIF BASE:T:魔力 <= 400
	P += BASE:T:魔力 * 5
ELSEIF BASE:T:魔力 <= 800
	P += BASE:T:魔力 * 8
ELSEIF BASE:T:魔力 <= 5000
	P += BASE:T:魔力 * 12
ELSE
