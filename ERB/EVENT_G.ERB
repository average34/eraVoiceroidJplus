;=============================================================================
;体力・気力の最大値上昇処理
;=============================================================================
;調教終了後それぞれ2/5の確率で体力・気力の最大値が上昇。異常経験の値で上昇する数値が増加します
;ただし増加する値はそれぞれ＋40(難易度によっては＋80,＋120)が限度かつ、性別(及び処女性)によって
;体力、気力それぞれにある値を超えるとそれ以上は成長しない限界値というものが設定されています。
;また、体力・気力を減らしすぎた場合は上昇しないよう条件を変えました。

;;J風にアレンジしようと思ったら、なんかややこしい事をやっているので、ついでにソースをすっきり
@EVENT_GROWTH
;それぞれ消費した量を記憶
A = MAXBASE:体力 - BASE:体力
B = MAXBASE:気力 - BASE:気力
C = RAND:5
;Cが0と1の時に体力が1と2の時に気力が上がるかもしれない
SIF C > 2 || (MAXBASE:気力 == 9999 && MAXBASE:体力 == 9999)
	RETURN 0

;体力＞気力だと気力が、気力＞体力だと体力が上がりやすくする
SIF ((C < 1 && MAXBASE:体力 > MAXBASE:気力) || (C > 1 && MAXBASE:体力 < MAXBASE:気力)) && RAND:3 == 0
	C = 1

;体力の上昇上限。戦闘経験で底上げ
;愛情経験でも底上げ追加
I = 4000 + EXP:戦闘経験 / 2 + EXP:愛情経験 / 3
;気力の上昇上限。デート経験で底上げ
;愛情経験でも底上げ追加
J = 3000 + EXP:デート経験 + EXP:愛情経験 / 2
;性別による補正
IF TALENT:オトコ
	TIMES I , 1.50
ELSE
	TIMES J , 1.20
ENDIF

;9999でカンスト
SIF I > 9999
	I = 9999
SIF J > 9999
	J = 9999

;体力は戦闘経験で増加。気力はムード値で増加
;愛情経験でも増加追加。ただし加減はわからない…
G:0 = EXP:戦闘経験 / 100 + EXP:愛情経験 / 20
G:1 = TFLAG:37 / 10 + EXP:愛情経験 / 5
;PHANTASMは1回の成長の最大値が大きい
IF FLAG:5 == 10
	SIF G:0 > 100
		G:0 = 100
	SIF G:1 > 100
		G:1 = 100
;LUNATICが無かったので追加してもいいよね
ELSEIF FLAG:5 == 3
	SIF G:0 > 80
		G:0 = 80
	SIF G:1 > 80
		G:1 = 80
;EASYとHARDは1回の成長の最大値が少し大きい
ELSEIF FLAG:5 == 0 || FLAG:5 == 2
	SIF G:0 > 60
		G:0 = 60
	SIF G:1 > 60
		G:1 = 60
;NOMALとEXTRAはふつー
ELSE
	SIF G:0 > 20
		G:0 = 20
	SIF G:1 > 20
		G:1 = 20
ENDIF

;愛情経験すごいなぁ
G:0 += EXP:愛情経験 / 200
G:1 += EXP:愛情経験 / 100

;体力が300以上で体力を消費してたら
IF C <= 1 && A != 0 && BASE:体力 >= 300 && MAXBASE:体力 < I
	;残り体力500未満
	IF BASE:体力 < 500
		D = 750
	;消費した体力が2500より多い
	ELSEIF A > 2500
		D = 500
	ELSEIF A > 2000
		D = 450
	ELSEIF A > 1500
		D = 400
	ELSEIF A > 1000
		D = 350
	ELSEIF A > 500
		D = 300
	ELSE
		D = 250
	ENDIF
	;消費した体力をDで除算
	E = A / D
	SIF E > 20
		E = 20
	;[恋慕]かつ[恋人]じゃないと半減
	SIF TALENT:恋慕 == 0 || TALENT:恋人 == 0
		E /= 2
	IF (E+G:0) > 0
		DRAWLINE
		TFLAG:13 = 28
		CALL SELF_KOJO
		;上限を超えないように
		IF I < MAXBASE:体力+E+G:0
			;上昇値表示用にEに上昇量を入れる
			E = I - MAXBASE:体力
			MAXBASE:体力 = I
			;誰かもっと気の利いた文を考え(ry
			PRINTFORML よく運動した%CALLNAME:TARGET%は体力が付きました。
			PRINTFORML %CALLNAME:TARGET%の体力の最大値が{E}上がりました。
			PRINTFORML %CALLNAME:TARGET%の体力はもう上昇しません。
		ELSE
			MAXBASE:体力 += E+G:0
			;誰かもっと気の利いた文を考え(ry
			PRINTFORML よく運動した%CALLNAME:TARGET%は体力が付きました。
			PRINTFORML %CALLNAME:TARGET%の体力の最大値が{E+G:0}上がりました。
		ENDIF
		WAIT
	ELSE
		C = 1
	ENDIF
ENDIF

;気力が100以上気力を消費してたら
IF C >= 1 && B != 0 && BASE:気力 >= 100 && MAXBASE:気力 < J
	;残り気力300未満
	IF BASE:気力 < 300
		D = 750
	;消費した気力が2500より多い
	ELSEIF B > 2500
		D = 500
	ELSEIF B > 2000
		D = 450
	ELSEIF B > 1500
		D = 400
	ELSEIF B > 1000
		D = 350
	ELSEIF B > 500
		D = 300
	ELSEIF B > 300
		D = 250
	ELSE
		D = 200
	ENDIF
	;消費した気力をDで除算
	F = B / D
	SIF F > 20
		F = 20
	;[恋慕]かつ[恋人]じゃないと半減
	SIF TALENT:恋慕 == 0 || TALENT:恋人 == 0
		F /= 2
	IF (F+G:1) > 0
		DRAWLINE
		TFLAG:13 = 29
		CALL SELF_KOJO
		;上限を超えないように
		IF J < MAXBASE:気力+F+G:1
			;上昇値表示用にFに上昇量を入れる
			F = J - MAXBASE:気力
			MAXBASE:気力 = J
			PRINTFORML %CALLNAME:TARGET%はこの心地よい時間をもっと楽しみたいと思った。
			PRINTFORML %CALLNAME:TARGET%の気力の最大値が{F}上がりました。
			PRINTFORML %CALLNAME:TARGET%の気力はもう上昇しません。
		ELSE
			MAXBASE:気力 += F+G:1
			PRINTFORML %CALLNAME:TARGET%はこの心地よい時間をもっと楽しみたいと思った。
			PRINTFORML %CALLNAME:TARGET%の気力の最大値が{F+G:1}上がりました。
		ENDIF
		WAIT
	ENDIF
ENDIF

