		PRINT [※親愛※] 
	ELSEIF TALENT:COUNT:153
		PRINT [※恋人※] 
	ELSE
		PRINT 　　　　　 
	ENDIF
	W += 1
	IF W == 2
		W = 0
		PRINTL 
	ENDIF
REND
