;-------------------------------------------------
;射精関係の処理
;-------------------------------------------------
;TFLAG:703　～　デフォルト射精先設定一時変数
;1=膣内射精、2=アナル射精、3=手淫関係、4=フェラ・パイズリ、5=素股、
;6=助手（主人から）、7=クンニ、8=助手(奴隷から)、9=逆レイプ
;
;TFLAG:704　～　射精箇所選択可能か否か 0=不可、1=可
;TFLAG:302　～　射精量記録 1:射精　2:大量射精　4:超大量射精
;-------------------------------------------------
;射精チェックの例
;-------------------------------------------------
;CALL SAMEN_CHECK

;IF E >= 1
;	SIF ABL:親密 >= 3 && ABL:欲望 >= 3 && FLAG:6
;		PRINTFORML %CALLNAME:TARGET%は%CALLNAME:PLAYER%に足を絡め腰を押し付けてきた…

;	;射精先タイプの設定
;	TFLAG:703 = 1
;	;射精先選択の可・不可
;	TFLAG:704 = 0
;	;汎用的な処理はこの関数で行う
;	;（射精ゲージの再計算や射精経験の上昇と共通部分の表示）
;	CALL SAMEN_SHOOT
;ENDIF

;---------------------------------------------------------
;射精するかのチェック
;---------------------------------------------------------
@SAMEN_CHECK
;汎用的な関数なので、将来的にはすべての調教コマンドの射精チェックをここでやることも可能

;オーバーフロー対策に、値が大きすぎる場合と、負の場合は調整を加える
IF BASE:PLAYER:射精 > 100000000 || BASE:PLAYER:射精 < 0
	BASE:PLAYER:射精 = 100000000
ENDIF
S = BASE:PLAYER:射精
EJAC = MAXBASE:PLAYER:射精

;Eに射精量を記録。1:射精　2:大量射精
;超大量射精用にTFLAG:302に射精量記録。1:射精　2:大量射精　4:超大量射精
IF S > EJAC * 4
	;口上などで射精、大量射精の場合のみ考慮している条件が多いため、
	;超大量射精時でも大量射精の口上が表示されるようにEは2とする
	E = 2
	TFLAG:302 = 4
ELSEIF S > EJAC * 2
	E = 2
	TFLAG:302 = 2
ELSEIF S > EJAC
	E = 1
	TFLAG:302 = 1
ELSE
	E = 0
	TFLAG:302 = 0
ENDIF

;---------------------------------------------------------
;射精場所選択
;---------------------------------------------------------
@SAMEN_SHOOT
;射精した人物の設定
;ダブル素股、ダブルフェラ
IF SELECTCOM == 62 || SELECTCOM == 68
	P = MASTER
;助手を犯させる
ELSEIF SELECTCOM == 65
	P = TARGET
ELSE
	P = PLAYER
ENDIF

;射精する対象の設定
;助手を犯す、助手を犯させる
IF SELECTCOM == 56 || SELECTCOM == 65
	T = ASSI
ELSE
	T = TARGET
ENDIF

S = 0
;射精時の処理の分岐
CALL COMMAND_CHECK

;カウンターシステムにおける耐力減少量の算出
CALL COUNTER_ECSTASY

;---------------------------------------------------------
;射精処理関数
;---------------------------------------------------------
@COMMAND_CHECK

;コンドームの有無で分岐、コンドーム射精の場合即RETURN
CALL CONDOM_CHECK
SIF RESULT == 1
	RETURN 0

;射精時の共通処理
CALL SAMEN_SHOOT_CALC

;射精時の処理の分岐
;コマンドによる処理ターゲットの確認と分岐
IF TFLAG:703 == 1
	;膣内射精
	CALL SAMEN_SHOOT_OLD_SEX
	TFLAG:2 = E
ELSEIF TFLAG:703 == 2
	;アナル射精
	CALL SAMEN_SHOOT_OLD_SEX2
	TFLAG:2 = E
ELSEIF TFLAG:703 == 3
	;手淫
	CALL SAMEN_SHOOT_OLD_FINGER
	TFLAG:1 = E
ELSEIF TFLAG:703 == 4
	;フェラ・パイズリ
	CALL SAMEN_SHOOT_OLD_ORAL
	TFLAG:0 = E
	;パイズリ
	IF SELECTCOM == 32
		;胸で射精フラグ
		TFLAG:540 = E
		;衣装着用時、服の汚れ（精液）フラグ
		SIF TEQUIP:65
			TFLAG:265 = 1
	ENDIF
ELSEIF TFLAG:703 == 5
	;素股
	CALL SAMEN_SHOOT_OLD_SUMATA
	TFLAG:9 = E
ELSEIF TFLAG:703 == 6
	;助手を犯す
	CALL SAMEN_SHOOT_OLD_ASSISTANT
	TFLAG:7 = E
ELSEIF TFLAG:703 == 7
	;クンニ強制
	CALL SAMEN_SHOOT_OLD_PUSSY
	TFLAG:5 = E
ELSEIF TFLAG:703 == 8
	;助手を犯させるで射精
	CALL SAMEN_SHOOT_OLD_TO_ASSISTANT
	TFLAG:6 = E
ELSEIF TFLAG:703 == 9
	;逆レイプ
	CALL SAMEN_SHOOT_OLD_RAPED
	TFLAG:12 = E
ELSEIF TFLAG:703 == 10
	;足扱き
	CALL SAMEN_SHOOT_OLD_SOLE
	TFLAG:16 = E
ELSEIF TFLAG:703 == 11
	;キスで射精
	CALL SAMEN_SHOOT_KISS
	TFLAG:4 = E
ELSEIF TFLAG:703 == 12
	;3P(主人・助手が射精する場合)
	CALL SAMEN_SHOOT_THREE_PLAY
ELSEIF TFLAG:703 == 13
	;アナルに挿入させるでプレイヤーが射精
	CALL SAMEN_SHOOT_RAPED_ASS
	TFLAG:13 = E
ENDIF

;精液経験追加
EXP:T:精液経験 += S
IF T == TARGET
	PRINTFORML 精液経験＋{S}
ELSE
	PRINTFORML 精液経験＋{S}(%CALLNAME:T%)
ENDIF

;中出しかどうかの確認（妊娠機能使用時のみ）
CALL IN_VAGINA_CHECK

;---------------------------------------------------------
;射精時の共通処理
;---------------------------------------------------------
@SAMEN_SHOOT_CALC
;精液汚れの設定
STAIN:P:2 |= 4

IF TFLAG:302 == 4
	PRINTL 超大量射精
ELSEIF TFLAG:302 == 2
	PRINTL 大量射精
ELSEIF TFLAG:302 == 1
	PRINTL 射精
ENDIF

;射精経験
EXP:P:射精経験 += TFLAG:302

;射精値調整
BASE:P:射精 -= EJAC*TFLAG:302
SIF BASE:P:射精 >= EJAC
	BASE:P:射精 = EJAC-1


;-------------------------------------------------------------------------
;各射精タイプごとの処理関数
;-------------------------------------------------------------------------
;今後はCOMF内では処理せず、必要に応じてここから呼び出す。
;汚れ移動等の処理は各COMF内でやってくれるので移動の必要無し

;=========================================================================
@SAMEN_SHOOT_OLD_SEX
;これまでCOMF内で使用されていたセックス射精の処理
;大量射精
IF E == 2
	;騎乗位
	IF SELECTCOM == 34
		TIMES SOURCE:7 , 1.50
		TIMES SOURCE:5 , 1.20
	ENDIF
ENDIF

;精液量
S = 10 * TFLAG:302
;騎乗位
SIF SELECTCOM == 34
	S += 5

;妊娠していないのであれば中田氏時の恐怖判定等(妊娠出産パッチのみ)
SIF TALENT:T:134 == 0 && T == TARGET && (FLAG:62 & 1)
	CALL SAMEN_SHOOT_SOURCE

;=========================================================================
@SAMEN_SHOOT_OLD_SEX2
;これまでCOMF内で使用されていたセックス射精の処理を改造。
;アナルセックス系コマンドに使用する。

;精液量
S = 10 * TFLAG:302
;騎乗位アナル
SIF SELECTCOM == 36
	S += 5

;=========================================================================
@SAMEN_SHOOT_OLD_FINGER
;これまでCOMF内で使用されていた手コキ射精の処理

;大量射精
IF E == 2
	TIMES SOURCE:7 , 2.00
	TIMES SOURCE:5 , 1.50
ENDIF

;精液量
S = 1 + ((TFLAG:302 - 1) * 2)

;=========================================================================
@SAMEN_SHOOT_OLD_ORAL
;これまでCOMF内で使用されていたフェラ・パイズリ射精の処理

;大量射精
IF E == 2
	TIMES SOURCE:7 , 2.00
	TIMES SOURCE:5 , 1.50
ENDIF

;精液量
S = 3 + ((TFLAG:302 - 1) * 3)

;=========================================================================
@SAMEN_SHOOT_OLD_SUMATA
;これまでCOMF内で使用されていた素股射精の処理

;大量射精
IF E == 2
	TIMES SOURCE:7 , 1.50
	TIMES SOURCE:5 , 1.20
ENDIF

;精液量
S = TFLAG:302

;=========================================================================
@SAMEN_SHOOT_OLD_ASSISTANT
;これまでCOMF内で使用されていた助手を犯した時の射精の処理

;大量射精
IF E == 2
	TIMES SOURCE:10 , 1.50
;通常の射精
ELSEIF E == 1
	;精液汚れ
	STAIN:MASTER:2 |= 4
ENDIF

;精液量
S = TFLAG:302

;=========================================================================
@SAMEN_SHOOT_OLD_PUSSY
;これまでCOMF内で使用されていたクンニ強制時の射精の処理

;精液量
S = 1 + ((TFLAG:302 - 1) * 3)

;=========================================================================
@SAMEN_SHOOT_OLD_TO_ASSISTANT
;これまでCOMF内で使用されていた助手を犯させた時の助手の射精の処理

;大量射精
IF E == 2
	TIMES SOURCE:7 , 2.00
	TIMES SOURCE:5 , 1.50
ENDIF

;精液量
S = TFLAG:302

;=========================================================================
@SAMEN_SHOOT_OLD_RAPED
;これまでCOMF内で使用されていた逆レイプで射精の時の処理

;大量射精
IF E == 2
	TIMES SOURCE:7 , 2.00
	TIMES SOURCE:5 , 1.50
ENDIF

;精液量
S = TFLAG:302

;=========================================================================
@SAMEN_SHOOT_OLD_SOLE
;これまでCOMF内で使用されていた足扱きで射精の時の処理

;大量射精
IF E == 2
	TIMES SOURCE:7 , 2.00
	TIMES SOURCE:5 , 1.50
ENDIF

;精液量
S = 1 + ((TFLAG:302 - 1) * 2)

;=========================================================================
@SAMEN_SHOOT_KISS
;キスで射精の処理

;大量射精
IF E == 2
	TIMES SOURCE:7 , 2.00
	TIMES SOURCE:5 , 1.50
ENDIF

;精液量
S = TFLAG:302

;=========================================================================
@SAMEN_SHOOT_THREE_PLAY
;元来の3Pを端折って記述

L = 40 + ASSIPLAY

;セックスで射精
IF TFLAG:L == 1
	TFLAG:2 = E
;アナルセックスで射精
ELSEIF TFLAG:L == 2
	TFLAG:2 = E
;フェラで射精
ELSEIF TFLAG:L == 3
	TFLAG:0 = E
ENDIF

;精液量
;セックスで射精
IF TFLAG:L == 1
	S = 10 * TFLAG:302
;アナルセックスで射精
ELSEIF TFLAG:L == 2
	S = 10 * TFLAG:302
;フェラで射精
ELSEIF TFLAG:L == 3
	S = 3 + ((TFLAG:302 - 1) * 3)
ENDIF
SIF ASSIPLAY
	S /= 2

;挿入箇所がV且つ、妊娠していないのであれば中田氏時の恐怖判定等(妊娠出産パッチのみ)
SIF TALENT:T:134 == 0 && (FLAG:62 & 1) && TFLAG:L == 1
	CALL SAMEN_SHOOT_SOURCE

;=========================================================================
@SAMEN_SHOOT_RAPED_ASS
;奴隷がアナルに射精で射精の時の処理

IF E == 2
	TIMES SOURCE:7 , 2.00
	TIMES SOURCE:5 , 1.50
ENDIF

;精液量
S = TFLAG:302

