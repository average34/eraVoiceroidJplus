@COM_ABLE282
;口上独自ウフフコマンド実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;CFLAGがたてられてないと無理
SIF !GETBIT(CFLAG:TARGET:独自コマンド使用判定, 2)
	RETURN 0
RESULT = 0
TRYCALLFORM COM_ABLE282_{NO:TARGET}
SIF RESULT == 0
	RETURN 0
RETURN 1

@COM282
PRINTSL CSTR:82
STR:0 = %CSTR:82%
;実行判定を使用する場合はこの関数で、真で戻ってくれば判定失敗
TRYCCALLFORM COM_ORDER282_{NO:TARGET}
	IF RESULT == 1
		;口上呼び出し
		TFLAG:13 = 99
		CALL SELF_KOJO
		RETURN 0
	ENDIF
CATCH
ENDCATCH
;地の文を呼ぶ
CALL TRAIN_MESSAGE_B
