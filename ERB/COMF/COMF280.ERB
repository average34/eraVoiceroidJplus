@COM_ABLE280
;口上独自ウフフコマンド実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;CFLAGがたてられてないと無理
SIF !GETBIT(CFLAG:TARGET:独自コマンド使用判定, 0)
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
RESULT = 0
TRYCALLFORM COM_ABLE280_{NO:TARGET}
SIF RESULT == 0
	RETURN 0
RETURN 1

@COM280
PRINTSL CSTR:80
STR:0 = %CSTR:80%
;実行判定を使用する場合はこの関数で、真で戻ってくれば判定失敗
TRYCCALLFORM COM_ORDER280_{NO:TARGET}
	IF RESULT == 1
		;口上呼び出し
		TFLAG:13 = 99
		CALL SELF_KOJO
		RETURN 0
	ENDIF
CATCH
ENDCATCH
;地の文を呼ぶ
CALL TRAIN_MESSAGE_B
;本体呼び出し、ここでソースなどの処理を
TRYCALLFORM COM280_{NO:TARGET}
RETURN 1

