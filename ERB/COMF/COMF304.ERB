@COM304
;まったりする

PRINTL まったりする
CALL GET_SUCCESS_RATE
B = 90 + A / 10
SIF B > 99
	B = 99
A = RAND:100
IF A <= 9
	;10％で大成功
	TFLAG:18 = 1
ELSEIF A >= B
	;10～1％で失敗
	TFLAG:18 = -1
ELSE
	;残りは成功
	TFLAG:18 = 0
ENDIF

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

STR:0 = まったりする
CALL TRAIN_MESSAGE_B

LOSEBASE:気力 += 100

;固定で獲得するソース
SOURCE:18 = 300
SOURCE:19 = 50

;ABL:従順をみる
IF ABL:親密 <= 1
	SOURCE:18 += (ABL:親密 * 65)
	SOURCE:19 += (ABL:親密 * 20)
ELSEIF ABL:親密 <= 3
	SOURCE:18 += 200 + (ABL:親密 * 70)
	SOURCE:19 += 100 + (ABL:親密 * 20)
ELSEIF ABL:親密 <= 5
	SOURCE:18 += 500 + (ABL:親密 * 70)
	SOURCE:19 += 200 + (ABL:親密 * 20)
ELSEIF ABL:親密 <= 8
	SOURCE:18 += 700 + (ABL:親密 * 80)
	SOURCE:19 += 300 + (ABL:親密 * 30)
ELSEIF ABL:親密 <= 11
	SOURCE:18 += 1200 + (ABL:親密 * 85)
	SOURCE:19 += 400 + (ABL:親密 * 30)
ELSE
	SOURCE:18 += 2000 + (ABL:親密 * 40)
	SOURCE:19 += 800 + (ABL:親密 * 15)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:18 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:18 += 500 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:18 += 2000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:18 < 0
	SOURCE:18 = 0

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:21 += 100 + (ABL:親密 * 20)
	ELSEIF ABL:親密 <= 3
		SOURCE:21 += 200 + (ABL:親密 * 30)
	ELSEIF ABL:親密 <= 5
		SOURCE:21 += 300 + (ABL:親密 * 40)
	ELSEIF ABL:親密 <= 8
		SOURCE:21 += 400 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 11
		SOURCE:21 += 500 + (ABL:親密 * 60)
	ELSE
		SOURCE:21 += 600 + (ABL:親密 * 70)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:20 = 200
	ELSEIF ABL:サドっ気 == 1
		SOURCE:20 = 300
	ELSEIF ABL:サドっ気 == 2
		SOURCE:20 = 400
	ELSEIF ABL:サドっ気 == 3
		SOURCE:20 = 550
	ELSEIF ABL:サドっ気 == 4
		SOURCE:20 = 700
	ELSE
		SOURCE:20 = 300 + (ABL:サドっ気 * 100)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:6 - 1
TFLAG:30 += A

IF TFLAG:18 == -1
	TIMES SOURCE:18 , 0.10
	TIMES SOURCE:19 , 0.50
	TIMES SOURCE:20 , 0.50
	TIMES SOURCE:21 , 0.50
	TFLAG:30 -= 10
	TFLAG:37 -= 5
ELSEIF TFLAG:18 == 0
	TIMES SOURCE:18 , 1.00
	TIMES SOURCE:19 , 1.00
	TIMES SOURCE:20 , 1.00
	TIMES SOURCE:21 , 1.00
	TFLAG:37 += A
ELSE
	TIMES SOURCE:18 , 2.00
	TIMES SOURCE:19 , 2.00
	TIMES SOURCE:20 , 2.00
	TIMES SOURCE:21 , 2.00
	TFLAG:30 += 2
	TFLAG:37 += 5 + A
ENDIF


RETURN 1

