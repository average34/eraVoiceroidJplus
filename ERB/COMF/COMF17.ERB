@COM17
;オナホール
IF TEQUIP:90
	PRINTL 触手ペニス責め
	STR:0 = 触手ペニス責め
ELSE
	;実行者が[淫具知識]を持っているなら効果増
	SIF TALENT:PLAYER:淫具知識
		PRINT 高性能
	PRINTL オナホール
	STR:0 = オナホール
ENDIF

LOSEBASE:体力 += 10
LOSEBASE:気力 += 80

SOURCE:12 = 120
SOURCE:14 = 70

;ABL:Ｃ感覚をみる
IF ABL:Ｃ感覚 == 0
	SOURCE:0 = 200
ELSEIF ABL:Ｃ感覚 == 1
	SOURCE:0 = 400
ELSEIF ABL:Ｃ感覚 == 2
	SOURCE:0 = 900
ELSEIF ABL:Ｃ感覚 == 3
	SOURCE:0 = 1600
ELSEIF ABL:Ｃ感覚 == 4
	SOURCE:0 = 2400
ELSE
	SOURCE:0 = 1500 + (ABL:Ｃ感覚 * 300)
ENDIF

;実行者が[淫具知識]を持っているなら効果増
SIF TALENT:PLAYER:淫具知識
	TIMES SOURCE:0 , 1.20

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +1
	EXP:レズ経験 += 1
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:ＢＬ経験 += 1
ENDIF

CALL TRAIN_MESSAGE_B

;オナホールの着脱
IF TEQUIP:90
	IF TEQUIP:17
		TEQUIP:17 = 0
	ELSE
		TEQUIP:17 = 1
		STAIN:3 |= 2
		STAIN:3 |= 4
	ENDIF
	T = 0
ELSE
	IF TEQUIP:17
		TEQUIP:17 = 0
	ELSE
		TEQUIP:17 = 1
	ENDIF
ENDIF

RETURN 1

@TRAIN_MESSAGE_COM17
;オナホールの着脱
IF TEQUIP:90
	IF TEQUIP:17
		PRINTFORML 触手は%CALLNAME:TARGET%のペニスを解放した
	ELSE
		PRINTFORML いやらしく肉ヒダをうねらせた触手が%CALLNAME:TARGET%のペニスに巻き付きしごき始めた
	ENDIF
ELSE
	IF TEQUIP:17
		PRINTFORML %CALLNAME:TARGET%からオナホールを外した
	ELSE
		PRINTFORML %CALLNAME:TARGET%のペニスをオナホールに挿入した
	ENDIF
ENDIF

@EQUIP_COM17
;オナホール装備中
IF TEQUIP:90
	PRINTL ＜触手ペニス責め中＞
ELSE
	PRINTL ＜オナホール装備中＞
ENDIF

LOSEBASE:体力 += 5
LOSEBASE:気力 += 20

;ABL:Ｃ感覚をみる
IF ABL:Ｃ感覚 == 0
	A = 40
ELSEIF ABL:Ｃ感覚 == 1
	A = 120
ELSEIF ABL:Ｃ感覚 == 2
	A = 250
ELSEIF ABL:Ｃ感覚 == 3
	A = 450
ELSEIF ABL:Ｃ感覚 == 4
	A = 600
ELSE
	A = 375 + (ABL:Ｃ感覚 * 75)
ENDIF

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES A , 0.80
ELSEIF PALAM:5 < PALAMLV:2
	TIMES A , 0.90
ELSEIF PALAM:5 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES A , 1.10
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES A , 1.20
ENDIF

;ABL:従順をみる
IF ABL:親密 == 0
	TIMES A , 0.80
ELSEIF ABL:親密 == 1
	TIMES A , 0.90
ELSEIF ABL:親密 == 2
	TIMES A , 1.00
ELSEIF ABL:親密 == 3
	TIMES A , 1.10
ELSEIF ABL:親密 == 4
	TIMES A , 1.20
ELSE
	A = A * (ABL:親密 * 5 + 105) / 100
ENDIF

;実行者が[淫具知識]を持っているなら効果増
SIF TALENT:PLAYER:淫具知識
	TIMES A , 1.20

SOURCE:0 += A
SOURCE:11 += 50
SOURCE:12 += 50

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +1
	EXP:レズ経験 += 1
	EXP:PLAYER:レズ経験 += 1
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:ＢＬ経験 += 1
	EXP:PLAYER:ＢＬ経験 += 1
ENDIF

SIF TEQUIP:90
	T += 1

RETURN 1
