;		BASE:PLAYER:射精 = EJAC-1
;
;	;手で射精させたフラグ
;	TFLAG:1 = 1
;ENDIF

;奴隷のA⇔調教者のＰの汚れが移動
;IF TALENT:PLAYER:半人半妖 || TALENT:PLAYER:オトコ  || TALENT:PLAYER:ふたなり
;	STAIN:アナル |= STAIN:PLAYER:ペニス
;	STAIN:PLAYER:ペニス |= STAIN:アナル
;奴隷のA⇔調教者のＶの汚れが移動
;ELSE
;	STAIN:ヴァギナ |= STAIN:PLAYER:ペニス
;	STAIN:PLAYER:ペニス |= STAIN:ヴァギナ
;ENDIF

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +4
	EXP:レズ経験 += 4
	EXP:PLAYER:レズ経験 += 4
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +4
	EXP:ＢＬ経験 += 4
	EXP:PLAYER:ＢＬ経験 += 4
ENDIF

TFLAG:100 = 1

;既成事実2に相当
TFLAG:200 = 2

;調教者がふたなり
IF TALENT:PLAYER:ふたなり
	SOURCE:屈従 /= 2
ENDIF

RETURN 1

