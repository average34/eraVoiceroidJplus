@COM_ABLE140
;尻尾コキ実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;調教者がオトコか半人半妖かふたなりじゃないとダメ
SIF TALENT:PLAYER:半人半妖 == 0 && TALENT:PLAYER:ふたなり == 0 && TALENT:PLAYER:オトコ == 0
	RETURN 0
;尻尾持ち以外は不可
SIF TALENT:しっぽ == 0
	RETURN 0
;尻尾を操るのは割とテクがいりそうなので、技巧6以下は実行できない
SIF ABL:技巧 <= 5
	RETURN 0
;縄使用中は不可
SIF TEQUIP:44
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:90
	RETURN 0
;イタコ以外は尻尾があっても(尻尾が極端に短いウサギとか後天的な物とか)無理
IF NO:TARGET == 12
	RETURN 1
ELSE
	RETURN 0
ENDIF

