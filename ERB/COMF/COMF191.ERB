@COM_ABLE191
;手淫する実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;オトコかふたなりじゃないとダメ
SIF (TALENT:ふたなり || TALENT:オトコ) == 0
	RETURN 0
RETURN 1

@COM191
;手淫する

PRINTL 手淫する
STR:0 = 手淫する
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;実行決定
;-------------------------------------------------
;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:体力 += 10
LOSEBASE:気力 += 100

SOURCE:3  = 500
SOURCE:11  = 800
SOURCE:12  = 600


;ABL:Ｃ感覚をみる
IF ABL:Ｃ感覚 == 0
	SOURCE:0 = 60
	SOURCE:7 = 60
ELSEIF ABL:Ｃ感覚 == 1
	SOURCE:0 = 180
	SOURCE:7 = 180
ELSEIF ABL:Ｃ感覚 == 2
	SOURCE:0 = 800
	SOURCE:7 = 800
ELSEIF ABL:Ｃ感覚 == 3
	SOURCE:0 = 1700
	SOURCE:7 = 1700
ELSEIF ABL:Ｃ感覚 == 4
	SOURCE:0 = 2700
	SOURCE:7 = 2700
ELSE
	SOURCE:0 = 800 + ABL:Ｃ感覚 * 600
	SOURCE:7 = 3800
ENDIF

;ABL:マゾっ気をみる
IF ABL:マゾっ気 == 0
	SOURCE:5 = 130
ELSEIF ABL:マゾっ気 == 1
	SOURCE:5 = 250
ELSEIF ABL:マゾっ気 == 2
	SOURCE:5 = 500
ELSEIF ABL:マゾっ気 == 3
	SOURCE:5 = 800
ELSEIF ABL:マゾっ気 == 4
	SOURCE:5 = 1400
ELSE
	SOURCE:5 = ABL:マゾっ気 * 600 - 1000
ENDIF

;プレイヤーのABL:技巧をみる
IF ABL:PLAYER:技巧 == 0
	TIMES SOURCE:0 , 0.50
	TIMES SOURCE:7 , 0.50
ELSEIF ABL:PLAYER:技巧 == 1
	TIMES SOURCE:0 , 0.80
	TIMES SOURCE:7 , 0.80
ELSEIF ABL:PLAYER:技巧 == 2
	TIMES SOURCE:0 , 1.00
	TIMES SOURCE:7 , 1.00
ELSEIF ABL:PLAYER:技巧 == 3
	TIMES SOURCE:0 , 1.20
	TIMES SOURCE:7 , 1.50
ELSEIF ABL:PLAYER:技巧 == 4
	TIMES SOURCE:0 , 1.50
	TIMES SOURCE:7 , 2.50
ELSE
	SOURCE:0 = SOURCE:0 * (ABL:PLAYER:技巧 * 75 + 25) / 200
	SOURCE:7 = SOURCE:7 * (ABL:PLAYER:技巧 * 75 + 25) / 100
ENDIF

;ABL:奉仕精神をみる
IF ABL:PLAYER:奉仕精神 == 0
	TIMES SOURCE:3 , 0.60
;	TIMES SOURCE:7 , 0.60
ELSEIF ABL:PLAYER:奉仕精神 == 1
	TIMES SOURCE:3 , 0.80
;	TIMES SOURCE:7 , 0.80
ELSEIF ABL:PLAYER:奉仕精神 == 2
	TIMES SOURCE:3 , 1.00
;	TIMES SOURCE:7 , 1.00
ELSEIF ABL:PLAYER:奉仕精神 == 3
	TIMES SOURCE:3 , 1.20
;	TIMES SOURCE:7 , 1.50
ELSEIF ABL:PLAYER:奉仕精神 == 4
	TIMES SOURCE:3 , 1.50
;	TIMES SOURCE:7 , 2.50
ELSE
	SOURCE:3 = SOURCE:3 * (ABL:PLAYER:技巧 * 75 + 25) / 200
;	SOURCE:7 = SOURCE:7 * (ABL:PLAYER:技巧 * 75 + 25) / 100
ENDIF

;調教者の指⇔奴隷のＰの汚れが移動
IF TALENT:TARGET:半人半妖 || TALENT:TARGET:オトコ  || TALENT:TARGET:ふたなり
	STAIN:PLAYER:ペニス |= STAIN:手
	STAIN:ペニス |= STAIN:PLAYER:手
;奴隷の指⇔調教者のＶの汚れが移動
ELSE
	STAIN:PLAYER:ヴァギナ |= STAIN:ペニス
	STAIN:ヴァギナ |= STAIN:PLAYER:ペニス
ENDIF

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +1
	EXP:レズ経験 += 1
	EXP:PLAYER:レズ経験 += 1
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:ＢＬ経験 += 1
	EXP:PLAYER:ＢＬ経験 += 1
ENDIF

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:21 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:21 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:21 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:21 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:21 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:21 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:20 = 600
	ELSEIF ABL:サドっ気 == 1
		SOURCE:20 = 900
	ELSEIF ABL:サドっ気 == 2
		SOURCE:20 = 1200
	ELSEIF ABL:サドっ気 == 3
		SOURCE:20 = 1600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:20 = 2000
	ELSE
		SOURCE:20 = 1000 + (ABL:サドっ気 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
;合意がないと好感度が下がる
IF TALENT:合意 == 0 && TFLAG:48 == 0
	A -= 9
	SOURCE:15 += 400
ENDIF
TFLAG:30 += A
TFLAG:37 += A / 2

;TFLAG:100 = 0

;調教者がふたなり
IF TALENT:PLAYER:ふたなり
	SOURCE:13 /= 2
ENDIF

RETURN 1

;手淫する
