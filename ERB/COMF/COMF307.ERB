@COM307B
SELECTCOM = 307
STR:0 = 櫛で梳かす
CALL TRAIN_MESSAGE_B

LOSEBASE:気力 += 60

;固定で獲得するソース
SOURCE:歓楽 = 0
SOURCE:接触 = 200

;ABL:従順をみる
IF ABL:親密 <= 1
	SOURCE:歓楽 += (ABL:親密 * 20)
ELSEIF ABL:親密 <= 3
	SOURCE:歓楽 += 100 + (ABL:親密 * 20)
ELSEIF ABL:親密 <= 5
	SOURCE:歓楽 += 200 + (ABL:親密 * 25)
ELSEIF ABL:親密 <= 8
	SOURCE:歓楽 += 300 + (ABL:親密 * 25)
ELSEIF ABL:親密 <= 11
	SOURCE:歓楽 += 500 + (ABL:親密 * 30)
ELSE
	SOURCE:歓楽 += 1000 + (ABL:親密 * 25)
ENDIF

;プレイヤーの技巧を見る
;櫛補正で+3する
A = ABL:PLAYER:技巧 + 3
IF A <= 1
	SOURCE:恭順追加 = (A * 65)
ELSEIF A <= 3
	SOURCE:恭順追加 = 200 + (A * 70)
ELSEIF A <= 5
	SOURCE:恭順追加 = 500 + (A * 70)
ELSEIF A <= 8
	SOURCE:恭順追加 = 700 + (A * 80)
ELSEIF A <= 11
	SOURCE:恭順追加 = 1000 + (A * 85)
ELSE
	SOURCE:恭順追加 = 3000 + (A * 60)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:歓楽 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:歓楽 += 500 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:歓楽 += 2000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:歓楽 < 0
	SOURCE:歓楽 = 0

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:受動 += 100 + (ABL:親密 * 20)
	ELSEIF ABL:親密 <= 3
		SOURCE:受動 += 200 + (ABL:親密 * 30)
	ELSEIF ABL:親密 <= 5
		SOURCE:受動 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 8
		SOURCE:受動 += 500 + (ABL:親密 * 80)
	ELSEIF ABL:親密 <= 11
		SOURCE:受動 += 800 + (ABL:親密 * 100)
	ELSE
		SOURCE:受動 += 1000 + (ABL:親密 * 120)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:征服 = 800
	ELSEIF ABL:サドっ気 == 1
		SOURCE:征服 = 1000
	ELSEIF ABL:サドっ気 == 2
		SOURCE:征服 = 1500
	ELSEIF ABL:サドっ気 == 3
		SOURCE:征服 = 2000
	ELSEIF ABL:サドっ気 == 4
		SOURCE:征服 = 2500
	ELSE
		SOURCE:征服 = 1000 + (ABL:サドっ気 * 400)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:6 - 1
TFLAG:30 += A

IF TFLAG:18 == -1
	TIMES SOURCE:歓楽 , 0.10
	TIMES SOURCE:恭順追加 , 0.10
	TIMES SOURCE:征服 , 0.50
	TIMES SOURCE:受動 , 0.50
	TFLAG:30 -= 10
	TFLAG:37 -= 5
ELSEIF TFLAG:18 == 0
	TIMES SOURCE:歓楽 , 1.00
	TIMES SOURCE:恭順追加 , 1.00
	TIMES SOURCE:征服 , 1.00
	TIMES SOURCE:受動 , 1.00
	TFLAG:37 += A
	;恋慕または恋人ありで愛情経験追加
	IF TALENT:恋慕 || TALENT:恋人
		EXP:愛情経験 += 1
		PRINTFORML %EXPNAME:23%+1
	ENDIF
ELSE
	TIMES SOURCE:歓楽 , 2.00
	TIMES SOURCE:恭順追加 , 2.00
	TIMES SOURCE:征服 , 2.00
	TIMES SOURCE:受動 , 2.00
	TFLAG:30 += 2
	TFLAG:37 += 5 + A
	;愛情経験追加
	IF TALENT:恋慕 || TALENT:恋人
		EXP:愛情経験 += 3
		PRINTFORML %EXPNAME:23%+3
	ELSE
		EXP:愛情経験 += 1
		PRINTFORML %EXPNAME:23%+1
	ENDIF
ENDIF


RETURN 1

