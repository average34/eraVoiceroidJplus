@COM_ABLE153
;尻子玉抜き

RETURN 0

CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;調教者がにとりでないとダメ
SIF 0
	RETURN 0
;今回の調教で既にしているとダメ
SIF TFLAG:66
	RETURN 0
;気力が０の時はダメ
SIF BASE:気力 == 0
	RETURN 0
;体力が1000以下はダメ
SIF BASE:体力 < 1000
	RETURN 0
;アナルバイブ使用中は不可
SIF TEQUIP:13
	RETURN 0
;アナルビーズ使用中は不可
SIF TEQUIP:19
	RETURN 0
;普通の浣腸使用中は不可
SIF TEQUIP:46
	RETURN 0
;空気浣腸使用中は不可
SIF TEQUIP:47
	RETURN 0
;バルーン使用中は不可
SIF TEQUIP:48
	RETURN 0
;電極使用中は不可
SIF TEQUIP:49
	RETURN 0
RETURN 1

@COM153
;尻子玉抜き
;ベースはアナル愛撫。成功判定？なにそれおいしいの
;尻子玉を抜かれると腑抜けになってしまうらしい。なってもらおうじゃないか。
;TFLAG:65を使用。参考は吸血

PRINTL 尻子玉抜き
STR:0 = 尻子玉抜き
CALL TRAIN_MESSAGE_B

LOSEBASE:体力 += 700
LOSEBASE:気力 += 3000

SOURCE:露出 = 500
SOURCE:逸脱 = 4000

;ABL:Ａ感覚をみる
IF ABL:Ａ感覚 == 0
	SOURCE:快Ａ = 30000
	SOURCE:屈従 = 3000
ELSEIF ABL:Ａ感覚 == 1
	SOURCE:快Ａ = 50000
	SOURCE:屈従 = 3500
ELSEIF ABL:Ａ感覚 == 2
	SOURCE:快Ａ = 70000
	SOURCE:屈従 = 4000
ELSEIF ABL:Ａ感覚 == 3
	SOURCE:快Ａ = 90000
	SOURCE:屈従 = 6500
ELSEIF ABL:Ａ感覚 == 4
	SOURCE:快Ａ = 110000
	SOURCE:屈従 = 10000
ELSE
	SOURCE:快Ａ = 50000 + (ABL:Ａ感覚 * 20000)
	SOURCE:屈従 = 2500 + (ABL:Ａ感覚 * 2500)
ENDIF

;EXP:Ａ経験をみる
IF EXP:Ａ経験 < EXPLV:1
	TIMES SOURCE:屈従, 0.60
	SOURCE:痛み = 500
ELSEIF EXP:Ａ経験 < EXPLV:2
	TIMES SOURCE:屈従, 0.90
	SOURCE:痛み = 400
ELSEIF EXP:Ａ経験 < EXPLV:3
	TIMES SOURCE:快Ａ , 1.00
	TIMES SOURCE:屈従, 1.00
	SOURCE:痛み = 300
ELSEIF EXP:Ａ経験 < EXPLV:4
	TIMES SOURCE:快Ａ , 1.20
	TIMES SOURCE:屈従, 1.20
	SOURCE:痛み = 200
ELSEIF EXP:Ａ経験 < EXPLV:5
	TIMES SOURCE:快Ａ , 1.60
	TIMES SOURCE:屈従, 1.60
	SOURCE:痛み = 100
ELSE
	TIMES SOURCE:快Ａ , 1.80
	TIMES SOURCE:屈従, 1.80
	SOURCE:痛み = 50
ENDIF

;PALAM:潤滑をみる
IF PALAM:潤滑 < PALAMLV:1
	TIMES SOURCE:屈従, 0.10
	TIMES SOURCE:痛み , 3.00
ELSEIF PALAM:潤滑 < PALAMLV:2
	TIMES SOURCE:屈従, 0.20
	TIMES SOURCE:痛み , 2.00
ELSEIF PALAM:潤滑 < PALAMLV:3
	TIMES SOURCE:屈従, 0.60
	TIMES SOURCE:痛み , 1.00
ELSEIF PALAM:潤滑 < PALAMLV:4
	TIMES SOURCE:屈従, 1.00
	TIMES SOURCE:痛み , 0.50
ELSEIF PALAM:潤滑 >= PALAMLV:4
	TIMES SOURCE:快Ａ , 2.00
	TIMES SOURCE:屈従, 2.00
	TIMES SOURCE:痛み , 0.10
ENDIF

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES SOURCE:屈従, 0.30
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES SOURCE:屈従, 0.60
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES SOURCE:屈従, 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES SOURCE:快Ａ , 1.30
	TIMES SOURCE:屈従, 1.30
ELSEIF PALAM:欲情 >= PALAMLV:4
	TIMES SOURCE:快Ａ , 1.60
	TIMES SOURCE:屈従, 1.60
ENDIF


;Ａ敏感、鈍感をみる
;快Ａ自体のチェックは後でまとめてやる
IF TALENT:Ａ鈍感
	TIMES SOURCE:痛み , 1.50
	TIMES SOURCE:屈従 , 1.50
	TIMES SOURCE:逸脱 , 1.50
ELSEIF TALENT:Ａ敏感
	TIMES SOURCE:痛み , 0.60
	TIMES SOURCE:屈従 , 0.60
	TIMES SOURCE:逸脱 , 0.60
ENDIF

EXP:Ａ経験 += 10
PRINTL Ａ経験＋１０

	;奴隷のＡ⇔調教者の指の汚れが移動
	STAIN:アナル |= STAIN:PLAYER:手
	STAIN:PLAYER:手 |= STAIN:アナル


IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +2
	EXP:レズ経験 += 2
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +5
	EXP:ＢＬ経験 += 5
ENDIF

TFLAG:66 += 1

RETURN 1

