@COM54
;野外プレイ

PRINTL 野外プレイ

;屋外への出入り
;終了時は修正なし
IF TEQUIP:54
	STR:0 = 野外プレイ
	CALL TRAIN_MESSAGE_B
	TEQUIP:54 = 0
	RETURN 1
ENDIF

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

STR:0 = 野外プレイ
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;実行決定
;-------------------------------------------------
;屋外への出入り
;終了時は修正なし
IF TEQUIP:54
	TEQUIP:54 = 0
	RETURN 1
ENDIF

LOSEBASE:体力 += 0
LOSEBASE:気力 += 150

A = 500
B = 500

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES A , 0.80
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES A , 0.90
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES A , 1.10
ELSEIF PALAM:欲情 >= PALAMLV:4
	TIMES A , 1.20
ENDIF
;ABL:露出癖をみる
IF ABL:露出癖 == 0
	SOURCE:中毒充足 += 0
	SOURCE:液体追加 += 0
	TIMES A, 1.00
ELSEIF ABL:露出癖 == 1
	SOURCE:中毒充足 += 50
	SOURCE:液体追加 += 50
	TIMES A, 1.20
ELSEIF ABL:露出癖 == 2
	SOURCE:中毒充足 += 150
	SOURCE:液体追加 += 150
	TIMES A, 1.40
ELSEIF ABL:露出癖 == 3
	SOURCE:中毒充足 += 400
	SOURCE:液体追加 += 400
	TIMES A, 1.60
ELSEIF ABL:露出癖 == 4
	SOURCE:中毒充足 += 750
	SOURCE:液体追加 += 750
	TIMES A, 2.00
ELSE
	SOURCE:中毒充足 += 175 + (ABL:露出癖 * 225)
	SOURCE:液体追加 += 175 + (ABL:露出癖 * 225)
	A = A * (ABL:露出癖 * 50 + 50) / 100
ENDIF
;ABL:マゾっ気をみる
IF ABL:マゾっ気 == 0
	TIMES A , 0.80
ELSEIF ABL:マゾっ気 == 1
	TIMES A , 1.00
ELSEIF ABL:マゾっ気 == 2
	TIMES A , 1.30
ELSEIF ABL:マゾっ気 == 3
	TIMES A , 1.60
ELSEIF ABL:マゾっ気 == 4
	TIMES A , 2.00
ELSE
	A = A * (ABL:マゾっ気 * 50 + 50) / 100
ENDIF

;目立ちたがり
SIF TALENT:目立ちたがり
	TIMES A , 1.50
;解放
SIF TALENT:解放
	TIMES A , 1.50

;臆病
SIF TALENT:臆病
	TIMES B , 2.00
;恥じらい
SIF TALENT:恥じらい
	TIMES B , 2.00

SOURCE:露出 += A
SOURCE:逸脱 += B
SOURCE:恭順追加 += A/2

UP:恥情 += A/2
UP:恐怖 += SOURCE:逸脱/2

TEQUIP:54 = 1


;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:受動 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:受動 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:受動 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:受動 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:受動 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:受動 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:征服 = 800
	ELSEIF ABL:サドっ気 == 1
		SOURCE:征服 = 1100
	ELSEIF ABL:サドっ気 == 2
		SOURCE:征服 = 1400
	ELSEIF ABL:サドっ気 == 3
		SOURCE:征服 = 1800
	ELSEIF ABL:サドっ気 == 4
		SOURCE:征服 = 2300
	ELSE
		SOURCE:征服 = 1000 + (ABL:サドっ気 * 350)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
;合意がないと好感度が下がる
IF TALENT:合意 == 0 && TFLAG:48 == 0
	A -= 10
	SOURCE:反感追加 += 500
ENDIF
TFLAG:30 += A
TFLAG:37 += A / 2

EXP:異常経験 += 3
PRINTFORML %EXPNAME:50%＋３

RETURN 1

