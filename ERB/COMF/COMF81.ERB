@COM81
;フィストファック
PRINTL フィストファック
STR:0 = フィストファック

;V経験を伴うコマンドのフラグ(処女膜再生対応)
TFLAG:19 = 1

LOSEBASE:0 += 600
LOSEBASE:1 += 300

SOURCE:6 = 1200
SOURCE:12 = 1200
SOURCE:13 = 1200
SOURCE:14 = 1200
SOURCE:16 = 1200


;ABL:V感覚をみる
IF ABL:4 == 0
	SOURCE:1 = 2000
ELSEIF ABL:4 == 1
	SOURCE:1 = 2500
ELSEIF ABL:4 == 2
	SOURCE:1 = 3000
ELSEIF ABL:4 == 3
	SOURCE:1 = 3300
ELSEIF ABL:4 == 4
	SOURCE:1 = 3600
ELSE
	SOURCE:1 = 3300 + (ABL:4 * 100)
ENDIF

;ABL:サドっ気をみる
IF ABL:PLAYER:15 == 0
	TIMES SOURCE:6 , 1.00
ELSEIF ABL:PLAYER:15 == 1
	TIMES SOURCE:6 , 1.05
ELSEIF ABL:PLAYER:15 == 2
	TIMES SOURCE:6 , 1.10
ELSEIF ABL:PLAYER:15 == 3
	TIMES SOURCE:6 , 1.20
ELSEIF ABL:PLAYER:15 == 4
	TIMES SOURCE:6 , 1.30
ELSE
	SOURCE:6 = SOURCE:6 * (ABL:PLAYER:15 * 5 + 125) / 100
ENDIF

;小柄体形
SIF TALENT:100
	TIMES SOURCE:6 , 2.00

IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +1
	EXP:40 += 1
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:41 += 1
ENDIF

EXP:0 += 25
PRINTL Ｖ経験＋２５

CALL EVENTKAKUTYOU_V


RETURN 1


