I = 0

;マスターの実行判定
;排卵誘発剤を使っていたら使えない
SIF TEQUIP:MASTER:86
	I |= 1
;妊娠中なら不可
SIF TALENT:MASTER:妊娠
	I |= 1
;薬毒耐性だとダメ
SIF TALENT:MASTER:薬毒耐性
	I |= 1
;オトコだとダメ
SIF TALENT:MASTER:オトコ
	I |= 1

;助手の実行判定
;助手が居るかチェック
IF ASSI < 1
	I |= 2
ELSE
	;排卵誘発剤を使っていたら使えない
	SIF TEQUIP:ASSI:86
		I |= 2
	;妊娠中なら不可
	SIF TALENT:ASSI:妊娠
		I |= 2
	;薬毒耐性だとダメ
	SIF TALENT:ASSI:薬毒耐性
		I |= 2
	;オトコだとダメ
	SIF TALENT:ASSI:オトコ
		I |= 2
ENDIF

;パートナーの実行判定
;排卵誘発剤を使っていたら使えない
SIF TEQUIP:86
	I |= 4
;妊娠中なら不可
SIF TALENT:妊娠
	I |= 4
;薬毒耐性だとダメ
SIF TALENT:薬毒耐性
	I |= 4
;オトコだとダメ
SIF TALENT:オトコ
	I |= 4
IF I == 7
	RETURN 0
ELSE
	RETURN 1
ENDIF

