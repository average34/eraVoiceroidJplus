	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;妊娠機能オンじゃないとダメ
SIF (FLAG:62 & 1) == 0
	RETURN 0
;アイテムを持っていないとダメ
SIF ITEM:緊急避妊薬 == 0
	RETURN 0
;すでに使用中なら使えない
SIF TEQUIP:87
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:90
	RETURN 0
;オトコかふたなりが居ないとダメ
