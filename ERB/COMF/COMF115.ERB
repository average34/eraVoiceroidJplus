@COM115
;お医者プレイ
;従順が低いと羞恥感が、高いと安心感を与えます。

PRINTL お医者プレイ
STR:0 = お医者プレイ

LOSEBASE:0 += 0
LOSEBASE:1 += 100


A = 200
B = 200


;PALAM:従順をみる
IF ABL:親密 == 0
	SOURCE:7 += 0
	SOURCE:10 += 0
	TIMES A, 0.30
	TIMES B, 2.00
ELSEIF ABL:親密 == 1
	SOURCE:7 += 150
	SOURCE:10 += 150
	TIMES A, 1.00
	TIMES B, 1.50
ELSEIF ABL:親密 == 2
	SOURCE:7 += 300
	SOURCE:10 += 300
	TIMES A, 1.60
	TIMES B, 1.30
ELSEIF ABL:親密 == 3
	SOURCE:7 += 500
	SOURCE:10 += 500
	TIMES A, 2.00
	TIMES B, 1.00
ELSEIF ABL:親密 == 4
	SOURCE:7 += 800
	SOURCE:10 += 800
	TIMES A, 2.60
	TIMES B, 0.30
ELSE
	SOURCE:7 += 1200
	SOURCE:10 += 1200
	TIMES A, 3.80
	TIMES B, 0.10
ENDIF

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES A , 1.00
ELSEIF PALAM:5 < PALAMLV:2
	TIMES A , 1.10
ELSEIF PALAM:5 < PALAMLV:3
	TIMES A , 1.20
ELSEIF PALAM:5 < PALAMLV:4
	TIMES A , 1.30
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES A , 1.40
ENDIF


;無関心
SIF TALENT:21
	TIMES A , 0.80
	TIMES B , 0.80
;感情乏しい
SIF TALENT:22
	TIMES A , 0.80
;好奇心
SIF TALENT:23
	TIMES A , 2.50
;解放
SIF TALENT:33
	TIMES A , 1.50

;臆病
SIF TALENT:10
	TIMES B , 1.50
;恥じらい
SIF TALENT:35
	TIMES B , 3.00

SOURCE:3 += A
SOURCE:12 += B

CALL TRAIN_MESSAGE_B

;お医者さんプレイ処理
IF TEQUIP:62
	TEQUIP:62 = 0
ELSE
	TEQUIP:62 = 1
ENDIF

RETURN 1

