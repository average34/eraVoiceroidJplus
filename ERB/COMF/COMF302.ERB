@COM302
;プレゼント
VARSET LOCAL, 0
PRINTL プレゼント

PRINTFORML 何を贈りますか？
PRINTFORML [0] スマイル（タダ）
LOCAL:0 = 1
IF MONEY >= 1000
	PRINTFORML [1] お酒($1000)
	LOCAL:1 = 1
ENDIF
IF MONEY >= 2500
	PRINTFORML [2] ゲーム($2500)
	LOCAL:2 = 1
ENDIF
IF MONEY >= 10000
	PRINTFORML [3] 小さなアクセサリ($10000)
	LOCAL:3 = 1
ENDIF
IF MONEY >= 25000
	PRINTFORML [4] 服($25000)
	LOCAL:4 = 1
ENDIF
IF MONEY >= 150000
	PRINTFORML [5] 綺麗なアクセサリ($150000)
	LOCAL:5 = 1
ENDIF
IF MONEY >= 1000000 && TALENT:恋人 && TALENT:恋慕 && TALENT:相愛 == 0 && TALENT:服従 == 0 && CFLAG:2 >= 8000 && MARK:反発感情 == 0 && ABL:親密+ABL:欲望+ABL:技巧+ABL:奉仕精神 >= 40 && FLAG:29 == 0 && ASSIPLAY == 0
	PRINTFORML [6] エンゲージリング($1000000)
	LOCAL:6 = 1
ENDIF
IF MONEY >= 300000 && (TALENT:TARGET:酒豪 || TALENT:MASTER:酒豪)
	PRINTFORML [7] 酒樽($300000)
	LOCAL:7 = 1
ENDIF

PRINTFORML [100] やっぱりやめる

INPUT
IF RESULT == 100
	PRINTFORMW プレゼントを渡すのを止めました
	RETURN 0
ELSEIF RESULT > 1000
	RESTART
ELSEIF LOCAL:RESULT == 0
	RESTART
ELSEIF RESULT == 0
	;花をプレゼント
	TFLAG:17 = 0
ELSEIF RESULT == 1
	;酒をプレゼント
	TFLAG:17 = 1
	MONEY -= 1000
	TFLAG:92 = 1
ELSEIF RESULT == 2
	;ゲームをプレゼント
	TFLAG:17 = 2
	MONEY -= 2500
ELSEIF RESULT == 3
	;アクセサリをプレゼント
	TFLAG:17 = 3
	MONEY -= 10000
ELSEIF RESULT == 4
	;服をプレゼント
	TFLAG:17 = 4
	MONEY -= 25000
ELSEIF RESULT == 5
	;凄い酒をプレゼント
	TFLAG:17 = 5
	MONEY -= 150000
	TFLAG:92 = 1
ELSEIF RESULT == 6
	;指輪をプレゼント
	TFLAG:17 = 6
	MONEY -= 1000000
ELSEIF RESULT == 7
	;酒樽をプレゼント
	TFLAG:17 = 7
	MONEY -= 300000
	TFLAG:92 = 1
ENDIF



STR:0 = プレゼント
CALL GET_SUCCESS_RATE
B = 85 + A / 10
SIF B > 99
	B = 99
A = RAND:100
IF A <= 19
	;20％で大成功
	TFLAG:18 = 1
ELSEIF A >= B
	;15～1％で失敗
	TFLAG:18 = -1
ELSE
	;残りは成功
	TFLAG:18 = 0
ENDIF

;エンゲージリングプレゼントは強制的に大成功
SIF TFLAG:17 == 6
	TFLAG:18 = 1

CALL TRAIN_MESSAGE_B

LOSEBASE:気力 += 100

;固定で獲得するソース
SOURCE:歓楽 = 200

;ABL:従順をみる
IF ABL:親密 <= 1
	SOURCE:歓楽 += (ABL:親密 * 60)
ELSEIF ABL:親密 <= 3
	SOURCE:歓楽 += 200 + (ABL:親密 * 60)
ELSEIF ABL:親密 <= 5
	SOURCE:歓楽 += 500 + (ABL:親密 * 60)
ELSEIF ABL:親密 <= 8
	SOURCE:歓楽 += 750 + (ABL:親密 * 75)
ELSEIF ABL:親密 <= 11
	SOURCE:歓楽 += 1000 + (ABL:親密 * 75)
ELSE
	SOURCE:歓楽 += 2000 + (ABL:親密 * 30)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:歓楽 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:歓楽 += 500 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:歓楽 += 2000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:歓楽 < 0
	SOURCE:歓楽 = 0

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 == 0
		SOURCE:受動 = 200
	ELSEIF ABL:親密 == 1
		SOURCE:受動 = 300
	ELSEIF ABL:親密 == 2
		SOURCE:受動 = 400
	ELSEIF ABL:親密 == 3
		SOURCE:受動 = 500
	ELSEIF ABL:親密 == 4
		SOURCE:受動 = 600
	ELSE
		SOURCE:受動 = 500 + (ABL:親密 * 50)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:征服 = 300
	ELSEIF ABL:サドっ気 == 1
		SOURCE:征服 = 400
	ELSEIF ABL:サドっ気 == 2
		SOURCE:征服 = 500
	ELSEIF ABL:サドっ気 == 3
		SOURCE:征服 = 600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:征服 = 700
	ELSE
		SOURCE:征服 = 300 + (ABL:サドっ気 * 100)
	ENDIF
ENDIF

;プレゼントの種類による分岐
;以下、好感度変化量を変数Aに記録
A = 0
TFLAG:49 = 0
IF TFLAG:17 == 0
	;花　殆ど効果は無い。会話でもしてた方がマシ。でもデート中ならまぁ……ってところ
	;好感度が一定値以下なら効果減少と共に懐疑のソースが入る
	IF CFLAG:2 < 30 && TFLAG:18 != 1
		TIMES SOURCE:歓楽 , 0.30
		TIMES SOURCE:征服 , 1.20
		TIMES SOURCE:受動 , 0.30
		SOURCE:懐疑 = 500
		A -= RAND:3 + 1
		TFLAG:49 = 1
	;好感度が一定値以上なら効果増加
	ELSEIF CFLAG:2 > 300
		TIMES SOURCE:歓楽 , 0.90
		TIMES SOURCE:征服 , 0.90
		TIMES SOURCE:受動 , 0.90
		A = RAND:5 + 1
		TFLAG:49 = 2
	ELSE
		TIMES SOURCE:歓楽 , 0.60
		TIMES SOURCE:征服 , 0.60
		TIMES SOURCE:受動 , 0.60
		A = RAND:5 - 1
	ENDIF
	
	;デート中は効果微増
	IF TEQUIP:2
		TIMES SOURCE:歓楽 , 1.10
		TIMES SOURCE:征服 , 1.10
		TIMES SOURCE:受動 , 1.10
		A += 1
		TFLAG:37 += 5
	ENDIF
ELSEIF TFLAG:17 == 1
	;酒　幻想郷の少女には非常に好まれる。でもデート中にプレゼントは流石にね……
	;好感度が一定値以下なら効果減少と共に懐疑のソースが入る
	IF (CFLAG:2 < -100) && TFLAG:18 != 1
		TIMES SOURCE:歓楽 , 0.70
		TIMES SOURCE:征服 , 2.00
		TIMES SOURCE:受動 , 0.70
		SOURCE:懐疑 = 700
		A -= RAND:3 + 1
		TFLAG:49 = 1
	;好感度が一定値以上なら効果増加
	ELSEIF CFLAG:2 > 500
		TIMES SOURCE:歓楽 , 1.70
		TIMES SOURCE:征服 , 1.70
		TIMES SOURCE:受動 , 1.70
		A = RAND:7 + 2
		TFLAG:49 = 2
	ELSE
		TIMES SOURCE:歓楽 , 1.20
		TIMES SOURCE:征服 , 1.20
		TIMES SOURCE:受動 , 1.20
		A = RAND:7
	ENDIF


	;ほろ酔い値＋
	;eratohoJ+では1しか増えてなかったが、貴重なお酒をパージしたので上方修正
	TFLAG:47 += 3
	
	;デート中は効果激減
	IF TEQUIP:2
		TIMES SOURCE:歓楽 , 0.10
		TIMES SOURCE:征服 , 0.10
		TIMES SOURCE:受動 , 0.10
		A -= 10
		TFLAG:37 -= 30
	ENDIF
ELSEIF TFLAG:17 == 2
	;日用品→ゲーム
	;少しは仲良くなっておかないと変に思われる。序盤ではそれなりの効果を発揮
	;好感度が一定値以下なら効果減少と共に懐疑のソースが入る
	IF CFLAG:2 < 150 && TFLAG:18 != 1
		TIMES SOURCE:歓楽 , 0.50
		TIMES SOURCE:征服 , 3.00
		TIMES SOURCE:受動 , 0.50
		SOURCE:懐疑 = 900
		A -= RAND:5 + 2
		TFLAG:49 = 1
	;好感度が一定値以上なら効果増加
	ELSEIF CFLAG:2 > 500
		TIMES SOURCE:歓楽 , 2.50
		TIMES SOURCE:征服 , 2.50
		TIMES SOURCE:受動 , 2.50
		A = RAND:7 + 5
		TFLAG:49 = 2
	ELSE
		TIMES SOURCE:歓楽 , 1.70
		TIMES SOURCE:征服 , 1.70
		TIMES SOURCE:受動 , 1.70
		A = RAND:5 + 3
	ENDIF
	
	;デート中は効果微増
	IF TEQUIP:2
		TIMES SOURCE:歓楽 , 1.20
		TIMES SOURCE:征服 , 1.20
		TIMES SOURCE:受動 , 1.20
		A += 2
		TFLAG:37 += 5
	ENDIF
ELSEIF TFLAG:17 == 3
	;アクセサリ　割と仲良くなっておかないと変に思われる。かなりの効果を発揮。デート中プレゼントと相性が良い
	;好感度が一定値以下なら効果減少と共に懐疑のソースが入る
	IF CFLAG:2 < 400 && TFLAG:18 != 1
		TIMES SOURCE:歓楽 , 0.70
		TIMES SOURCE:征服 , 9.00
		TIMES SOURCE:受動 , 0.70
		SOURCE:懐疑 = 1800
		A -= RAND:10 + 5
		TFLAG:49 = 1
	;好感度が一定値以上なら効果増加
	ELSEIF CFLAG:2 > 1000
		TIMES SOURCE:歓楽 , 7.00
		TIMES SOURCE:征服 , 7.00
		TIMES SOURCE:受動 , 7.00
		A = RAND:8 + 6
		TFLAG:49 = 2
	ELSE
		TIMES SOURCE:歓楽 , 5.00
		TIMES SOURCE:征服 , 5.00
		TIMES SOURCE:受動 , 5.00
		A = RAND:6 + 4
	ENDIF
	
	;デート中は効果増
	IF TEQUIP:2
		TIMES SOURCE:歓楽 , 2.00
		TIMES SOURCE:征服 , 2.00
		TIMES SOURCE:受動 , 2.00
		A += 4
		TFLAG:37 += 15
	ENDIF
ELSEIF TFLAG:17 == 4
	;服　ラブラブじゃないと変に思われる。普通の服なのか変な服なのかは妄想次第
	;好感度が一定値以下なら効果減少と共に懐疑のソースが入る
	IF CFLAG:2 < 900 && TFLAG:18 != 1
		TIMES SOURCE:歓楽 , 0.80
		TIMES SOURCE:征服 , 15.00
		TIMES SOURCE:受動 , 0.80
		SOURCE:懐疑 = 3500
		A -= RAND:15 + 10
		TFLAG:49 = 1
	;好感度が一定値以上なら効果増加
	ELSEIF CFLAG:2 > 3000
		TIMES SOURCE:歓楽 , 12.00
		TIMES SOURCE:征服 , 12.00
		TIMES SOURCE:受動 , 12.00
		A = RAND:10 + 8
		TFLAG:49 = 2
	ELSE
		TIMES SOURCE:歓楽 , 9.00
		TIMES SOURCE:征服 , 9.00
		TIMES SOURCE:受動 , 9.00
		A = RAND:8 + 6
	ENDIF
	
	;デート中は効果微増
	IF TEQUIP:2
		TIMES SOURCE:歓楽 , 1.50
		TIMES SOURCE:征服 , 1.50
		TIMES SOURCE:受動 , 1.50
		A += 3
		TFLAG:37 += 10
	ENDIF
ELSEIF TFLAG:17 == 5
	;凄いアクセサリ　絶対に喜ばれる。
	;好感度が一定値以上なら効果増加
	IF CFLAG:2 > 5000 || (TALENT:38 && TALENT:恋慕)
		TIMES SOURCE:歓楽 , 25.00
		TIMES SOURCE:征服 , 25.00
		TIMES SOURCE:受動 , 25.00
		A = RAND:16 + 15
		TFLAG:49 = 2
	ELSE
		TIMES SOURCE:歓楽 , 15.00
		TIMES SOURCE:征服 , 15.00
		TIMES SOURCE:受動 , 15.00
		A = RAND:10 + 8
	ENDIF

ELSEIF TFLAG:17 == 6
	;エンゲージリング　最強のプレゼント。デート中プレゼントと相性が良い
	;好感度が一定値以上なら効果増加
	IF CFLAG:2 > 10000
		TIMES SOURCE:歓楽 , 100.00
		TIMES SOURCE:征服 , 100.00
		TIMES SOURCE:受動 , 100.00
		A = 500
		TFLAG:49 = 2
	ELSE
		TIMES SOURCE:歓楽 , 60.00
		TIMES SOURCE:征服 , 60.00
		TIMES SOURCE:受動 , 60.00
		A = 300
	ENDIF
	
	;デート中は効果大幅増
	IF TEQUIP:2
		TIMES SOURCE:歓楽 , 3.00
		TIMES SOURCE:征服 , 3.00
		TIMES SOURCE:受動 , 3.00
		A += 100
		TFLAG:37 += 300
	ENDIF

	;強制的に大成功
	TFLAG:18 = 1

	;AをLOCALに記録
	LOCAL = A

	;カットフラグを退避
	Z:302 = CFLAG:99
	;!;LOCAL:100 = CFLAG:99
	;口上開始前の地の文をカットするか
	TFLAG:13 = 7
	CALL SELF_MAEKOJO
	;地の文章カット
	IF CFLAG:99 & 1
;		TFLAG:13 = 7
		CALL SELF_KOJO
		SIF TALENT:一線越えない
			TALENT:一線越えない = 0
		SIF TALENT:相愛 == 0
			TALENT:相愛 = 1
;		CALL SINGLE_ENDING
		CFLAG:7 = 1
		FLAG:29 = NO:TARGET
	;地の文章表示
	ELSE
		PRINTFORMW %NAME:MASTER%は%NAME:TARGET%の左手を引き寄せると、その薬指に指輪をはめてやった
;		TFLAG:13 = 7
		CALL SELF_KOJO
		PRINTFORMW %NAME:TARGET%は頬を染めて%NAME:MASTER%の気持ちを受け入れる旨を伝えた

		;一線越えない消滅
		IF TALENT:一線越えない
			PRINTFORMW その顔は今までに無く幸福に満ち、すべてを吹っ切ったように見えた
			PRINTFORMS NAME:TARGET
			PRINT は
			PRINT [
			PRINTS TALENTNAME:27
			PRINT ]
			TALENT:一線越えない = 0
			PRINTW を失った
		ENDIF
		PRINTFORMW %NAME:TARGET%と寄り添い、長い間抱擁を交し合っていた……
		;相愛取得
		IF TALENT:相愛 == 0
			PRINTFORMS NAME:TARGET
			PRINT は
			PRINT [
			PRINTS TALENTNAME:89
			PRINT ]
			TALENT:相愛 = 1
			PRINTW を得た
		ENDIF
		;売却不可フラグ
		CFLAG:7 = 1
		FLAG:29 = NO:TARGET
		IF FLAG:5 == 9 || FLAG:5 == 10 || FLAG:24 > 6
			;結婚記念日フラグ
			TIME:9 = DAY:1
			TIME:10 = DAY:2
		ENDIF
		WAIT
	ENDIF

	;Aを復帰
	A = LOCAL
	;カットフラグを戻す
	CFLAG:99 = Z:302
	;!;CFLAG:99 = LOCAL:100
;	CALL SINGLE_ENDING

ELSEIF TFLAG:17 == 7
	;酒樽を一樽丸ごとプレゼントする、酒豪もちじゃないと送る事すら思いつかない、デート中に贈ると微妙なのは普通の酒と同じ
	;好感度が一定値以上なら効果増加
	IF CFLAG:2 > 5000
		TIMES SOURCE:歓楽 , 50.00
		TIMES SOURCE:征服 , 50.00
		TIMES SOURCE:受動 , 50.00
		A = RAND:32 + 25
		TFLAG:49 = 2
	ELSE
		TIMES SOURCE:歓楽 , 30.00
		TIMES SOURCE:征服 , 30.00
		TIMES SOURCE:受動 , 30.00
		A = RAND:20 + 16
	ENDIF
	

	;ほろ酔い値＋
	TFLAG:47 += 15

	;デート中は効果激減
	IF TEQUIP:2
		TIMES SOURCE:歓楽 , 0.10
		TIMES SOURCE:征服 , 0.10
		TIMES SOURCE:受動 , 0.10
		A -= 20
		TFLAG:37 -= 30
	ENDIF
ENDIF

;好感度変化
TFLAG:30 += A

;失敗～大成功の補正
IF TFLAG:18 == -1
	TIMES SOURCE:歓楽 , 0.10
	TIMES SOURCE:征服 , 0.50
	TIMES SOURCE:受動 , 0.50
	TFLAG:30 -= 5
	TFLAG:37 -= 5
ELSEIF TFLAG:18 == 0
	TIMES SOURCE:歓楽 , 1.00
	TIMES SOURCE:征服 , 1.00
	TIMES SOURCE:受動 , 1.00
	TFLAG:37 += A
ELSE
	TIMES SOURCE:歓楽 , 2.00
	TIMES SOURCE:征服 , 2.00
	TIMES SOURCE:受動 , 2.00
	SIF TFLAG:30 <= 0
		TFLAG:30 = 1
	TFLAG:30 += 2
	TFLAG:37 += 10 + A
ENDIF

RETURN 1

