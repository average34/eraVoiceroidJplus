@COM_ABLE314
;炬燵にあたる実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中は無理
SIF TFLAG:44 == 1
	RETURN 0
;冬以外は仕舞ってある
SIF DAY:2 != 3
	RETURN 0
;デート中は無理
SIF TEQUIP:2 > 0
	RETURN 0
;着衣ローター中は無理(併用されると色々崩壊するので)
SIF TEQUIP:36 == 1
	RETURN 0
;炬燵を買ってないと実行できない
SIF ITEM:炬燵 == 0
	RETURN 0
RETURN 1

@COM314
;炬燵にあたる

IF TEQUIP:7 == 0
	PRINTL 炬燵にあたる
	STR:0 = 炬燵にあたる
ELSE
	PRINTL 炬燵から出る
	STR:0 = 炬燵から出る
ENDIF

CALL TRAIN_MESSAGE_B

LOSEBASE:体力 += 30
LOSEBASE:気力 += 50

;炬燵を出す
IF TEQUIP:7 == 0
	;ABL:親密をみる
	IF ABL:親密 <= 1
		SOURCE:歓楽 += (ABL:親密 * 60)
	ELSEIF ABL:親密 <= 3
		SOURCE:歓楽 += 50 + (ABL:親密 * 60)
	ELSEIF ABL:親密 <= 5
		SOURCE:歓楽 += 250 + (ABL:親密 * 60)
	ELSEIF ABL:親密 <= 8
		SOURCE:歓楽 += 300 + (ABL:親密 * 75)
	ELSEIF ABL:親密 <= 11
		SOURCE:歓楽 += 400 + (ABL:親密 * 75)
	ELSE
		SOURCE:歓楽 += 1000 + (ABL:親密 * 30)
	ENDIF

	;ABL:奉仕精神をみる
	IF ABL:奉仕精神 == 0
		TIMES SOURCE:歓楽 , 0.80
	ELSEIF ABL:奉仕精神 == 1
		TIMES SOURCE:歓楽 , 0.90
	ELSEIF ABL:奉仕精神 == 2
		TIMES SOURCE:歓楽 , 1.00
	ELSEIF ABL:奉仕精神 == 3
		TIMES SOURCE:歓楽 , 1.10
	ELSEIF ABL:奉仕精神 == 4
		TIMES SOURCE:歓楽 , 1.20
	ELSE
		TIMES SOURCE:歓楽 , 1.30
	ENDIF

	;主導権をチェック
	IF TFLAG:45 == 0
		;主導権が主人公側
		;ABL:親密をみる
		IF ABL:親密 <= 1
			SOURCE:受動 = 100
		ELSEIF ABL:親密 <= 2
			SOURCE:受動 = 150
		ELSEIF ABL:親密 <= 4
			SOURCE:受動 = 200
		ELSEIF ABL:親密 <= 6
			SOURCE:受動 = 250
		ELSEIF ABL:親密 <= 8
			SOURCE:受動 = 500
		ELSE
			SOURCE:受動 = 250 + (ABL:親密 * 50)
		ENDIF
	ELSE
		;主導権が相手側
		;ABL:奉仕精神をみる
		IF ABL:Ｖ感覚 == 0
			SOURCE:征服 = 100
		ELSEIF ABL:Ｖ感覚 <= 1
			SOURCE:征服 = 200
		ELSEIF ABL:Ｖ感覚 <= 3
			SOURCE:征服 = 300
		ELSEIF ABL:Ｖ感覚 <= 5
			SOURCE:征服 = 400
		ELSEIF ABL:Ｖ感覚 <= 7
			SOURCE:征服 = 500
		ELSE
			SOURCE:征服 = 100 + (ABL:Ｖ感覚 * 100)
		ENDIF
	ENDIF

	;好感度ランダム変化(雪、吹雪、細氷だと+3)
	A:1 = RAND:10 + 5 + (TIME:5 >= 5 && TIME:5 <= 8 && TIME:5 != 7) * 3
	;好感度が30以下だと好感度が下がる(一緒に入るなって事です)
	IF CFLAG:2 <= 30
		A:1 -= 9
		SOURCE:反感追加 += 1
	ENDIF

	B = 0
	T = 40
	CALL GET_EXISTANCE
	SIF E
		B += 1
	T = 71
	CALL GET_EXISTANCE
	SIF E
		B += 1
	;にとりor夢美が居ると熱源が電気式が動くようになります(普通は練炭、木炭、豆炭等)
	;修理したものを使ってもらえたので効果アップ
	IF B > 0
		;にとり、夢美がパートナーなら効果アップ
		SIF NO:TARGET == 40 || NO:TARGET == 71
			A:1 += RAND:3+1
		TFLAG:18 = 1
	ELSE
		;性能が高いので凶悪なトラップ付き
		;火傷の可能性があったり火力調整が面倒だったりで効果は落ちます
		TFLAG:18 = 0
	ENDIF

	TFLAG:30 += A:1
	TFLAG:37 += A:1 / 2
	TEQUIP:7 = 1
;炬燵を片付ける
ELSE
	TEQUIP:7 = 0
	TFLAG:37 += 1
ENDIF

RETURN 1


