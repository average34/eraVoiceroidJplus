;地の文表示
IF FLAG:6 == 1 && CFLAG:99 == 0
	;チルノとレティの場合、苦しみます
	IF NO:TARGET == 5 && NO:TARGET == 12
		PRINTFORML %CALLNAME:TARGET%は熱さに負けて逃げ出した…
	;反発感情が1以上
	ELSEIF MARK:反発感情 > 0
		PRINTFORML %CALLNAME:TARGET%一人が炬燵でぬくぬくしてます…
	ELSE
		PRINTFORML %CALLNAME:TARGET%と炬燵でぬくぬくしてます…
	ENDIF
ENDIF

;チルノとレティの場合、苦しみます
IF NO:TARGET == 5 || NO:TARGET == 12
	LOSEBASE:体力 += 55
	LOSEBASE:気力 += 100

	;ABL:マゾっ気をみる
	IF ABL:マゾっ気 == 0
		A:1 = 40
	ELSEIF ABL:マゾっ気 <= 1
		A:1 = 120
	ELSEIF ABL:マゾっ気 <= 2
		A:1 = 300
	ELSEIF ABL:マゾっ気 <= 3
		A:1 = 500
	ELSEIF ABL:マゾっ気 <= 4
		A:1 = 650
	ELSE
		A:1 = 350 + (ABL:Ｖ感覚 * 100)
	ENDIF

	;熱に弱い娘は痛みと不安を追加(にとり、夢美が居ても強化しない)
	SOURCE:痛み += A:1
	SOURCE:不安 += A:1
ELSE
	;ABL:親密をみる
	IF ABL:親密 == 0
		A:1 = 40
	ELSEIF ABL:親密 <= 1
		A:1 = 120
	ELSEIF ABL:親密 <= 2
		A:1 = 300
	ELSEIF ABL:親密 <= 3
		A:1 = 500
	ELSEIF ABL:親密 <= 4
		A:1 = 650
	ELSE
		A:1 = 350 + (ABL:Ｖ感覚 * 100)
	ENDIF
	
	B = 0
	T = 40
	CALL GET_EXISTANCE
	SIF E
		B += 1
	T = 71
	CALL GET_EXISTANCE
	SIF E
		B += 1
	;にとりor夢美が居ると熱源が電気式が動くようになります(普通は練炭、木炭、豆炭等)
	;発電方法は、色々あるので口上作者様の発想に依存
	IF B > 0
		;衣玖、空が実行者なら効果アップ
		IF NO:PLAYER == 62 || NO:PLAYER == 83
				TIMES A:1 , 1.25
		;衣玖、空がパートナーなら効果アップ
		ELSEIF NO:TARGET == 62 || NO:TARGET == 83
				TIMES A:1 , 1.20
		ELSEIF (ASSI+1) != 0
			;衣玖、空が助手に居ると効果アップ
			IF NO:ASSI == 62 || NO:ASSI == 83
				TIMES A:1 , 1.10
			ENDIF
		ENDIF

		;性能が高いので凶悪なトラップ付き
		LOSEBASE:体力 += 3
		LOSEBASE:気力 -= 60
		TFLAG:18 = 1
	ELSE
		;性能が高いので凶悪なトラップ付き
		;火傷の可能性があったり火力調整が面倒だったりで効果は落ちます
		LOSEBASE:体力 += 10
		LOSEBASE:気力 -= 50
		TFLAG:18 = 0
	ENDIF
	
	;猫舌なら効果アップ(猫科ボーナス)
	SIF TALENT:TARGET:猫舌
		TIMES A:1 , 1.3
	;雪、吹雪、細氷だと効果アップ(極寒ボーナス)
	SIF TIME:5 >= 5 && TIME:5 <= 8 && TIME:5 != 7
		TIMES A:1 , 1.5

	;通常は歓楽追加
	SOURCE:歓楽 += A:1
ENDIF

;恋慕且つ恋人
IF TALENT:恋慕 && TALENT:恋人 && ASSIPLAY == 0
	SOURCE:接触 = (RAND:5+1) * ABL:親密 + 500

	;猫舌なら効果アップ(猫科ボーナス)
	SIF TALENT:TARGET:猫舌
		TIMES SOURCE:接触 , 1.3
ENDIF

TFLAG:30 += 1
TFLAG:37 += 1

RETURN 1

