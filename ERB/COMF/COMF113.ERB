@COM113
;アナル注射
;アナルは鈍感なので痛みも少ないですが、A経験は増えないので
;そういった意味では一番使えないかもしれません

PRINTL アナル注射
STR:0 =アナル注射
CALL TRAIN_MESSAGE_B

;調合知識があれば消費を抑える
D = 0
IF TALENT:MASTER:55
	D = 1
ELSEIF ASSI >= 0
	SIF TALENT:ASSI:55
		D = 1
ENDIF

IF D
	LOSEBASE:0 += 500
	LOSEBASE:1 += 200
ELSE
	LOSEBASE:0 += 700
	LOSEBASE:1 += 300
ENDIF


SOURCE:2 = 3000
SOURCE:7 = 700
SOURCE:23 = 4000

;触手でない場合は媚薬を1個使用
SIF TEQUIP:90 == 0
	ITEM:26 -= 1

;ABL:従順をみる
IF ABL:親密 == 0
	TIMES SOURCE:23 , 2.00
ELSEIF ABL:親密 == 1
	TIMES SOURCE:23 , 1.80
ELSEIF ABL:親密 == 2
	TIMES SOURCE:23 , 1.50
ELSEIF ABL:親密 == 3
	TIMES SOURCE:23 , 1.20
ELSEIF ABL:親密 == 4
	TIMES SOURCE:23 , 1.00
ELSE
	TIMES SOURCE:23 , 0.80
ENDIF

;ABL:A感覚を見る
IF ABL:Ａ感覚 == 0
	TIMES SOURCE:2 , 0.50
ELSEIF ABL:Ａ感覚 == 1
	TIMES SOURCE:2 , 2.00
ELSEIF ABL:Ａ感覚 == 2
	TIMES SOURCE:2 , 3.00
ELSEIF ABL:Ａ感覚 == 3
	TIMES SOURCE:2 , 4.00
	EX:2 += 1
ELSEIF ABL:Ａ感覚 == 4
	TIMES SOURCE:2 , 5.00
	EX:2 += 3
ELSE
	TIMES SOURCE:2 , 6.00
	EX:2 += 5
ENDIF


;ABL:マゾっ気をみる
IF ABL:マゾっ気 == 0
	TIMES SOURCE:7 , 0.80
	TIMES LOSEBASE:0 , 1.20
ELSEIF ABL:マゾっ気 == 1
	TIMES SOURCE:7 , 1.10
	TIMES LOSEBASE:0 , 1.10
ELSEIF ABL:マゾっ気 == 2
	TIMES SOURCE:7 , 1.30
	TIMES LOSEBASE:0 , 1.00
ELSEIF ABL:マゾっ気 == 3
	TIMES SOURCE:7 , 1.50
	TIMES LOSEBASE:0 , 0.90
ELSEIF ABL:マゾっ気 == 4
	TIMES SOURCE:7 , 1.70
	TIMES LOSEBASE:0 , 0.80
ELSE
	TIMES SOURCE:7 , 2.10
	TIMES LOSEBASE:0 , 0.70
ENDIF


;PALAM:苦痛をみる
IF PALAM:9 < PALAMLV:1
	SOURCE:6 = 2700
ELSEIF PALAM:9 < PALAMLV:2
	SOURCE:6 = 3000
ELSEIF PALAM:9 < PALAMLV:3
	SOURCE:6 = 3300
ELSEIF PALAM:9 < PALAMLV:4
	SOURCE:6 = 3700
ELSEIF PALAM:9 >= PALAMLV:4
	SOURCE:6 = 4000
ENDIF

;媚薬効果を発揮
TEQUIP:21 = 1

;反抗的
SIF TALENT:11
	TIMES SOURCE:6 , 1.10

;抵抗
SIF TALENT:34
	TIMES SOURCE:6 , 1.10

;触手補正
IF TEQUIP:90
	TIMES SOURCE:6 , 0.30
	TIMES SOURCE:14 , 0.80
	LOSEBASE:0 -= 900
	LOSEBASE:1 -= 400
ENDIF

;A鈍感
IF TALENT:105
	IF ABL:Ｖ感覚 == 0
		TIMES SOURCE:2 , 0.75
	ELSEIF ABL:Ｖ感覚 == 1
		TIMES SOURCE:2 , 0.75
	ELSEIF ABL:Ｖ感覚 == 2
		TIMES SOURCE:2 , 0.75
	ELSEIF ABL:Ｖ感覚 == 3
		TIMES SOURCE:2 , 0.75
		EX:2 -= 1
	ELSEIF ABL:Ｖ感覚 == 4
		TIMES SOURCE:2 , 0.75
		EX:2 -= 1
	ELSE
		TIMES SOURCE:2 , 0.75
		EX:2 -= 1
	ENDIF
ENDIF

;A敏感
IF TALENT:106
	IF ABL:Ｖ感覚 == 0
		TIMES SOURCE:2 , 2.00
	ELSEIF ABL:Ｖ感覚 == 1
		TIMES SOURCE:2 , 2.00
	ELSEIF ABL:Ｖ感覚 == 2
		TIMES SOURCE:2 , 2.00
	ELSEIF ABL:Ｖ感覚 == 3
		TIMES SOURCE:2 , 2.00
		EX:2 += 1
	ELSEIF ABL:Ｖ感覚 == 4
		TIMES SOURCE:2 , 2.00
		EX:2 += 2
	ELSE
		TIMES SOURCE:2 , 2.00
		EX:2 += 3
	ENDIF
ENDIF


;調教者に針さばき
SIF TALENT:PLAYER:53
	TIMES SOURCE:6 , 0.90

;調合知識、治療、針さばきがあれば痛覚半減
;調合知識、治療があれば痛覚減
IF TEQUIP:90 == 0
	IF TALENT:PLAYER:55 && TALENT:PLAYER:117 && TALENT:PLAYER:53
		TIMES SOURCE:6 , 0.50
	ELSEIF TALENT:PLAYER:55 && TALENT:PLAYER:117
		TIMES SOURCE:6 , 0.70
	ENDIF
ENDIF

IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +2
	EXP:40 += 2
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +2
	EXP:41 += 2
ENDIF

SIF ASSIPLAY == 0 && ABL:マゾっ気 >= 3
	TFLAG:30 += 1

RETURN 1
