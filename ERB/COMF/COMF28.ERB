IF E >= 1
	SIF ABL:0 >= 3 && ABL:1 >= 3 && FLAG:6
		PRINTFORML %CALLNAME:TARGET%は%CALLNAME:PLAYER%の首に手を回して抱きついてきた…
	PRINTFORML 　

	;射精先タイプの設定
	TFLAG:703 = 2
	;射精先選択の可・不可
	TFLAG:704 = 0
	;汎用的な処理はこの関数で行う
