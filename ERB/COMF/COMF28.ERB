LOSEBASE:0 += 60
LOSEBASE:1 += 80

SOURCE:3 = 100
SOURCE:7 = 100
SOURCE:12 = 100

;ABL:Ａ感覚をみる
IF ABL:5 == 0
	SOURCE:2 += 10
	SOURCE:3 += 10
	SOURCE:13 += 80
ELSEIF ABL:5 == 1
	SOURCE:2 += 30
	SOURCE:3 += 130
	SOURCE:13 += 300
ELSEIF ABL:5 == 2
	SOURCE:2 += 200
	SOURCE:3 += 500
	SOURCE:13 += 700
ELSEIF ABL:5 == 3
	SOURCE:2 += 500
	SOURCE:3 += 1000
	SOURCE:13 += 1500
ELSEIF ABL:5 == 4
	SOURCE:2 += 900
	SOURCE:3 += 1500
	SOURCE:13 += 2600
ELSE
	SOURCE:2 += 650 + (ABL:5 * 250)
	SOURCE:3 += 750 + (ABL:5 * 250)
	SOURCE:13 += 500 + (ABL:5 * 700)
ENDIF

;EXP:Ａ経験をみる
IF EXP:1 < EXPLV:1
	TIMES SOURCE:2 , 0.10
	SOURCE:6 = 18000
	LOSEBASE:0 += 40
	LOSEBASE:1 += 60
ELSEIF EXP:1 < EXPLV:2
	TIMES SOURCE:2 , 0.30
	SOURCE:6 = 10000
	LOSEBASE:0 += 30
	LOSEBASE:1 += 50
ELSEIF EXP:1 < EXPLV:3
	TIMES SOURCE:2 , 0.50
	SOURCE:6 = 4500
	LOSEBASE:0 += 20
	LOSEBASE:1 += 40
ELSEIF EXP:1 < EXPLV:4
	TIMES SOURCE:2 , 1.00
	SOURCE:6 = 1500
	LOSEBASE:0 += 10
	LOSEBASE:1 += 30
ELSEIF EXP:1 < EXPLV:5
	TIMES SOURCE:2 , 1.40
	SOURCE:6 = 700
	LOSEBASE:0 += 0
	LOSEBASE:1 += 20
ELSE
	TIMES SOURCE:2 , 1.60
	SOURCE:6 = 300
	LOSEBASE:0 += 0
	LOSEBASE:1 += 0
ENDIF

;PALAM:潤滑をみる
IF PALAM:3 < PALAMLV:1
	TIMES SOURCE:2 , 0.40
	SOURCE:6 += 10000
ELSEIF PALAM:3 < PALAMLV:2
	TIMES SOURCE:2 , 0.80
	SOURCE:6 += 3600
ELSEIF PALAM:3 < PALAMLV:3
	TIMES SOURCE:2 , 1.00
	SOURCE:6 += 1200
ELSEIF PALAM:3 < PALAMLV:4
	TIMES SOURCE:2 , 1.40
	SOURCE:6 += 200
ELSEIF PALAM:3 >= PALAMLV:4
	TIMES SOURCE:2 , 1.80
	SOURCE:6 += 100
ENDIF

;ABL:奉仕精神をみる
IF ABL:6 == 0
	SOURCE:4 = 50
	SOURCE:5 = 10
	SOURCE:16 = 100
	TIMES SOURCE:8 , 4.00
ELSEIF ABL:6 == 1
	SOURCE:4 = 150
	SOURCE:5 = 50
	SOURCE:16 = 300
	TIMES SOURCE:8 , 2.50
ELSEIF ABL:6 == 2
	SOURCE:4 = 300
	SOURCE:5 = 100
	SOURCE:16 = 700
	TIMES SOURCE:8 , 1.50
ELSEIF ABL:6 == 3
	SOURCE:4 = 400
	SOURCE:5 = 200
	SOURCE:16 = 1200
	TIMES SOURCE:8 , 1.00
ELSEIF ABL:6 == 4
	SOURCE:4 = 500
	SOURCE:5 = 300
	SOURCE:16 = 1800
	TIMES SOURCE:8 , 0.50
ELSE
	SOURCE:4 = 50 + (ABL:6 * 150)
	SOURCE:5 = ABL:6 * 100
	SOURCE:16 = 750 + (ABL:6 * 350)
	TIMES SOURCE:8 , 0.10
ENDIF

;PALAM:潤滑をみる
IF PALAM:3 < PALAMLV:1
	TIMES SOURCE:2 , 0.40
	SOURCE:6 += 10000
ELSEIF PALAM:3 < PALAMLV:2
	TIMES SOURCE:2 , 0.80
	SOURCE:6 += 3600
ELSEIF PALAM:3 < PALAMLV:3
	TIMES SOURCE:2 , 1.00
	SOURCE:6 += 1200
ELSEIF PALAM:3 < PALAMLV:4
	TIMES SOURCE:2 , 1.40
	SOURCE:6 += 200
ELSEIF PALAM:3 >= PALAMLV:4
	TIMES SOURCE:2 , 1.80
	SOURCE:6 += 100
ENDIF

;調教者がふたなり
IF ASSIPLAY
	SIF TALENT:ASSI:121
		TIMES SOURCE:1 , 2.50
ENDIF

;小柄体形
SIF TALENT:100
	TIMES SOURCE:6 , 2.00

;貞操観念
IF TALENT:30
	IF EXP:1 == 0
		TIMES SOURCE:3 , 1.20
		TIMES SOURCE:16 , 1.10
		SOURCE:15 = 500
	ELSE
		TIMES SOURCE:3 , 1.20
		TIMES SOURCE:16 , 1.10
		SOURCE:15 = 0
	ENDIF
ENDIF

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES SOURCE:2 , 0.60
	TIMES SOURCE:13 , 0.60
ELSEIF PALAM:5 < PALAMLV:2
	TIMES SOURCE:2 , 0.80
	TIMES SOURCE:13 , 0.80
ELSEIF PALAM:5 < PALAMLV:3
	TIMES SOURCE:2 , 1.00
	TIMES SOURCE:13 , 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES SOURCE:2 , 1.20
	TIMES SOURCE:13 , 1.20
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES SOURCE:2 , 1.40
	TIMES SOURCE:13 , 1.40
ENDIF

;ABL:従順をみる
IF ABL:0 == 0
	TIMES SOURCE:3 , 0.60
	TIMES SOURCE:15 , 2.00
ELSEIF ABL:0 == 1
	TIMES SOURCE:3 , 0.80
	TIMES SOURCE:15 , 1.50
ELSEIF ABL:0 == 2
	TIMES SOURCE:3 , 1.00
	TIMES SOURCE:15 , 1.00
ELSEIF ABL:0 == 3
	TIMES SOURCE:3 , 1.20
	TIMES SOURCE:15 , 0.80
ELSEIF ABL:0 == 4
	TIMES SOURCE:3 , 1.40
	TIMES SOURCE:15 , 0.60
ELSE
	SOURCE:3 = SOURCE:3 * (ABL:0 * 10 + 110) / 100
	TIMES SOURCE:15 , 0.30
ENDIF

;プレイヤーのABL:技巧をみる
IF ABL:PLAYER:2 == 0
	SOURCE:3 += 100
	SOURCE:10 += 0
	A = 0
ELSEIF ABL:PLAYER:2 == 1
	SOURCE:3 += 150
	SOURCE:10 += 50
	A = 0
ELSEIF ABL:PLAYER:2 == 2
	SOURCE:3 += 200
	SOURCE:10 = 100
	A = 0
ELSEIF ABL:PLAYER:2 == 3
	SOURCE:3 += 300
	SOURCE:10 += 150
	A = 50
ELSEIF ABL:PLAYER:2 == 4
	SOURCE:3 += 500
	SOURCE:10 += 250
	A = 100
ELSE
	SOURCE:3 += 50 + (ABL:PLAYER:2 * 150)
	SOURCE:10 += 25 + (ABL:PLAYER:2 * 75)
	A = (ABL:PLAYER:2 * 100) - 200
ENDIF

SOURCE:0 += A


;TALENT:恋慕をみる
SIF TALENT:85
	TIMES SOURCE:3 , 3.00
	TIMES SOURCE:7 , 2.00
	TIMES SOURCE:16 , 2.00

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:0 <= 1
		SOURCE:21 += 300 + (ABL:0 * 50)
	ELSEIF ABL:0 <= 3
		SOURCE:21 += 600 + (ABL:0 * 100)
	ELSEIF ABL:0 <= 5
		SOURCE:21 += 800 + (ABL:0 * 120)
	ELSEIF ABL:0 <= 8
		SOURCE:21 += 1000 + (ABL:0 * 140)
	ELSEIF ABL:0 <= 11
		SOURCE:21 += 1200 + (ABL:0 * 160)
	ELSE
		SOURCE:21 += 1500 + (ABL:0 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:15 == 0
		SOURCE:20 = 600
	ELSEIF ABL:15 == 1
		SOURCE:20 = 900
	ELSEIF ABL:15 == 2
		SOURCE:20 = 1200
	ELSEIF ABL:15 == 3
		SOURCE:20 = 1600
	ELSEIF ABL:15 == 4
		SOURCE:20 = 2000
	ELSE
		SOURCE:20 = 1000 + (ABL:15 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
SIF TALENT:85 || TALENT:153
	A += 5
SIF TALENT:88
	A += 5
;合意がないと好感度が下がる
IF TALENT:152 == 0 && TFLAG:48 == 0
	A -= 10
	SOURCE:15 += 500
ENDIF
TFLAG:30 += A
TFLAG:37 += A / 2

EXP:1 += 2
PRINTL Ａ経験＋２

;異常経験増加
EXP:50 += 1
PRINTFORML %EXPNAME:50%＋１

;既成事実3に相当
TFLAG:200 = 3

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK
;;オーバーフロー対策に、値が大きすぎる場合と、負の場合は調整を加える
;IF BASE:PLAYER:2 > 100000000 || BASE:PLAYER:2 < 0
