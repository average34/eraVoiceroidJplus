IF TEQUIP:92 == 1
	IF 0
		PRINTFORML %CALLNAME:TARGET%を蟲達の中から引っ張り出すと、複雑そうな顔をしていた…
	ELSE
		PRINTFORML %CALLNAME:TARGET%を蟲達の中から救い出すと、ほっとしたような顔をしていた
	ENDIF
	TEQUIP:92 = 0

ELSE
	PRINTFORML 無数の蟲達がうごめく風呂桶に%CALLNAME:TARGET%を突き落とすと
	IF 0
		PRINTFORML 一瞬驚いたような声をあげたものの、すぐに平静を取り戻していた。
	ELSE
		PRINTFORML %CALLNAME:TARGET%は声にならない悲鳴をあげていた…
	ENDIF
	TEQUIP:92 = 1

	A = 100
	IF EXP:50 < EXPLV:1
		TIMES A , 3.00
	ELSEIF EXP:50 < EXPLV:2
		TIMES A , 2.50
	ELSEIF EXP:50 < EXPLV:3
		TIMES A , 2.00
	ELSEIF EXP:50 < EXPLV:4
		TIMES A , 1.00
	ELSEIF EXP:50 < EXPLV:5
		TIMES A , 0.80
	ELSE
		TIMES A , 0.60
	ENDIF

	;臆病
	SIF TALENT:10
		TIMES A , 2.00

	;感情乏しい
	SIF TALENT:22
		TIMES A , 0.60
	
	;虫キャラ、いまのところいない
	;IF NO:TARGET == 24 && NO:TARGET == 78
	IF 0
		TIMES A , 0.30
		SIF A <= 8
			A = 8
	ELSE
		SOURCE:15 = 25000
	ENDIF

	IF NO:TARGET == 24 && NO:TARGET == 78
		LOSEBASE:0 += A / 4
		LOSEBASE:1 += A / 2
		UP:10 += A * 20
		SOURCE:14 += A * 3
	ELSE
		LOSEBASE:0 += A / 2
		LOSEBASE:1 += A
		UP:10 += A * 30
		SOURCE:14 += A * 10
	ENDIF

	
	
	;既成事実２に相当
	TFLAG:200 = 2
	
	IF EXP:50 > 7
		EXP:50 += 2
		PRINTL 異常経験＋２
	ENDIF
	
ENDIF
T = 0
RETURN 1


@EQUIP_COM92
;触手調教中
PRINTL ＜蟲風呂入浴中＞

A = 100
IF EXP:50 < EXPLV:1
	TIMES A , 3.00
ELSEIF EXP:50 < EXPLV:2
	TIMES A , 2.50
ELSEIF EXP:50 < EXPLV:3
	TIMES A , 2.00
ELSEIF EXP:50 < EXPLV:4
	TIMES A , 1.00
ELSEIF EXP:50 < EXPLV:5
	TIMES A , 0.80
ELSE
	TIMES A , 0.60
ENDIF

;臆病
SIF TALENT:10
	TIMES A , 2.00

;感情乏しい
SIF TALENT:22
	TIMES A , 0.60

;虫キャラ
IF 0
	TIMES A , 0.30
	SIF A <= 8
		A = 8
ELSE
	SOURCE:15 += 5000
ENDIF

IF NO:TARGET == 24 && NO:TARGET == 78
	LOSEBASE:0 += A / 8
	LOSEBASE:1 += A / 4
	UP:10 += A * 20
	SOURCE:8 += A * 6
	SOURCE:14 += A * 3
ELSE
	LOSEBASE:0 += A / 4
	LOSEBASE:1 += A / 2
	UP:10 += A * 30
	SOURCE:8 += A * 10
	SOURCE:14 += A * 15
ENDIF

SOURCE:10 += 1000

TIMES SOURCE:0 , 2.00
TIMES SOURCE:1 , 2.00
TIMES SOURCE:2 , 2.00
TIMES SOURCE:17 , 2.00
TIMES SOURCE:13 , 1.80


;何が出るかな？(ランダムでイベントが発生するのもありかな？と思って作ってみた)
;基本虫好きキャラ以外で[感情乏しい]、[狂気]を持っていないキャラの恐怖が一定以上溜まった場合低確率で発動
IF TALENT:22 == 0 && TALENT:123 == 0 && PALAM:10 > PALAMLV:4
	IF RAND:25 == 0
		L = RAND:10
		IF L == 0
			PRINTFORML %CALLNAME:TARGET%はあまりの恐怖に理性のタガが外れてしまった……
			PRINTFORMW %CALLNAME:TARGET%は発狂した
			TALENT:TARGET:123 = 1
		ELSEIF (L == 1 || L == 2) && MARK:3 > 2
			PRINTFORML %CALLNAME:TARGET%はあまりの恐怖に反抗する気力を失ったようだ……
			PRINTW 反発刻印がLV2に下がった
			MARK:3 = 2
		ELSEIF (L > 2 && L < 6) && BASE:0 >= 500
			PRINTFORM %CALLNAME:TARGET%はあまりの恐怖に気力が一気に消耗したようだ……
			BASE:1 = 0
		ELSEIF L >= 6 && TALENT:10 == 0 && BASE:0 >= 500
			PRINTFORML %CALLNAME:TARGET%はあまりの恐怖に蟲風呂がトラウマとなったようだ……
			IF TALENT:131 == 0 && L == 9
				PRINTFORML %CALLNAME:TARGET%は[幼児退行]してしまった
				TALENT:TARGET:131 = 1
			ENDIF
			PRINTFORMW %CALLNAME:TARGET%は[臆病]になった
			TALENT:TARGET:10 = 1
		ELSEIF L >= 8 && TALENT:10 && TALENT:131 == 0 && BASE:0 >= 500
			PRINTFORML %CALLNAME:TARGET%はあまりの恐怖に蟲風呂がトラウマとなったようだ……
			PRINTFORML %CALLNAME:TARGET%は[幼児退行]してしまった
			TALENT:TARGET:131 = 1
		ENDIF
	ENDIF
ENDIF

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
IF MAXBASE:PLAYER:4 != 0

	B = 0
	;ABL:技巧をみる
	IF ABL:技巧 == 0
		B = 500
	ELSEIF ABL:技巧 == 1
		B = 600
	ELSEIF ABL:技巧 == 2
		B = 800
	ELSEIF ABL:技巧 == 3
		B = 1000
	ELSEIF ABL:技巧 == 4
		B = 1400
	ELSE
		B = 2000
	ENDIF

	;ABL:従順をみる
	IF ABL:親密 == 0
		TIMES B , 0.80
	ELSEIF ABL:親密 == 1
		TIMES B , 0.90
	ELSEIF ABL:親密 == 2
		TIMES B , 1.00
	ELSEIF ABL:親密 == 3
		TIMES B , 1.10
	ELSEIF ABL:親密 == 4
		TIMES B , 1.20
	ELSE
		TIMES B , 1.30
	ENDIF

	;PALAM:欲情をみる
	IF PALAM:5 < PALAMLV:1
		TIMES B , 1.00
	ELSEIF PALAM:5 < PALAMLV:2
		TIMES B , 1.10
	ELSEIF PALAM:5 < PALAMLV:3
		TIMES B , 1.20
	ELSEIF PALAM:5 < PALAMLV:4
		TIMES B , 1.30
	ELSEIF PALAM:5 < PALAMLV:5
		TIMES B , 1.40
	ELSE
		TIMES B , 1.50
	ENDIF

	BASE:PLAYER:4 += B

	S = BASE:PLAYER:4
	EJAC = MAXBASE:PLAYER:4

	IF  S > EJAC * 2
		E = 2
	ELSEIF S > EJAC
		E = 1
	ELSE
		E = 0
	ENDIF

	;大量射精
	IF E == 2
		EXP:20 += 3
		PRINTL 淫蟲大量射精
		PRINTL 精液経験＋３
		T += 1

		SOURCE:11 += EJAC*2

		BASE:PLAYER:4 -= EJAC*2
		SIF BASE:PLAYER:4 >= EJAC
			BASE:PLAYER:4 = EJAC-1
	
	;通常の射精
	ELSEIF E == 1
		EXP:20 += 1
		PRINTL 淫蟲射精
		PRINTL 精液経験＋１
		T += 1

		SOURCE:11 += EJAC

		BASE:PLAYER:4 -= EJAC
		SIF BASE:PLAYER:4 >= EJAC
			BASE:PLAYER:4 = EJAC-1
	ENDIF
ENDIF

RETURN 1
