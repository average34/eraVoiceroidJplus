@COM150
;吸血する
PRINTL 吸血

;ベースは針。成功判定は主に足コキから。
;TFLAG:65とEXP:吸血経験、EXP:被吸血経験を使用します

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

STR:0 = 吸血
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;実行決定
;-------------------------------------------------

LOSEBASE:体力 += 50
LOSEBASE:気力 += 150

SOURCE:屈従 = 1000
SOURCE:逸脱 = 4000
SOURCE:欲情追加 = 1000
SOURCE:恭順追加 = 1000
SOURCE:不安 = 1000

;PALAM:苦痛をみる
IF PALAM:9 < PALAMLV:1
	SOURCE:痛み = 2000
ELSEIF PALAM:9 < PALAMLV:2
	SOURCE:痛み = 2300
ELSEIF PALAM:9 < PALAMLV:3
	SOURCE:痛み = 2600
ELSEIF PALAM:9 < PALAMLV:4
	SOURCE:痛み = 2850
ELSEIF PALAM:9 >= PALAMLV:4
	SOURCE:痛み = 3000
ENDIF

;被吸血経験を見る
IF EXP:被吸血経験 < EXPLV:1
	TIMES SOURCE:屈従 , 0.10
	TIMES SOURCE:逸脱 , 2.50
	TIMES SOURCE:欲情追加 , 0.00
	TIMES SOURCE:恭順追加 , 0.00
	TIMES SOURCE:不安 , 2.00
ELSEIF EXP:被吸血経験 < EXPLV:2
	TIMES SOURCE:屈従 , 1.00
	TIMES SOURCE:逸脱 , 1.00
	TIMES SOURCE:欲情追加 , 1.00
	TIMES SOURCE:恭順追加 , 0.50
	TIMES SOURCE:不安 , 0.80
ELSEIF EXP:被吸血経験 < EXPLV:3
	TIMES SOURCE:屈従 , 2.00
	TIMES SOURCE:逸脱 , 0.25
	TIMES SOURCE:欲情追加 , 10.0
	TIMES SOURCE:恭順追加 , 5.00
	TIMES SOURCE:不安 , 0.15
ELSE
	TIMES SOURCE:屈従 , 5.00
	TIMES SOURCE:逸脱 , 0.00
	TIMES SOURCE:欲情追加 , 20.0
	TIMES SOURCE:恭順追加 , 10.0
	TIMES SOURCE:不安 , 0.00
ENDIF

;調教者の技巧LVをみる
IF ABL:PLAYER:技巧 < 1
	TIMES SOURCE:痛み , 2.00
ELSEIF ABL:PLAYER:技巧 < 2
	TIMES SOURCE:痛み , 1.75
ELSEIF ABL:PLAYER:技巧 < 3
	TIMES SOURCE:痛み , 1.50
ELSEIF ABL:PLAYER:技巧 < 4
	TIMES SOURCE:痛み , 1.25
ELSEIF ABL:PLAYER:技巧 < 5
	TIMES SOURCE:痛み , 1.00
ELSE
	;下がり過ぎないようにする
	IF ABL:PLAYER:技巧 <= 10
		SOURCE:痛み = SOURCE:痛み * (100 - ABL:PLAYER:技巧 * 5) / 100
	ELSE
		TIMES SOURCE:痛み , 0.50
	ENDIF
ENDIF

;調教者の吸血経験を見る
IF EXP:PLAYER:吸血経験 < EXPLV:1
	TIMES SOURCE:痛み , 1.20
ELSEIF EXP:PLAYER:吸血経験 < EXPLV:2
	TIMES SOURCE:痛み , 1.00
ELSEIF EXP:PLAYER:吸血経験 < EXPLV:3
	TIMES SOURCE:痛み , 0.80
ELSE
	TIMES SOURCE:痛み , 0.50
ENDIF

;狂気(むしろ妹様かどうか、か)
IF TALENT:PLAYER:狂気
	TIMES SOURCE:痛み , 5.00
	LOSEBASE:体力 += 450
	LOSEBASE:気力 += 350
ENDIF

;主人が吸うときに好感度がバカみたいに高いと情愛追加
;恭順追加に補正掛ける方が良いのかな
IF CFLAG:2 > 10000 && ASSIPLAY == 0
	SOURCE:情愛 += 1000 + (CFLAG:2 - 10000) / 50
	;相愛
	SIF TALENT:相愛
		TIMES SOURCE:情愛 , 3.00
ENDIF

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:受動 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:受動 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:受動 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:受動 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:受動 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:受動 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:征服 = 600
	ELSEIF ABL:サドっ気 == 1
		SOURCE:征服 = 900
	ELSEIF ABL:サドっ気 == 2
		SOURCE:征服 = 1200
	ELSEIF ABL:サドっ気 == 3
		SOURCE:征服 = 1600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:征服 = 2000
	ELSE
		SOURCE:征服 = 1000 + (ABL:サドっ気 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
SIF TALENT:恋慕 || TALENT:恋人
	A += 5
SIF TALENT:親愛
	A += 5
;合意がないと好感度が下がる
IF TALENT:合意 == 0 && TFLAG:48 == 0
	A -= 9
	SOURCE:反感追加 += 400
ENDIF
TFLAG:30 += A
TFLAG:37 += A / 2

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +2
	EXP:レズ経験 += 2
	EXP:PLAYER:レズ経験 += 2
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +2
	EXP:ＢＬ経験 += 2
	EXP:PLAYER:ＢＬ経験 += 2
ENDIF


EXP:PLAYER:吸血経験 += 1

EXP:被吸血経験 += 1
PRINTFORML %EXPNAME:57%+1

EXP:異常経験 += 5
PRINTFORML %EXPNAME:50%+5

IF ASSIPLAY
	TFLAG:65 |= 2
ELSE
	TFLAG:65 |= 1
ENDIF

RETURN 1

