ENDIF

CALL TRAIN_MESSAGE_B

;女体盛り終了
IF TEQUIP:69
	TEQUIP:69 = 0
	LOSEBASE:0 += 15
	LOSEBASE:1 += 50
	A = ABL:1
	B = ABL:7
	SOURCE:11 = A * 300
	SOURCE:12 = B * 500
	TFLAG:77 = 0
	RETURN 1
ENDIF

LOSEBASE:0 += 20
LOSEBASE:1 += 50

A = 500
B = 500
C = 0
D = 0
E = ABL:MASTER:2 + ABL:ASSI:2
SIF ABL:MASTER:90 > 0
	C = ABL:MASTER:90
SIF ABL:ASSI:90 > 0
	D = ABL:ASSI:90
F = C+D


SIF TFLAG:77 == 1
	TIMES A , 1.50
SIF TFLAG:77 == 2
	TIMES B , 1.50

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES A , 0.80
ELSEIF PALAM:5 < PALAMLV:2
	TIMES A , 0.90
ELSEIF PALAM:5 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES A , 1.10
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES A , 1.20
ENDIF
;ABL:露出癖をみる
IF ABL:7 == 0
	SOURCE:7 += 0
	SOURCE:10 += 0
	TIMES A, 1.00
ELSEIF ABL:7 == 1
	SOURCE:7 += 50
	SOURCE:10 += 50
	TIMES A, 1.20
ELSEIF ABL:7 == 2
	SOURCE:7 += 150
	SOURCE:10 += 150
	TIMES A, 1.40
ELSEIF ABL:7 == 3
	SOURCE:7 += 400
	SOURCE:10 += 400
	TIMES A, 1.60
ELSEIF ABL:7 == 4
	SOURCE:7 += 750
	SOURCE:10 += 750
	TIMES A, 2.00
ELSE
	SOURCE:7 += 1300
	SOURCE:10 += 1300
	TIMES A, 3.00
ENDIF
;ABL:マゾっ気をみる
IF ABL:8 == 0
	TIMES A , 0.80
ELSEIF ABL:8 == 1
	TIMES A , 1.00
ELSEIF ABL:8 == 2
	TIMES A , 1.30
ELSEIF ABL:8 == 3
	TIMES A , 1.60
ELSEIF ABL:8 == 4
	TIMES A , 2.00
ELSE
	TIMES A , 3.00
ENDIF

;目立ちたがり
SIF TALENT:28
	TIMES A , 1.50
;解放
SIF TALENT:33
	TIMES A , 1.50
;臆病
SIF TALENT:10
	TIMES B , 2.00
;恥じらい
SIF TALENT:35
	TIMES B , 2.00

SOURCE:12 += A
SOURCE:14 += B
SOURCE:16 += A/2

UP:8 += A/2
UP:10 += (SOURCE:14)/2

IF F > 0
	IF F > 8 && ABL:PLAYER:90 >= 4
		JUEL:ASSI:7 += 500 * F
		EXP:ASSI:90 += F
		EXP:MASTER:90 += F
		PRINTFORML %CALLNAME:ASSI%の%PALAMNAME:4%の珠＋{500*F}
		PRINTFORML %CALLNAME:ASSI%の%EXPNAME:90%＋{F}
		PRINTFORML %CALLNAME:MASTER%の%EXPNAME:90%＋{F}
	ELSEIF F > 6 && ABL:PLAYER:90 >= 3
		JUEL:ASSI:7 += 300 * F
		EXP:ASSI:90 += F/2
		EXP:MASTER:90 += F/2
		PRINTFORML %CALLNAME:ASSI%の%PALAMNAME:4%の珠＋{300*F}
		PRINTFORML %CALLNAME:ASSI%の%EXPNAME:90%＋{F/2}
		PRINTFORML %CALLNAME:MASTER%の%EXPNAME:90%＋{F/2}
	ELSEIF F > 4 && ABL:PLAYER:90 >= 2
		JUEL:ASSI:7 += 200 * F
		EXP:ASSI:90 += F/2
		EXP:MASTER:90 += F/2
		PRINTFORML %CALLNAME:ASSI%の%PALAMNAME:4%の珠＋{200*F}
		PRINTFORML %CALLNAME:ASSI%の%EXPNAME:90%＋{F/2}
		PRINTFORML %CALLNAME:MASTER%の%EXPNAME:90%＋{F/2}
	ELSE
		JUEL:ASSI:7 += 100 * F
		EXP:ASSI:90 += F/2
		EXP:MASTER:90 += F/2
		PRINTFORML %CALLNAME:ASSI%の%PALAMNAME:4%の珠＋{100*F}
		PRINTFORML %CALLNAME:ASSI%の%EXPNAME:90%＋{F/2}
		PRINTFORML %CALLNAME:MASTER%の%EXPNAME:90%＋{F/2}
	ENDIF
ELSE
	JUEL:ASSI:7 += 10 * (E+1)
	EXP:ASSI:90 += 1
	EXP:MASTER:90 += 1
	PRINTFORML %CALLNAME:ASSI%の%PALAMNAME:4%の珠＋{10*(E+1)}
	PRINTFORML %CALLNAME:ASSI%の%EXPNAME:90%＋１
	PRINTFORML %CALLNAME:MASTER%の%EXPNAME:90%＋１
ENDIF

ITEM:30 -= 1
TEQUIP:69 = 1

RETURN 1

