	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:征服 = 500
	ELSEIF ABL:サドっ気 == 1
		SOURCE:征服 = 700
	ELSEIF ABL:サドっ気 == 2
		SOURCE:征服 = 900
	ELSEIF ABL:サドっ気 == 3
		SOURCE:征服 = 1100
	ELSEIF ABL:サドっ気 == 4
		SOURCE:征服 = 1300
	ELSE
