		SOURCE:受動 = 100
	ELSEIF ABL:親密 == 1
		SOURCE:受動 = 200
	ELSEIF ABL:親密 == 2
		SOURCE:受動 = 350
	ELSEIF ABL:親密 == 3
		SOURCE:受動 = 500
	ELSEIF ABL:親密 == 4
		SOURCE:受動 = 700
	ELSE
		SOURCE:受動 = 1000 + (ABL:親密 * 100)
	ENDIF
ELSE
