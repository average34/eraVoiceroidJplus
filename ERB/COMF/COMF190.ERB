ELSEIF ABL:奉仕精神 == 3
	SOURCE:情愛 = 150
ELSEIF ABL:奉仕精神 == 4
	SOURCE:情愛 = 230
ELSE
	SOURCE:情愛 = 200 + (ABL:奉仕精神 * 20)
ENDIF

;ABL:従順をみる
IF ABL:親密 <= 1
	SOURCE:接触 += (ABL:親密 * 30)
ELSEIF ABL:親密 <= 3
	SOURCE:歓楽 += 100 + (ABL:親密 * 40)
	SOURCE:接触 += 200 + (ABL:親密 * 30)
ELSEIF ABL:親密 <= 5
