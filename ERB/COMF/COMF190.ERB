ENDIF
;好感度が低いと好感度低下
IF CFLAG:2 <= 50
	A -= 3
ELSEIF CFLAG:2 <= 100
	A -= 2
ELSEIF CFLAG:2 <= 250
	A -= 1
ENDIF

;連続実行ならパワーうｐでソースを追加
IF TFLAG:18
	TIMES SOURCE:歓楽 , 1.20
	TIMES SOURCE:接触 , 2.00
	TIMES SOURCE:征服 , 1.50
	TIMES SOURCE:受動 , 1.50
	SOURCE:情愛 += SOURCE:接触 / 10
	A += 2
ENDIF


;好感度変化
TFLAG:30 += A


TFLAG:37 += A

RETURN 1



