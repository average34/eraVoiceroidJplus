;終了時は修正なし
IF TEQUIP:59
	TEQUIP:59 = 0
	RETURN 1
ENDIF

LOSEBASE:体力 += 0
LOSEBASE:気力 += 100


A = 500
B = 100

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES A , 1.00
ELSEIF PALAM:5 < PALAMLV:2
	TIMES A , 1.10
ELSEIF PALAM:5 < PALAMLV:3
	TIMES A , 1.20
ELSEIF PALAM:5 < PALAMLV:4
	TIMES A , 1.30
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES A , 1.40
ENDIF

;ABL:露出癖をみる
IF ABL:露出癖 == 0
	SOURCE:欲情追加 += 0
	SOURCE:液体追加 += 0
	SOURCE:露出 += 100
	SOURCE:逸脱 += 100
	SOURCE:反感追加 += 100
	TIMES A, 0.60
ELSEIF ABL:露出癖 == 1
	SOURCE:欲情追加 += 50
	SOURCE:液体追加 += 150
	SOURCE:露出 += 500
	SOURCE:逸脱 += 300
	TIMES A, 1.00
ELSEIF ABL:露出癖 == 2
	SOURCE:欲情追加 += 100
	SOURCE:液体追加 += 300
	SOURCE:露出 += 100
	SOURCE:逸脱 += 50
	TIMES A, 1.60
ELSEIF ABL:露出癖 == 3
	SOURCE:欲情追加 += 150
	SOURCE:液体追加 += 600
	SOURCE:露出 += 50
	SOURCE:逸脱 += 0
	TIMES A, 2.00
ELSEIF ABL:露出癖 == 4
	SOURCE:欲情追加 += 200
	SOURCE:液体追加 += 1000
	SOURCE:露出 += 0
	SOURCE:逸脱 += 0
	TIMES A, 2.60
ELSE
	SOURCE:欲情追加 += 50 + (ABL:露出癖 * 50)
	SOURCE:液体追加 += (ABL:露出癖 * 500) - 500
	SOURCE:露出 += 0
	SOURCE:逸脱 += 0
	A = A * (ABL:露出癖 * 60 + 80) / 100
ENDIF
;ABL:従順をみる
IF ABL:親密 == 0
	TIMES A , 1.00
ELSEIF ABL:親密 == 1
	TIMES A , 1.20
ELSEIF ABL:親密 == 2
	TIMES A , 1.40
ELSEIF ABL:親密 == 3
	TIMES A , 1.60
ELSEIF ABL:親密 == 4
	TIMES A , 1.80
ELSE
	A = A * (ABL:親密 * 10 + 100) / 100
ENDIF

;ABL:奉仕精神をみる
IF ABL:奉仕精神 == 0
	TIMES A , 1.00
ELSEIF ABL:奉仕精神 == 1
	TIMES A , 1.20
ELSEIF ABL:奉仕精神 == 2
	TIMES A , 1.40
ELSEIF ABL:奉仕精神 == 3
	TIMES A , 1.60
ELSEIF ABL:奉仕精神 == 4
	TIMES A , 1.80
ELSE
	A = A * (ABL:奉仕精神 * 10 + 100) / 100
ENDIF

;無関心
SIF TALENT:無関心
	TIMES A , 0.80
;感情乏しい
SIF TALENT:感情乏しい
	TIMES A , 0.80
;好奇心
SIF TALENT:好奇心
	TIMES A , 1.50
;献身的
SIF TALENT:献身的
	TIMES A , 1.50
;臆病
SIF TALENT:臆病
	TIMES B , 1.50
;恥じらい
SIF TALENT:恥じらい
	TIMES B , 1.20
;貞操観念
SIF TALENT:解放
	TIMES A , 0.50
;プライド高い
SIF TALENT:プライド高い
	TIMES B , 2.00
;恋慕
SIF TALENT:恋慕
	TIMES A , 2.50
;淫乱
SIF TALENT:淫乱
	TIMES A , 1.80

SOURCE:情愛 += A
SOURCE:逸脱 += B
SOURCE:恭順追加 += A

TEQUIP:59 = 1

SIF ASSIPLAY == 0 && ABL:親密 >= 15
	TFLAG:30 += 1
SIF ASSIPLAY == 0 && TALENT:TARGET:恋慕
	TFLAG:30 += 2
SIF ASSIPLAY == 0 && TALENT:TARGET:恋人
	TFLAG:30 += 2
SIF ASSIPLAY == 0 && TALENT:TARGET:親愛
	TFLAG:30 += 3


;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:受動 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:受動 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:受動 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:受動 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:受動 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:受動 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:征服 = 600
	ELSEIF ABL:サドっ気 == 1
		SOURCE:征服 = 900
	ELSEIF ABL:サドっ気 == 2
		SOURCE:征服 = 1200
	ELSEIF ABL:サドっ気 == 3
		SOURCE:征服 = 1600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:征服 = 2000
	ELSE
		SOURCE:征服 = 1000 + (ABL:サドっ気 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
;合意がないと好感度が下がる
IF TALENT:合意 == 0 && TFLAG:48 == 0
	A -= 7
	SOURCE:反感追加 += 200
ENDIF
TFLAG:30 += A
TFLAG:37 += A / 2

RETURN 1

