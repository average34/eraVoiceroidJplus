@COM70
;罵倒

PRINTL 罵倒
STR:0 = 罵倒
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:体力 += 5
LOSEBASE:気力 += 150

SOURCE:13 = 1200
SOURCE:14 = 300
SOURCE:15 = 100


;ABL:マゾっ気をみる
IF ABL:マゾっ気 == 0
	SOURCE:5 = 150
	SOURCE:6 = 60
	SOURCE:11 = 0
	TIMES LOSEBASE:気力 , 2.00
ELSEIF ABL:マゾっ気 == 1
	SOURCE:5 = 300
	SOURCE:6 = 120
	SOURCE:11 = 100
	TIMES LOSEBASE:気力 , 1.50
ELSEIF ABL:マゾっ気 == 2
	SOURCE:5 = 600
	SOURCE:6 = 240
	SOURCE:11 = 150
	TIMES LOSEBASE:気力 , 1.00
ELSEIF ABL:マゾっ気 == 3
	SOURCE:5 = 900
	SOURCE:6 = 360
	SOURCE:11 = 250
	TIMES LOSEBASE:気力 , 0.75
ELSEIF ABL:マゾっ気 == 4
	SOURCE:5 = 1500
	SOURCE:6 = 480
	SOURCE:11 = 500
	TIMES LOSEBASE:気力 , 0.50
ELSE
	SOURCE:5 = 2200
	SOURCE:6 = 600
	SOURCE:11 = 1000
	TIMES LOSEBASE:気力 , 0.25
ENDIF


;TALENT:反抗的をみる
IF TALENT:11 == 1
	TIMES SOURCE:13 , 1.50
	TIMES SOURCE:15 , 2.50
ENDIF

;TALENT:気丈をみる
IF TALENT:12 == 1
	TIMES SOURCE:13 , 2.50
	TIMES SOURCE:15 , 1.50
ENDIF

;TALENT:プライド高いをみる
IF TALENT:15 == 1
	TIMES SOURCE:13 , 2.00
	TIMES SOURCE:15 , 2.00
ENDIF

;TALENT:生意気をみる
IF TALENT:16 == 1
	TIMES SOURCE:13 , 1.75
	TIMES SOURCE:15 , 1.75
ENDIF

;TALENT:プライド低いをみる
IF TALENT:17 == 1
	TIMES SOURCE:13 , 0.75
	TIMES SOURCE:15 , 0.75
ENDIF

;TALENT:感情乏しいをみる
IF TALENT:22 == 1
	TIMES SOURCE:5 , 0.50
	TIMES SOURCE:6 , 0.50
	TIMES SOURCE:13 , 0.50
	TIMES SOURCE:14 , 0.50
	TIMES SOURCE:15 , 0.50
ENDIF


;縄で緊縛中のとき効果上昇
SIF TEQUIP:44
	TIMES SOURCE:13 , 1.50
;ボールギャグ装着中のとき効果上昇
SIF TEQUIP:45
	TIMES SOURCE:13 , 1.75


IF ABL:マゾっ気 == 0 && TFLAG:21 == 0
	;反発感情１～２に相当
	I = RAND:2
	IF I == 0
		TFLAG:21 = 1
	ELSE
		TFLAG:21 = 2
	ENDIF
ELSE
	TFLAG:100 = 2
ENDIF

;既成事実１に相当
TFLAG:200 = 1

IF EXP:強制自慰経験 < 20 && EXP:苦痛快楽経験 < 20 && ABL:マゾっ気 < 2
	PRINTFORML そして%ABLNAME:0%が2になった
	ABL:マゾっ気 = 3
ENDIF

RETURN 1
