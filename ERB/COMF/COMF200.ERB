@COM_ABLE200
;乳の揉み合い実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;調教者がオトコだとダメ
SIF TALENT:PLAYER:122
	RETURN 0
;レズっ気３以上限定
SIF ABL:9 <= 2
	RETURN 0
;縄使用中は不可
SIF TEQUIP:44
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:90
	RETURN 0
RETURN 1

@COM200
;乳の揉み合い
PRINTL 乳の揉み合い
STR:0 = 乳の揉み合い
CALL TRAIN_MESSAGE_B

LOSEBASE:0 += 7
LOSEBASE:1 += 70

SOURCE:4 = 80
SOURCE:8 = 30
SOURCE:12 = 90

;ABL:Ｂ感覚をみる
IF ABL:14 == 0
	SOURCE:17 = 20
	SOURCE:3 = 50
ELSEIF ABL:14 == 1
	SOURCE:17 = 100
	SOURCE:3 = 100
ELSEIF ABL:14 == 2
	SOURCE:17 = 500
	SOURCE:3 = 160
ELSEIF ABL:14 == 3
	SOURCE:17 = 1200
	SOURCE:3 = 200
ELSEIF ABL:14 == 4
	SOURCE:17 = 2000
	SOURCE:3 = 230
ELSE
	SOURCE:17 = 800 + (ABL:14 * 400)
	SOURCE:3 = 200 + (ABL:14 * 10)
ENDIF
IF TALENT:78
	TIMES SOURCE:17 , 1.40
	TIMES SOURCE:3 , 1.40
ENDIF

;調教者が［幼児退行］
IF TALENT:PLAYER:131
	TIMES SOURCE:17 , 1.20
	TIMES SOURCE:3 , 1.20
ENDIF

;調教者が［幼稚］
IF TALENT:PLAYER:132
	TIMES SOURCE:17 , 1.20
	TIMES SOURCE:3 , 1.20
ENDIF

;奴隷のＢ⇔調教者の指の汚れが移動
	STAIN:5 |= STAIN:PLAYER:1
	STAIN:PLAYER:1 |= STAIN:5

IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTFORML %EXPNAME:40%＋7
	EXP:40 += 7
	EXP:MASTER:40 += 7
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTFORML %EXPNAME:41%＋7
	EXP:41 += 7
ENDIF

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:0 <= 1
		SOURCE:21 += 300 + (ABL:0 * 50)
	ELSEIF ABL:0 <= 3
		SOURCE:21 += 600 + (ABL:0 * 100)
	ELSEIF ABL:0 <= 5
		SOURCE:21 += 800 + (ABL:0 * 120)
	ELSEIF ABL:0 <= 8
		SOURCE:21 += 1000 + (ABL:0 * 140)
	ELSEIF ABL:0 <= 11
		SOURCE:21 += 1200 + (ABL:0 * 160)
	ELSE
		SOURCE:21 += 1500 + (ABL:0 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:15 == 0
		SOURCE:20 = 600
	ELSEIF ABL:15 == 1
		SOURCE:20 = 900
	ELSEIF ABL:15 == 2
		SOURCE:20 = 1200
	ELSEIF ABL:15 == 3
		SOURCE:20 = 1600
	ELSEIF ABL:15 == 4
		SOURCE:20 = 2000
	ELSE
		SOURCE:20 = 1000 + (ABL:15 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
;合意がないと好感度が下がる
IF TALENT:152 == 0 && TFLAG:48 == 0
	A -= 7
	SOURCE:15 += 200
ENDIF
TFLAG:30 += A
TFLAG:37 += A

RETURN 1

;乳の揉み合い
