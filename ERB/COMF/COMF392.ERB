	TIMES A , 1.20
ELSEIF ABL:露出癖 == 3
	TIMES B , 1.20
ELSEIF ABL:露出癖 == 4
	TIMES A , 0.80
	TIMES B , 1.40
ELSE
	TIMES A , 0.60
	TIMES B , 1.60
ENDIF

;Ｃ敏感ならABL:Ｃ感覚をみる
IF TALENT:TARGET:Ｃ敏感
	IF ABL:Ｃ感覚 == 0
		SOURCE:快Ｃ = 20
	ELSEIF ABL:Ｃ感覚 == 1
		SOURCE:快Ｃ = 50
	ELSEIF ABL:Ｃ感覚 == 2
		SOURCE:快Ｃ = 100
	ELSEIF ABL:Ｃ感覚 == 3
		SOURCE:快Ｃ = 150
	ELSEIF ABL:Ｃ感覚 == 4
		SOURCE:快Ｃ = 300
	ELSE
		SOURCE:快Ｃ = 200 + (ABL:Ｃ感覚 * 30)
	ENDIF
ENDIF
;Ｂ敏感ABL:Ｂ感覚をみる
IF TALENT:TARGET:Ｂ敏感
	IF ABL:Ｂ感覚 == 0
		SOURCE:快Ｂ = 50
	ELSEIF ABL:Ｂ感覚 == 1
		SOURCE:快Ｂ = 100
	ELSEIF ABL:Ｂ感覚 == 2
		SOURCE:快Ｂ = 200
	ELSEIF ABL:Ｂ感覚 == 3
		SOURCE:快Ｂ = 400
	ELSEIF ABL:Ｂ感覚 == 4
		SOURCE:快Ｂ = 800
	ELSE
		SOURCE:快Ｂ = 350 + (ABL:Ｂ感覚 * 250)
	ENDIF
ENDIF
SOURCE:痛み = 200

;場所をみる
IF TEQUIP:54
	TIMES A , 2.00
	TIMES B , 2.00
ELSEIF TEQUIP:57
	TIMES A , 1.40
	TIMES B , 1.40
ELSEIF TEQUIP:58
	TIMES A , 0.80
	TIMES B , 0.80
ENDIF



	;臆病
	SIF TALENT:臆病
		TIMES A , 0.80
		TIMES B , 0.80
	;反抗的
	SIF TALENT:反抗的
		TIMES A , 1.50
		TIMES B , 0.80
	;プライド高い
	SIF TALENT:プライド高い
		TIMES A , 1.50
	;プライド低い
	SIF TALENT:プライド低い
		TIMES A , 0.50

	;自制心
	SIF TALENT:自制心
		TIMES A , 1.50

	;感情乏しい
	SIF TALENT:感情乏しい
		TIMES A , 0.50
		TIMES B , 0.50
	;目立ちたがり
	SIF TALENT:目立ちたがり
		TIMES A , 0.50
		TIMES B , 0.80
	;抑圧
	SIF TALENT:抑圧
		TIMES A , 2.00
		TIMES B , 0.80

	;抵抗
	SIF TALENT:抵抗
		TIMES A , 2.00
		TIMES B , 0.50
	;恥じらい
	SIF TALENT:恥じらい
		TIMES A , 2.50
		TIMES B , 1.50

	;恥薄い
	SIF TALENT:恥薄い
		TIMES A , 0.80
		TIMES B , 0.50
	;痛みに弱い
	SIF TALENT:痛みに弱い
		TIMES A , 1.50
	;痛みに強い
	SIF TALENT:痛みに強い
		TIMES A , 0.80

	;倒錯的
	SIF TALENT:倒錯的
		TIMES A , 0.50
		TIMES B , 2.00

	UP:恐怖 += A * 12
	UP:反感 += A * 6
	SOURCE:痛み += A
	SOURCE:露出 += B
	SOURCE:逸脱 += (A*4)+B




