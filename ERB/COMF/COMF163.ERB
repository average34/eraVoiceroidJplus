SOURCE:10 = 5000
SOURCE:11 = 1000
SOURCE:12 = 500
SOURCE:13 = 500
SOURCE:14 = 1000

IF W == 1
	SOURCE:6 = 500
	TIMES SOURCE:13 , 1.30
ENDIF

IF TALENT:110 && W == 0
	;ABL:Ｂ感覚をみる
	IF ABL:Ｂ感覚 == 0
		SOURCE:17 = 75
	ELSEIF ABL:Ｂ感覚 == 1
		SOURCE:17 = 150
	ELSEIF ABL:Ｂ感覚 == 2
		SOURCE:17 = 450
	ELSEIF ABL:Ｂ感覚 == 3
		SOURCE:17 = 900
	ELSEIF ABL:Ｂ感覚 == 4
		SOURCE:17 = 1700
	ELSE
		SOURCE:17 = 2600
	ENDIF
	
	;Ｂ敏感、鈍感をみる
	SIF TALENT:107
		TIMES SOURCE:0 , 0.60
	SIF TALENT:108
		TIMES SOURCE:0 , 1.50
ELSE
	;ABL:Ｃ感覚をみる
	IF ABL:Ｃ感覚 == 0
		SOURCE:0 = 100
	ELSEIF ABL:Ｃ感覚 == 1
		SOURCE:0 = 250
	ELSEIF ABL:Ｃ感覚 == 2
		SOURCE:0 = 500
	ELSEIF ABL:Ｃ感覚 == 3
		SOURCE:0 = 1000
	ELSEIF ABL:Ｃ感覚 == 4
		SOURCE:0 = 1800
	ELSE
		SOURCE:0 = 2900
	ENDIF
	
	;Ｃ敏感、鈍感をみる
	SIF TALENT:101
		TIMES SOURCE:0 , 0.60
	SIF TALENT:102
		TIMES SOURCE:0 , 1.50
ENDIF

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES SOURCE:11, 0.30
	TIMES SOURCE:13, 0.30
ELSEIF PALAM:5 < PALAMLV:2
	TIMES SOURCE:11, 0.60
	TIMES SOURCE:13, 0.60
ELSEIF PALAM:5 < PALAMLV:3
	TIMES SOURCE:11, 1.00
	TIMES SOURCE:13, 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES SOURCE:11, 1.30
	TIMES SOURCE:13, 1.30
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES SOURCE:11, 1.60
	TIMES SOURCE:13, 1.60
ENDIF

;自尊心
SIF TALENT:15
	SOURCE:13 /= 2
;保守的
SIF TALENT:24
	SOURCE:13 /= 3
;薬毒耐性
SIF TALENT:24
	SOURCE:11 /= 4

CALL TRAIN_MESSAGE_B

;汚れ移動
IF TALENT:110 && W == 0
	
ELSE
	;奴隷のＶ⇔調教者の口の汚れが移動
	STAIN:3 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:3
ENDIF

