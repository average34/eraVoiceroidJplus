@COM_ABLE163
;わかめ酒実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;調教者が酒豪、若しくは調教対象が酒豪でないとダメ
SIF TALENT:TARGET:酒豪 == 0 && TALENT:PLAYER:酒豪 == 0
	RETURN 0
;性器が汚れているとMASTERの場合クンニはできない（調教者が汚れ無視か愛液、母乳のよごれならＯＫ）
SIF STAIN:ヴァギナ & 14 && ASSIPLAY == 0 && TALENT:MASTER:汚れ無視 == 0
	RETURN 0
;性器が汚れており、汚臭敏感で従順3以下のASSIの場合クンニはできない（調教者が汚れ無視か愛液、母乳のよごれならＯＫ）
IF STAIN:ヴァギナ & 14 && ASSIPLAY
	SIF ABL:ASSI:親密 <= 3 && TALENT:ASSI:汚臭敏感 && TALENT:ASSI:汚れ無視 == 0
		RETURN 0
ENDIF
;小柄体型の場合、巨乳以外だとダメ
SIF TALENT:小柄体型 && TALENT:巨乳 == 0
	RETURN 0
;オトコだとダメ
SIF TALENT:オトコ
	RETURN 0
;バイブまたは焼芋挿入中のときは技巧が4以上ないとダメ
SIF (TEQUIP:11 || TEQUIP:71) && ABL:PLAYER:技巧 < 4
	RETURN 0
;縄で緊縛中または対象の従順が10以上ないとダメ
SIF TEQUIP:44 && ABL:親密 < 10
	RETURN 0
;クスコ装着中はダメ
SIF TEQUIP:61
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:90
	RETURN 0
;お風呂場プレイ中はプレイマットが無いとダメ
IF TEQUIP:58
	SIF ITEM:プレイマット == 0 && NOITEM == 0
		RETURN 0
ENDIF
RETURN 1

@COM163
;わかめ酒
IF TEQUIP:71
	PRINTL 芋焼酎
	STR:0 = 芋焼酎
ELSE
	PRINTL わかめ酒
	STR:0 = わかめ酒
ENDIF

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------

LOSEBASE:体力 += 20
LOSEBASE:気力 += 60

W = RAND:3

SOURCE:液体追加 = 5000
SOURCE:欲情追加 = 1000
SOURCE:露出 = 500
SOURCE:屈従 = 500
SOURCE:逸脱 = 1000

IF W == 1
	SOURCE:痛み = 500
	TIMES SOURCE:屈従 , 1.30
ENDIF

IF TALENT:巨乳 && W == 0
	;ABL:Ｂ感覚をみる
	IF ABL:Ｂ感覚 == 0
		SOURCE:快Ｂ = 75
	ELSEIF ABL:Ｂ感覚 == 1
		SOURCE:快Ｂ = 150
	ELSEIF ABL:Ｂ感覚 == 2
		SOURCE:快Ｂ = 450
	ELSEIF ABL:Ｂ感覚 == 3
		SOURCE:快Ｂ = 900
	ELSEIF ABL:Ｂ感覚 == 4
		SOURCE:快Ｂ = 1700
	ELSE
		SOURCE:快Ｂ = 2600
	ENDIF
	
	;Ｂ敏感、鈍感をみる
	SIF TALENT:Ｂ鈍感
		TIMES SOURCE:快Ｃ , 0.60
	SIF TALENT:Ｂ敏感
		TIMES SOURCE:快Ｃ , 1.50
ELSE
	;ABL:Ｃ感覚をみる
	IF ABL:Ｃ感覚 == 0
		SOURCE:快Ｃ = 100
	ELSEIF ABL:Ｃ感覚 == 1
		SOURCE:快Ｃ = 250
	ELSEIF ABL:Ｃ感覚 == 2
		SOURCE:快Ｃ = 500
	ELSEIF ABL:Ｃ感覚 == 3
		SOURCE:快Ｃ = 1000
	ELSEIF ABL:Ｃ感覚 == 4
		SOURCE:快Ｃ = 1800
	ELSE
		SOURCE:快Ｃ = 2900
	ENDIF
	
	;Ｃ敏感、鈍感をみる
	SIF TALENT:Ｃ鈍感
		TIMES SOURCE:快Ｃ , 0.60
	SIF TALENT:Ｃ敏感
		TIMES SOURCE:快Ｃ , 1.50
ENDIF

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES SOURCE:欲情追加, 0.30
	TIMES SOURCE:屈従, 0.30
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES SOURCE:欲情追加, 0.60
	TIMES SOURCE:屈従, 0.60
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES SOURCE:欲情追加, 1.00
	TIMES SOURCE:屈従, 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES SOURCE:欲情追加, 1.30
	TIMES SOURCE:屈従, 1.30
ELSEIF PALAM:欲情 >= PALAMLV:4
	TIMES SOURCE:欲情追加, 1.60
	TIMES SOURCE:屈従, 1.60
ENDIF

;自尊心
SIF TALENT:プライド高い
	SOURCE:屈従 /= 2
;保守的
SIF TALENT:保守的
	SOURCE:屈従 /= 3
;薬毒耐性
SIF TALENT:保守的
	SOURCE:欲情追加 /= 4

CALL TRAIN_MESSAGE_B

;汚れ移動
IF TALENT:巨乳 && W == 0
	
ELSE
	;奴隷のＶ⇔調教者の口の汚れが移動
	STAIN:ヴァギナ |= STAIN:PLAYER:口
	STAIN:PLAYER:口 |= STAIN:ヴァギナ
ENDIF

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +1
	EXP:レズ経験 += 1
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:ＢＬ経験 += 1
ENDIF

RETURN 1

