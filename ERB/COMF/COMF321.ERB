@COM321
;遊びに行く

PRINTL 遊びに行く($1500を消費)
CALL GET_SUCCESS_RATE
B = 90 + A / 10
SIF B > 99
	B = 99
A = RAND:100
IF A <= 9
	;10％で大成功
	TFLAG:18 = 1
ELSEIF A >= B
	;10～1％で失敗
	TFLAG:18 = -1
ELSE
	;残りは成功
	TFLAG:18 = 0
ENDIF

;15%で戦闘訓練が発生
IF RAND:100 < 15
	TFLAG:17 = 1
;戦闘訓練が発生しなかった場合、20%で幽霊屋敷行きが発生
ELSEIF RAND:100 < 20
	TFLAG:17 = 2
ELSE
	TFLAG:17 = 0
ENDIF

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

STR:0 = 遊びに行く
CALL TRAIN_MESSAGE_B

LOSEBASE:気力 += 150
MONEY -= 1500

;固定で獲得するソース
SOURCE:歓楽 = 300
SOURCE:接触 = 0

;ABL:従順をみる
IF ABL:親密 <= 1
	SOURCE:歓楽 += (ABL:親密 * 70)
	SOURCE:接触 += (ABL:親密 * 20)
ELSEIF ABL:親密 <= 3
	SOURCE:歓楽 += 200 + (ABL:親密 * 75)
	SOURCE:接触 += 100 + (ABL:親密 * 20)
ELSEIF ABL:親密 <= 5
	SOURCE:歓楽 += 500 + (ABL:親密 * 75)
	SOURCE:接触 += 200 + (ABL:親密 * 20)
ELSEIF ABL:親密 <= 8
	SOURCE:歓楽 += 700 + (ABL:親密 * 85)
	SOURCE:接触 += 300 + (ABL:親密 * 30)
ELSEIF ABL:親密 <= 11
	SOURCE:歓楽 += 1200 + (ABL:親密 * 90)
	SOURCE:接触 += 400 + (ABL:親密 * 30)
ELSE
	SOURCE:歓楽 += 2000 + (ABL:親密 * 45)
	SOURCE:接触 += 800 + (ABL:親密 * 15)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:歓楽 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:歓楽 += 500 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:歓楽 += 2000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:歓楽 < 0
	SOURCE:歓楽 = 0

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:受動 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:受動 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:受動 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:受動 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:受動 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:受動 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:征服 = 600
	ELSEIF ABL:サドっ気 == 1
		SOURCE:征服 = 900
	ELSEIF ABL:サドっ気 == 2
		SOURCE:征服 = 1200
	ELSEIF ABL:サドっ気 == 3
		SOURCE:征服 = 1600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:征服 = 2000
	ELSE
		SOURCE:征服 = 1000 + (ABL:サドっ気 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:6 - 1
B = 0
;パワーアップ版ならソースを追加
IF TFLAG:17 == 1
	;戦闘訓練
	IF A < 0
		B = 5
	ELSEIF A < 3
		B = 3
	ELSE
		B = 2
	ENDIF
	TIMES SOURCE:歓楽 , 1.20
	TIMES SOURCE:接触 , 2.00
	TIMES SOURCE:征服 , 1.50
	TIMES SOURCE:受動 , 1.50
	A += 2
ELSEIF TFLAG:17 == 2
	;幽霊屋敷行き
	TIMES SOURCE:接触 , 2.50
	SOURCE:不安 = RAND:501 + 1000
	A += 2
ENDIF


;好感度変化
TFLAG:30 += A

IF TFLAG:18 == -1
	TIMES SOURCE:歓楽 , 0.10
	TIMES SOURCE:接触 , 0.50
	TIMES SOURCE:征服 , 0.50
	TIMES SOURCE:受動 , 0.50
	TFLAG:30 -= 10
	TFLAG:37 -= 5
ELSEIF TFLAG:18 == 0
	TIMES SOURCE:歓楽 , 1.00
	TIMES SOURCE:接触 , 1.00
	TIMES SOURCE:征服 , 1.00
	TIMES SOURCE:受動 , 1.00
	TFLAG:37 += A
ELSE
	TIMES SOURCE:歓楽 , 2.00
	TIMES SOURCE:接触 , 2.00
	TIMES SOURCE:征服 , 2.00
	TIMES SOURCE:受動 , 2.00
	TFLAG:30 += 2
	TFLAG:37 += 5 + A
	SIF B > 0
		B += 1
ENDIF

IF B > 0
	PRINTFORML 遊びに行った先で、少し運動することにした
	PRINTFORML %EXPNAME:95%+{B}
	PRINTFORMW %EXPNAME:95%（%CALLNAME:PLAYER%）+{B}
	EXP:戦闘経験 += B
	EXP:PLAYER:戦闘経験 += B
ELSEIF TFLAG:17 == 2
	PRINTFORMW 何故か幽霊屋敷に遊びに行く事になってしまった
ENDIF

RETURN 1

