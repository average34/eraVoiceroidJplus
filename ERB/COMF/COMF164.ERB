@COM_ABLE164
;筆責め実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;調教者が東北三姉妹じゃないとダメ
SIF NO:PLAYER != 5 && NO:PLAYER != 10 && NO:PLAYER != 12
	RETURN 0
;技巧2以上じゃないと使えない
SIF ABL:PLAYER:技巧 < 2
	RETURN 0
RETURN 1

@COM164
;筆責め

PRINTL 筆責め
STR:0 = 筆責め

W = RAND:7
;CALL TRAIN_MESSAGE_B

LOSEBASE:体力 += 40
LOSEBASE:気力 += 60

SOURCE:4 = 120
SOURCE:12 = 200
SOURCE:13 = 200
SOURCE:14 = 100

IF W == 0
	;筆ヘソ責め
	A = 500
	;MARK:反発感情を見る
	IF MARK:3 < 2
		TIMES A, 1.25
	ELSEIF MARK:3 == 2
		TIMES A, 1.00
	ELSE
		TIMES A, 0.75
	ENDIF

	;MARK:既成事実を見る
	IF MARK:2 > 2
		TIMES A, 1.25
	ELSEIF MARK:2 == 2
		TIMES A, 1.00
	ELSEIF MARK:2 == 1
		TIMES A, 0.75
	ELSE
		TIMES A, 0.50
	ENDIF

	;MARK:快楽刻印を見る
	IF MARK:1 > 2
		TIMES A, 1.50
	ELSEIF MARK:1 == 2
		TIMES A, 1.25
	ELSEIF MARK:1 == 1
		TIMES A, 1.00
	ELSE
		TIMES A, 0.75
	ENDIF

	;MARK:苦痛刻印を見る
	IF MARK:0 > 2
		TIMES A, 1.30
	ELSEIF MARK:0 == 2
		TIMES A, 1.00
	ELSEIF MARK:0 == 1
		TIMES A, 0.70
	ELSE
		TIMES A, 0.30
	ENDIF

	;ABL:マゾっ気をみる
	IF ABL:マゾっ気 == 0
		TIMES A, 0.50
		SOURCE:7 = 40
	ELSEIF ABL:マゾっ気 == 1
		TIMES A, 0.75
		SOURCE:7 = 80
	ELSEIF ABL:マゾっ気 == 2
		TIMES A, 1.00
		SOURCE:7 = 160
	ELSEIF ABL:マゾっ気 == 3
		TIMES A, 1.20
		SOURCE:7 = 320
	ELSEIF ABL:マゾっ気 == 4
		TIMES A, 1.50
		SOURCE:7 = 650
	ELSE
		TIMES A, 2.00
		SOURCE:7 = 1500
	ENDIF

	;プライド高い
	SIF TALENT:プライド高い
		TIMES A, 0.75
	;プライド低い
	SIF TALENT:プライド低い
		TIMES A, 1.50
	;自制心
	SIF TALENT:自制心
		TIMES A, 0.50
	;抵抗
	SIF TALENT:抵抗
		TIMES A, 0.75
	;弱味
	SIF TALENT:弱味
		TIMES A, 2.00
	;中毒しやすい
	SIF TALENT:中毒しやすい
		TIMES A, 1.50
	;倒錯的
	SIF TALENT:倒錯的
		TIMES A, 2.00

	PALAM:11 -= A
	PALAM:12 -= A
	PALAM:13 -= A

	SIF PALAM:11 <= 0
		PALAM:11 = 0
	SIF PALAM:12 <= 0
		PALAM:12 = 0
	SIF PALAM:13 <= 0
		PALAM:13 = 0
ELSEIF W == 1 || W == 2
	;筆クリ責め
	;ABL:Ｃ感覚をみる
	IF ABL:Ｃ感覚 == 0
		SOURCE:0 = 50
		SOURCE:3 = 50
	ELSEIF ABL:Ｃ感覚 == 1
		SOURCE:0 = 100
		SOURCE:3 = 100
	ELSEIF ABL:Ｃ感覚 == 2
		SOURCE:0 = 500
		SOURCE:3 = 150
	ELSEIF ABL:Ｃ感覚 == 3
		SOURCE:0 = 1500
		SOURCE:3 = 250
	ELSEIF ABL:Ｃ感覚 == 4
		SOURCE:0 = 2500
		SOURCE:3 = 400
	ELSE
		SOURCE:0 = 3000
		SOURCE:3 = 600
	ENDIF

	;Ｃ鈍感
	SIF TALENT:Ｃ鈍感
		TIMES SOURCE:0, 0.75
	;Ｃ敏感
	SIF TALENT:Ｃ敏感
		TIMES SOURCE:0, 1.50
ELSEIF W == 3 || W == 4
	;筆バスト責め
	;ABL:Ｂ感覚をみる
	IF ABL:Ｂ感覚 == 0
		SOURCE:3 = 50
		SOURCE:17 = 50
	ELSEIF ABL:Ｂ感覚 == 1
		SOURCE:3 = 100
		SOURCE:17 = 100
	ELSEIF ABL:Ｂ感覚 == 2
		SOURCE:3 = 150
		SOURCE:17 = 200
	ELSEIF ABL:Ｂ感覚 == 3
		SOURCE:3 = 250
		SOURCE:17 = 600
	ELSEIF ABL:Ｂ感覚 == 4
		SOURCE:3 = 400
		SOURCE:17 = 1500
	ELSE
		SOURCE:3 = 600
		SOURCE:17 = 2100
	ENDIF

	;Ｂ鈍感
	SIF TALENT:Ｂ鈍感
		TIMES SOURCE:17, 0.75
	;Ｂ敏感
	SIF TALENT:Ｂ敏感
		TIMES SOURCE:17, 1.50
	;貧乳
	SIF TALENT:貧乳
		TIMES SOURCE:17, 2.00
	;巨乳
	SIF TALENT:巨乳
		TIMES SOURCE:17, 0.75
ELSE
	;筆アナル責め
	;ABL:Ａ感覚をみる
	IF ABL:Ａ感覚 == 0
		SOURCE:2 = 20
		A = 150
	ELSEIF ABL:Ａ感覚 == 1
		SOURCE:2 = 80
		A = 250
	ELSEIF ABL:Ａ感覚 == 2
		SOURCE:2 = 240
		A = 400
	ELSEIF ABL:Ａ感覚 == 3
		SOURCE:2 = 500
		A = 650
	ELSEIF ABL:Ａ感覚 == 4
		SOURCE:2 = 1400
		A = 1000
	ELSE
		SOURCE:2 = 2100
		A = 1500
	ENDIF

	;尻穴狂い
	SIF TALENT:尻穴狂い
		TIMES SOURCE:2, 2.00
	;Ａ鈍感
	SIF TALENT:Ａ鈍感
		TIMES SOURCE:2, 0.75
	;Ａ敏感
	SIF TALENT:Ａ敏感
		TIMES SOURCE:2, 1.50

	SOURCE:13 += A
	SOURCE:14 += A/2
ENDIF

CALL TRAIN_MESSAGE_B

;筆アナル責め時の経験加算
IF W >= 5
	EXP:Ａ経験 += 1
	PRINTL Ａ経験＋１
ENDIF

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +5
	EXP:レズ経験 += 5
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +5
	EXP:ＢＬ経験 += 5
ENDIF

RETURN 1

@TRAIN_MESSAGE_COM164
IF W == 0
	;筆ヘソ責め
	PRINTFORML %CALLNAME:PLAYER%は懐から筆を取り出すと、
	PRINTFORML %CALLNAME:TARGET%のヘソを毛先で撫で始めた
	PRINTL 　
	IF A > 0
		PRINTFORML %CALLNAME:TARGET%の%PALAMNAME:11%が下がった
		PRINTFORML %CALLNAME:TARGET%の%PALAMNAME:12%が下がった
		PRINTFORML %CALLNAME:TARGET%の%PALAMNAME:13%が下がった
		PRINTL 　
	ENDIF
ELSEIF W == 1 || W == 2
	;筆クリ責め
	PRINTFORML %CALLNAME:PLAYER%は懐から筆を取り出すと、
	PRINTFORML %CALLNAME:TARGET%の陰核を毛先で突っつき始めた
	PRINTL 　
ELSEIF W == 3 || W == 4
	;筆バスト責め
	PRINTFORML %CALLNAME:PLAYER%は懐から筆を取り出すと、
	PRINTFORML %CALLNAME:TARGET%の乳腺に筆先を捻じ込むように弄り始めた
	PRINTL 　
ELSE
	;筆アナル責め
	PRINTFORML %CALLNAME:PLAYER%は懐から筆を取り出すと、
	PRINTFORML 焦らす様に穂先で%CALLNAME:TARGET%の菊門を撫でまわした
	PRINTL 　
ENDIF
