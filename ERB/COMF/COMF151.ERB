@COM_ABLE151
;吸血させる
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;今回の調教で既にしているとダメ
SIF TFLAG:65 & 12
	RETURN 0
;調教対象が吸血鬼じゃないとダメ
SIF TALENT:吸血鬼 == 0
	RETURN 0
;実行者の異常経験が増える可能性があるので助手プレイ時は異常経験フィルタ。
SIF ASSI > 0 && ((FLAG:61 & 1) == 0) && ASSIPLAY
	RETURN 0
RETURN 1

@COM151
;吸血させる
PRINTL 吸血

;ベースは針。成功判定は主に足コキから。
;TFLAG:65とEXP:吸血経験、EXP:吸血経験を使用します

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

STR:0 = 吸血
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;実行決定
;-------------------------------------------------

LOSEBASE:体力 += 20
LOSEBASE:気力 += 150

SOURCE:逸脱 = 1500

;ABL:サドっ気をみる
IF ABL:サドっ気 == 0
	SOURCE:欲情追加 = 800
	SOURCE:懐疑 = 5000
ELSEIF ABL:サドっ気 == 1
	SOURCE:欲情追加 = 1350
	SOURCE:懐疑 = 4000
ELSEIF ABL:サドっ気 == 2
	SOURCE:欲情追加 = 2000
	SOURCE:懐疑 = 3000
ELSEIF ABL:サドっ気 == 3
	SOURCE:欲情追加 = 2900
	SOURCE:懐疑 = 2000
ELSEIF ABL:サドっ気 == 4
	SOURCE:欲情追加 = 4000
	SOURCE:懐疑 = 1500
ELSE
	SOURCE:欲情追加 = 2500 + (ABL:サドっ気 * 500)
	SOURCE:懐疑 = 1100 - (ABL:サドっ気 * 40)
	SIF SOURCE:懐疑 < 0
		SOURCE:懐疑 = 0
ENDIF

;吸血経験を見る
IF EXP:吸血経験 < EXPLV:1
	TIMES SOURCE:逸脱 , 2.50
	TIMES SOURCE:欲情追加 , 0.00
ELSEIF EXP:吸血経験 < EXPLV:2
	TIMES SOURCE:逸脱 , 1.00
	TIMES SOURCE:欲情追加 , 1.00
ELSEIF EXP:吸血経験 < EXPLV:3
	TIMES SOURCE:逸脱 , 0.25
	TIMES SOURCE:欲情追加 , 10.0
ELSE
	TIMES SOURCE:逸脱 , 0.00
	TIMES SOURCE:欲情追加 , 20.0
ENDIF

;狂気(むしろ妹様かどうか、か)
IF TALENT:PLAYER:狂気
	TIMES SOURCE:逸脱 , 0.50
	TIMES SOURCE:懐疑 , 0.50
ENDIF

;主人が吸わせるときに好感度が高いと情愛追加
;恭順追加に補正掛ける方が良いのかな
IF CFLAG:2 > 5000 && ASSIPLAY == 0
	SOURCE:情愛 += 1500 + (CFLAG:2 - 5000) / 50
	;相愛
	SIF TALENT:相愛
		TIMES SOURCE:情愛 , 3.00
ENDIF

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:受動 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:受動 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:受動 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:受動 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:受動 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:受動 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:征服 = 600
	ELSEIF ABL:サドっ気 == 1
		SOURCE:征服 = 900
	ELSEIF ABL:サドっ気 == 2
		SOURCE:征服 = 1200
	ELSEIF ABL:サドっ気 == 3
		SOURCE:征服 = 1600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:征服 = 2000
	ELSE
		SOURCE:征服 = 1000 + (ABL:サドっ気 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
SIF TALENT:恋慕 || TALENT:恋人
	A += 5
SIF TALENT:親愛
	A += 5
;合意がないと好感度が下がる
IF TALENT:合意 == 0 && TFLAG:48 == 0
	A -= 9
	SOURCE:反感追加 += 400
ENDIF
TFLAG:30 += A
TFLAG:37 += A / 2

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +2
	EXP:レズ経験 += 2
	EXP:PLAYER:レズ経験 += 2
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +2
	EXP:ＢＬ経験 += 2
	EXP:PLAYER:ＢＬ経験 += 2
ENDIF


EXP:PLAYER:被吸血経験 += 1

EXP:吸血経験 += 1
PRINTFORML %EXPNAME:56%+1

EXP:PLAYER:異常経験 += 5
PRINTFORML %CALLNAME:PLAYER%の%EXPNAME:50%+5

IF ASSIPLAY
	TFLAG:65 |= 8
ELSE
	TFLAG:65 |= 4
ENDIF

RETURN 1

;吸血させる
@TRAIN_MESSAGE_COM151
PRINTFORMW %CALLNAME:TARGET%は%CALLNAME:PLAYER%の首筋に鋭く尖った犬歯を突き立てた…
PRINTFORM 傷口から溢れた血を%CALLNAME:TARGET%は
IF EXP:吸血経験 >= EXPLV:2
	PRINTFORM 恍惚とした表情で
ELSE
	PRINTFORM 恐る恐る
ENDIF
PRINTFORMW 舐め取っている

;-------------------------------------------------
;固有の実行判定
;-------------------------------------------------
@COM_ORDER_151
A = 0
S = 0
V = 110
;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:欲望
	A += ABL:欲望 * 1
ENDIF
;ABL:マゾっ気
IF ABL:マゾっ気
	A += ABL:マゾっ気 * 4
ENDIF

;既成事実
IF MARK:既成事実
	A += MARK:快楽依存 * 1
ENDIF

;PALAM:欲情
IF PALAM:欲情 < PALAMLV:1
	L = 0
ELSEIF PALAM:欲情 < PALAMLV:2
	L = 1
ELSEIF PALAM:欲情 < PALAMLV:3
	L = 2
ELSEIF PALAM:欲情 < PALAMLV:4
	L = 3
ELSEIF PALAM:欲情 < PALAMLV:5
	L = 4
ELSE
	L = 5
ENDIF
IF L
	A += L * 1
ENDIF

;保守的
IF TALENT:保守的
	A -= 3
ENDIF
;恥じらい
IF TALENT:恥じらい
	A -= 1
ENDIF

;快感に素直
IF TALENT:快感に素直
	A += 3
ENDIF
;快感の否定
IF TALENT:快感の否定
	A -= 1
ENDIF

;一線越えない
IF TALENT:キス未経験
	A -= 20
ENDIF



;調教者の小悪魔
IF TALENT:PLAYER:小悪魔
	A += 3
ENDIF

;恋慕
IF TALENT:恋慕 && ASSIPLAY == 0
	A += 5
	S = 5
ENDIF

;ムードボーナス
B = 0
IF TFLAG:37 < 10
	B -= 10
ELSEIF TFLAG:37 < 30
	B -= 1
ELSEIF TFLAG:37 < 50
	B += 1
ELSEIF TFLAG:37 < 100
	B += TFLAG:37 / 10
ELSEIF TFLAG:37 < 300
	B += TFLAG:37 / 5
ELSE
	B += TFLAG:37 / 4
ENDIF
A += B
IF B < 0
	B = B * -1
ELSE
ENDIF


;好感度
IF CFLAG:2 < 1000
	B = 0
	IF CFLAG:2 < 500
		B = 50
	ELSEIF CFLAG:2 < 750
		B = 20
	ELSEIF CFLAG:2 < 900
		B = 10
	ELSE
		B = 5
	ENDIF
	A -= B
ENDIF
;好感度
IF CFLAG:2 >= 1500
	B = 0
	IF CFLAG:2 < 2000
		B = 5
	ELSE
		B = CFLAG:2 / 200
	ENDIF
	A += B
ENDIF

;吸血経験
IF EXP:吸血経験 == 0
	A -= 15
ENDIF

;合意
IF TALENT:合意 == 0
	A -= 20
ENDIF

IF ((FLAG:23 & 1p27) == 0) && FLAG:2 != 1
	;ABL:欲望
	IF ABL:欲望
		SIF S
			PRINT  + 
		PRINTS ABLNAME:1
		PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 1,')
		S = 1
	ENDIF
	;ABL:マゾっ気
	IF ABL:マゾっ気
		SIF S
			PRINT  + 
		PRINTS ABLNAME:8
		PRINTV 'LV,ABL:マゾっ気,'(,ABL:マゾっ気 * 4,')
		S = 1
	ENDIF

	;既成事実
	IF MARK:既成事実
		SIF S
			PRINT  + 
		PRINTS MARKNAME:1
		PRINTV 'LV,MARK:快楽依存,'(,MARK:快楽依存 * 1,')
		S = 1
	ENDIF

	;PALAM:欲情
	IF PALAM:欲情 < PALAMLV:1
		L = 0
	ELSEIF PALAM:欲情 < PALAMLV:2
		L = 1
	ELSEIF PALAM:欲情 < PALAMLV:3
		L = 2
	ELSEIF PALAM:欲情 < PALAMLV:4
		L = 3
	ELSEIF PALAM:欲情 < PALAMLV:5
		L = 4
	ELSE
		L = 5
	ENDIF
	IF L
		SIF S
			PRINT  + 
		PRINTS PALAMNAME:5
		PRINTV 'LV,L,'(,L * 1,')
		S = 1
	ENDIF

	;保守的
	IF TALENT:保守的
		SIF S
			PRINT  - 
		PRINTS TALENTNAME:24
		PRINTV '(,3,')
		S = 1
	ENDIF
	;恥じらい
	IF TALENT:恥じらい
		PRINT  - 
		PRINTS TALENTNAME:35
		PRINTV '(,1,')
		S = 1
	ENDIF

	;快感に素直
	IF TALENT:快感に素直
		SIF S
			PRINT  + 
		PRINTS TALENTNAME:70
		PRINTV '(,3,')
		S = 1
	ENDIF
	;快感の否定
	IF TALENT:快感の否定
		PRINT  - 
		PRINTS TALENTNAME:71
		PRINTV '(,1,')
		S = 1
	ENDIF

	;一線越えない
	IF TALENT:キス未経験
		PRINT  - 
		PRINTS TALENTNAME:27
		PRINTV '(,20,')
		S = 1
	ENDIF



	;調教者の小悪魔
	IF TALENT:PLAYER:小悪魔
		SIF S
			PRINT  + 
		PRINTFORM %NAME:PLAYER%が
		PRINTS TALENTNAME:87
		PRINTV '(,3,')
		S = 1
	ENDIF

	;恋慕
	IF TALENT:恋慕 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		PRINTS TALENTNAME:85
		PRINTV '(,5,')
		S = 5
	ENDIF

	;ムードボーナス
	B = 0
	IF TFLAG:37 < 10
		B -= 10
	ELSEIF TFLAG:37 < 30
		B -= 1
	ELSEIF TFLAG:37 < 50
		B += 1
	ELSEIF TFLAG:37 < 100
		B += TFLAG:37 / 10
	ELSEIF TFLAG:37 < 300
		B += TFLAG:37 / 5
	ELSE
		B += TFLAG:37 / 4
	ENDIF
	IF B < 0
		B = B * -1
		PRINT  - 
		PRINT ムード悪い
		PRINTV '(,B,')
		S = 1
	ELSE
		PRINT  + 
		PRINT ムード良い
		PRINTV '(,B,')
		S = 1
	ENDIF


	;好感度
	IF CFLAG:2 < 1000
		B = 0
		PRINT  - 
		IF CFLAG:2 < 500
			B = 50
		ELSEIF CFLAG:2 < 750
			B = 20
		ELSEIF CFLAG:2 < 900
			B = 10
		ELSE
			B = 5
		ENDIF
		PRINT 好感度不足
		PRINTV '(,B,')
		S = 1
	ENDIF
	;好感度
	IF CFLAG:2 >= 1500
		B = 0
		SIF S
			PRINT  + 
		IF CFLAG:2 < 2000
			B = 5
		ELSE
			B = CFLAG:2 / 200
		ENDIF
		PRINT 好感度
		PRINTV '(,B,')
		S = 1
	ENDIF

	;吸血経験
	IF EXP:吸血経験 == 0
		PRINT  - 
		PRINTFORM %EXPNAME:56%無し
		PRINTV '(,15,')
		S = 1
	ENDIF

	;合意
	IF TALENT:合意 == 0
		PRINT  - 
		PRINTFORM %TALENTNAME:152%無し
		PRINTV '(,20,')
		S = 1
	ENDIF

	;合計を表示(110以上で実行)
	PRINT  = 
	PRINTV A


	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 実行値
	PRINTV V
	WAIT
ENDIF

