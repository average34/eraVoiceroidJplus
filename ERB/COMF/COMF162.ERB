@COM_ABLE162
;昆虫採集セットの薬実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;調教者が永琳じゃないとダメ
;SIF NO:PLAYER != 29
;	RETURN 0
;調教者がサド＋禁断の知識をもっていないとダメ
SIF TALENT:PLAYER:サド == 0 && TALENT:PLAYER:禁断の知識 == 0
	RETURN 0
;ローション、媚薬、利尿剤全てを最低1つずつ持っているか、アイテムなし設定じゃないとダメ
SIF ITEM:ローション == 0 && ITEM:媚薬 == 0 && ITEM:利尿剤 == 0 && NOITEM == 0
	RETURN 0
;薬毒耐性だとダメ
SIF TALENT:薬毒耐性
	RETURN 0
;昆虫採集セットの薬効果発揮中は不可
SIF TEQUIP:75
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:90
	RETURN 0
;体力が1000未満では使用不可
SIF BASE:体力 < 1000 && TEQUIP:75 == 0
	RETURN 0
RETURN 1

@COM162
