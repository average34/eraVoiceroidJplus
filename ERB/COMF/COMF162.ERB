	IF ABL:Ａ感覚 <= 2
		SOURCE:快Ｂ = B
		SOURCE:露出 = B
	ELSE
		SOURCE:快Ｂ = C
		SOURCE:露出 = C
	ENDIF
ELSEIF A >= 8 && A < 11
	PRINTFORM %CALLNAME:TARGET%の
	SIF TALENT:小柄体型
		PRINT 可愛らしい小さな
	PRINTL 陰核は剥き出しの状態になった
	IF ABL:Ａ感覚 <= 2
		SOURCE:快Ｃ = B
		SOURCE:露出 = B
	ELSE
		SOURCE:快Ｃ = C
		SOURCE:露出 = C
	ENDIF
ELSEIF A == 15 && TALENT:動物耳 == 0
	PRINTFORM %CALLNAME:TARGET%の頭に突如
	D = RAND:5
	IF D == 0
		PRINT イヌミミ
	ELSEIF D == 1
		PRINT ネコミミ
	ELSEIF D == 2
		PRINT キツネミミ
	ELSEIF D == 3
		PRINT ウサミミ
	ELSEIF D == 4
		PRINT エルフミミ
	ENDIF
	PRINTL が生えてしまった
