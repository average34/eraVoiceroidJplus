	A = 20
ELSEIF ABL:Ｂ感覚 == 1
	A = 40
ELSEIF ABL:Ｂ感覚 == 2
	A = 80
ELSEIF ABL:Ｂ感覚 == 3
	A = 160
ELSEIF ABL:Ｂ感覚 == 4
	A = 320
ELSE
	A = 640
ENDIF

