@COM72
;サラシ

PRINTL サラシ
STR:0 = サラシ

LOSEBASE:体力 += 20
LOSEBASE:気力 += 70

SOURCE:露出 = 100
SOURCE:逸脱 = 90

;ABL:Ｂ感覚をみる
IF ABL:Ｂ感覚 == 0
	A = 50
ELSEIF ABL:Ｂ感覚 == 1
	A = 100
ELSEIF ABL:Ｂ感覚== 2
	A = 300
ELSEIF ABL:Ｂ感覚 == 3
	A = 600
ELSEIF ABL:Ｂ感覚 == 4
	A = 1200
ELSE
	A = 2100
ENDIF

;貧乳
IF TALENT:貧乳
	TIMES A , 1.50
	SOURCE:露出 += 700
ENDIF

;巨乳
IF TALENT:巨乳
	TIMES A , 0.80
	SOURCE:痛み = 300
ENDIF

IF TALENT:Ｂ敏感
	TIMES A , 1.50
ELSEIF TALENT:Ｂ鈍感
	TIMES A , 0.60
ENDIF

SOURCE:快Ｂ += A

CALL TRAIN_MESSAGE_B

;サラシの着脱
IF TEQUIP:76
	TEQUIP:76 = 0
ELSE
	TEQUIP:76 = 1
ENDIF

RETURN 1

