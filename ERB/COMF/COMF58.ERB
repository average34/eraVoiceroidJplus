@COM58
;お風呂場プレイ

PRINTL お風呂場プレイ
STR:0 = お風呂場プレイ
CALL TRAIN_MESSAGE_B

;風呂場への出入り
;終了時は修正なし
IF TEQUIP:58
	IF TEQUIP:18
		TEQUIP:18 = 0
	ENDIF
	TEQUIP:58 = 0
	RETURN 1
ENDIF

LOSEBASE:0 += 0
LOSEBASE:1 += 30

A = 100
B = 50

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES A , 0.80
ELSEIF PALAM:5 < PALAMLV:2
	TIMES A , 0.90
ELSEIF PALAM:5 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES A , 1.10
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES A , 1.20
ENDIF
;ABL:露出癖をみる
IF ABL:7 == 0
	SOURCE:7 += 0
	SOURCE:10 += 0
	TIMES A, 1.00
ELSEIF ABL:7 == 1
	SOURCE:7 += 50
	SOURCE:10 += 50
	TIMES A, 1.10
ELSEIF ABL:7 == 2
	SOURCE:7 += 80
	SOURCE:10 += 80
	TIMES A, 1.20
ELSEIF ABL:7 == 3
	SOURCE:7 += 100
	SOURCE:10 += 100
	TIMES A, 1.30
ELSEIF ABL:7 == 4
	SOURCE:7 += 200
	SOURCE:10 += 200
	TIMES A, 1.40
ELSE
	SOURCE:7 += 50 + (ABL:7 * 50)
	SOURCE:10 += 50 + (ABL:7 * 50)
	A = A * (ABL:7 * 5 + 125) / 100
ENDIF
;ABL:マゾっ気をみる
IF ABL:8 == 0
	TIMES A , 1.00
ELSEIF ABL:8 == 1
	TIMES A , 1.10
ELSEIF ABL:8 == 2
	TIMES A , 1.20
ELSEIF ABL:8 == 3
	TIMES A , 1.30
ELSEIF ABL:8 == 4
	TIMES A , 1.40
ELSE
	A = A * (ABL:8 * 5 + 125) / 100
ENDIF

;目立ちたがり
SIF TALENT:28
	TIMES A , 1.50
;解放
SIF TALENT:33
	TIMES A , 1.50

;臆病
SIF TALENT:10
	TIMES B , 1.10
;恥じらい
SIF TALENT:35
	TIMES B , 1.20

SOURCE:12 += A
SOURCE:14 += B
SOURCE:16 += A/2

UP:8 += A/2
UP:10 += SOURCE:14/2

TEQUIP:58 = 1

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:0 <= 1
		SOURCE:21 += 300 + (ABL:0 * 50)
	ELSEIF ABL:0 <= 3
		SOURCE:21 += 600 + (ABL:0 * 100)
	ELSEIF ABL:0 <= 5
		SOURCE:21 += 800 + (ABL:0 * 120)
	ELSEIF ABL:0 <= 8
		SOURCE:21 += 1000 + (ABL:0 * 140)
	ELSEIF ABL:0 <= 11
		SOURCE:21 += 1200 + (ABL:0 * 160)
	ELSE
		SOURCE:21 += 1500 + (ABL:0 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:15 == 0
		SOURCE:20 = 600
	ELSEIF ABL:15 == 1
		SOURCE:20 = 900
	ELSEIF ABL:15 == 2
		SOURCE:20 = 1200
	ELSEIF ABL:15 == 3
		SOURCE:20 = 1600
	ELSEIF ABL:15 == 4
		SOURCE:20 = 2000
	ELSE
		SOURCE:20 = 1000 + (ABL:15 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
;合意がないと好感度が下がる
IF TALENT:152 == 0 && TFLAG:48 == 0
	A -= 5
	SOURCE:15 += 100
ENDIF
TFLAG:30 += A
TFLAG:37 += A / 2


RETURN 1

