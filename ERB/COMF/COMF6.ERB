@COM6
;キス

;調教者が助手だと"助手にキスさせる"
SIF ASSIPLAY
	JUMP COM60

PRINTL キスする

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

STR:0 = キスする
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;実行決定
;-------------------------------------------------
;-------------------------------------------------
;射精ゲージチェック（ふたなり・オトコの場合）
;-------------------------------------------------
SIF TALENT:PLAYER:半人半妖 || TALENT:PLAYER:オトコ  || TALENT:PLAYER:ふたなり
	BASE:PLAYER:射精 += CALC_EJAC(SELECTCOM, PLAYER)

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:体力 += 5

;キス経験で気力消費軽減（何度もキスしたがる、の再現だとでも脳内補完）
IF EXP:キス経験 < 100
	LOSEBASE:気力 += 50
ELSEIF EXP:キス経験 < 500
	LOSEBASE:気力 += 40
ELSE
	LOSEBASE:気力 += 25
ENDIF

;上のほうで計算した汚れデータ
SOURCE:8 = Y*20 + 10

;Ｍ感覚を設定している場合快Ｍソース等取得
SIF FLAG:62 & 4194304
	CALL SOURCE_M_COM6

;ABL:奉仕精神をみる
IF ABL:奉仕精神 == 0
	SOURCE:4 = 50
	SOURCE:5 = 10
	TIMES SOURCE:8 , 4.00
ELSEIF ABL:奉仕精神 == 1
	SOURCE:4 = 150
	SOURCE:5 = 50
	TIMES SOURCE:8 , 2.50
ELSEIF ABL:奉仕精神 == 2
	SOURCE:4 = 200
	SOURCE:5 = 100
	TIMES SOURCE:8 , 1.50
ELSEIF ABL:奉仕精神 == 3
	SOURCE:4 = 250
	SOURCE:5 = 180
	TIMES SOURCE:8 , 1.00
ELSEIF ABL:奉仕精神 == 4
	SOURCE:4 = 300
	SOURCE:5 = 300
	TIMES SOURCE:8 , 0.50
ELSE
	SOURCE:4 = 225 + (ABL:奉仕精神 * 25)
	SOURCE:5 = ABL:奉仕精神 * 100
	TIMES SOURCE:8 , 0.10
ENDIF

;ABL:技巧をみる
IF ABL:技巧 == 0
	TIMES SOURCE:4 , 0.50
	TIMES SOURCE:5 , 0.50
ELSEIF ABL:技巧 == 1
	TIMES SOURCE:4 , 0.80
	TIMES SOURCE:5 , 0.80
ELSEIF ABL:技巧 == 2
	TIMES SOURCE:4 , 1.00
	TIMES SOURCE:5 , 1.00
ELSEIF ABL:技巧 == 3
	TIMES SOURCE:4 , 1.50
	TIMES SOURCE:5 , 1.50
ELSEIF ABL:技巧 == 4
	TIMES SOURCE:4 , 2.50
	TIMES SOURCE:5 , 2.50
ELSE
	SOURCE:4 = SOURCE:4 * (ABL:技巧 * 75 + 25) / 100
	SOURCE:5 = SOURCE:5 * (ABL:技巧 * 75 + 25) / 100
ENDIF

;プレイヤーのABL:技巧をみる
IF ABL:MASTER:技巧 == 0
	SOURCE:3 = 100
	SOURCE:10 = 0
ELSEIF ABL:MASTER:技巧 == 1
	SOURCE:3 = 150
	SOURCE:10 = 0
ELSEIF ABL:MASTER:技巧 == 2
	SOURCE:3 = 200
	SOURCE:10 = 0
ELSEIF ABL:MASTER:技巧 == 3
	SOURCE:3 = 300
	SOURCE:10 = 50
ELSEIF ABL:MASTER:技巧 == 4
	SOURCE:3 = 500
	SOURCE:10 = 100
ELSE
	SOURCE:3 = 50 + (ABL:MASTER:技巧 * 150)
	SOURCE:10 = (ABL:MASTER:技巧 * 50) - 50
ENDIF

;TALENT:恋慕をみる
SIF TALENT:恋慕
	TIMES SOURCE:3 , 2.00

PRINTFORML %EXPNAME:96%＋１
EXP:キス経験 += 1
EXP:PLAYER:キス経験 += 1
IF TALENT:PLAYER:キス未経験
	PRINTFORMW %CALLNAME:PLAYER%は【キス未経験】を失いました
	TALENT:PLAYER:キス未経験 = 0
ENDIF

IF TALENT:キス未経験
	TFLAG:600 = 1
	CALL KOJO_JUN
	TALENT:キス未経験 = 0
	PRINTFORMW %CALLNAME:TARGET%は【キス未経験】を失いました
	TFLAG:38 = 1
ENDIF


;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:21 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:21 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:21 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:21 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:21 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:21 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:20 = 600
	ELSEIF ABL:サドっ気 == 1
		SOURCE:20 = 900
	ELSEIF ABL:サドっ気 == 2
		SOURCE:20 = 1200
	ELSEIF ABL:サドっ気 == 3
		SOURCE:20 = 1600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:20 = 2000
	ELSE
		SOURCE:20 = 1000 + (ABL:サドっ気 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
;合意がないと好感度が下がる
IF TALENT:合意 == 0 && TFLAG:48 == 0
	A -= 3
	SOURCE:15 += 100
ENDIF
TFLAG:30 += A
TFLAG:37 += A



;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK
;S = BASE:MASTER:射精
;EJAC = MAXBASE:MASTER:射精
;
;IF  S > EJAC * 2
;	E = 2
;ELSEIF S > EJAC
;	E = 1
;ELSE
;	E = 0
;ENDIF

IF E
;射精している
	TIMES SOURCE:4 , 3.00

	;ABL:精液中毒をみる
	IF ABL:精液中毒 == 0
		SOURCE:7 = 0
		TIMES SOURCE:5 , 2.00
		TIMES SOURCE:13, 2.00
	ELSEIF ABL:精液中毒 == 1
		SOURCE:7 = 100
		TIMES SOURCE:5 , 2.50
		TIMES SOURCE:13, 1.60
	ELSEIF ABL:精液中毒 == 2
		SOURCE:7 = 300
		TIMES SOURCE:5 , 3.00
		TIMES SOURCE:13, 1.00
	ELSEIF ABL:精液中毒 == 3
		SOURCE:7 = 700
		TIMES SOURCE:5 , 4.00
		TIMES SOURCE:13, 0.70
	ELSEIF ABL:精液中毒 == 4
		SOURCE:7 = 1500
		TIMES SOURCE:5 , 5.00
		TIMES SOURCE:13, 0.40
	ELSE
		SOURCE:7 = (ABL:精液中毒 * 2000) - 4000
		SOURCE:5 = SOURCE:5 * (ABL:精液中毒 * 50 + 350) / 100
		TIMES SOURCE:13, 0.10
	ENDIF

	;射精先タイプの設定
	TFLAG:703 = 11
	;射精先選択の可・不可
	TFLAG:704 = 0
	;汎用的な処理はこの関数で行う
	;（射精ゲージの再計算や射精経験の上昇と共通部分の表示）
	CALL SAMEN_SHOOT
ENDIF

;;大量射精
;IF E == 2
;	TIMES SOURCE:7 , 2.00
;	TIMES SOURCE:5 , 1.50
;
;	EXP:MASTER:射精経験 += 2
;	EXP:精液経験 += 1
;	PRINTL 大量射精
;	PRINTL 精液経験＋１
;	;精液汚れ
;	STAIN:MASTER:ペニス |= 4
;
;	BASE:MASTER:射精 -= EJAC*2
;	SIF BASE:MASTER:射精 >= EJAC
;		BASE:MASTER:射精 = EJAC-1
;
;	;キスで射精させたフラグ
;	TFLAG:4 = 2
;;通常の射精
;ELSEIF E == 1
;	EXP:MASTER:射精経験 += 1
;	PRINTL 射精
;	;精液汚れ
;	STAIN:MASTER:ペニス |= 4
;
;	BASE:MASTER:射精 -= EJAC
;	SIF BASE:MASTER:射精 >= EJAC
;		BASE:MASTER:射精 = EJAC-1
;
;	;キスで射精させたフラグ
;	TFLAG:4 = 1
;ENDIF

;奴隷の口⇔調教者の口の汚れが移動
STAIN:口 |= STAIN:MASTER:口
STAIN:MASTER:口 |= STAIN:口

IF TALENT:オトコ == 0 && TALENT:MASTER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +3
	EXP:レズ経験 += 3
	EXP:PLAYER:レズ経験 += 3
ELSEIF TALENT:オトコ == 1 && TALENT:MASTER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +3
	EXP:ＢＬ経験 += 3
	EXP:PLAYER:ＢＬ経験 += 3
ENDIF

SIF ASSIPLAY == 0
	TFLAG:30 += 1

RETURN 1

;Ｍ感覚を設定している場合快Ｍソース等取得
@SOURCE_M_COM6
VARSET LOCAL, 0

;屈従・反感ソース
LOCAL:13 += 100
LOCAL:14 += 10

;ABL:Ｍ感覚をみる
IF ABL:Ｍ感覚 == 0
	LOCAL:24 += 10
ELSEIF ABL:Ｍ感覚 == 1
	LOCAL:24 += 50
ELSEIF ABL:Ｍ感覚 == 2
	LOCAL:24 += 200
ELSEIF ABL:Ｍ感覚 == 3
	LOCAL:24 += 600
ELSEIF ABL:Ｍ感覚 == 4
	LOCAL:24 += 1000
