;羽繕いして貰う実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中は無理
SIF TFLAG:44 == 1
	RETURN 0
;羽がないとダメ
SIF TALENT:PLAYER:213 == 0
	RETURN 0
