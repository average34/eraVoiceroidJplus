@COM317
;羽繕いしてもらう

PRINTL 羽繕いして貰う
CALL GET_SUCCESS_RATE
B = 95 + A / 10
SIF B > 99
	B = 99
A = RAND:100
IF A <= 9
	;10％で大成功
	TFLAG:18 = 1
ELSEIF A >= B
	;10～1％で失敗
	TFLAG:18 = -1
ELSE
	;残りは成功
	TFLAG:18 = 0
ENDIF

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

STR:0 = 羽繕いしてもらう
CALL TRAIN_MESSAGE_B

LOSEBASE:1 += 70

;固定で獲得するソース
SOURCE:18 = 0
SOURCE:9 = 400

;ABL:従順をみる
IF ABL:親密 <= 1
	SOURCE:18 += (ABL:親密 * 20)
ELSEIF ABL:親密 <= 3
	SOURCE:18 += 120 + (ABL:親密 * 20)
ELSEIF ABL:親密 <= 5
	SOURCE:18 += 250 + (ABL:親密 * 25)
ELSEIF ABL:親密 <= 8
	SOURCE:18 += 500 + (ABL:親密 * 25)
ELSEIF ABL:親密 <= 11
	SOURCE:18 += 900 + (ABL:親密 * 30)
ELSE
	SOURCE:18 += 1400 + (ABL:親密 * 20)
ENDIF


;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:18 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:18 += 500 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:18 += 2000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:18 < 0
	SOURCE:18 = 0

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:21 += 200 + (ABL:親密 * 20)
	ELSEIF ABL:親密 <= 3
		SOURCE:21 += 200 + (ABL:親密 * 30)
	ELSEIF ABL:親密 <= 5
		SOURCE:21 += 300 + (ABL:親密 * 40)
	ELSEIF ABL:親密 <= 8
		SOURCE:21 += 400 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 11
		SOURCE:21 += 500 + (ABL:親密 * 60)
	ELSE
		SOURCE:21 += 600 + (ABL:親密 * 70)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:20 = 400
	ELSEIF ABL:サドっ気 == 1
		SOURCE:20 = 600
	ELSEIF ABL:サドっ気 == 2
		SOURCE:20 = 900
	ELSEIF ABL:サドっ気 == 3
		SOURCE:20 = 1300
	ELSEIF ABL:サドっ気 == 4
		SOURCE:20 = 1800
	ELSE
		SOURCE:20 = 1000 + (ABL:サドっ気 * 250)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:6 - 1
TFLAG:30 += A

IF TFLAG:18 == -1
	TIMES SOURCE:18 , 0.10
	TIMES SOURCE:16 , 0.10
	TIMES SOURCE:20 , 0.50
	TIMES SOURCE:21 , 0.50
	TFLAG:30 -= 10
	TFLAG:37 -= 5
ELSEIF TFLAG:18 == 0
	TIMES SOURCE:18 , 1.00
	TIMES SOURCE:16 , 1.00
	TIMES SOURCE:20 , 1.00
	TIMES SOURCE:21 , 1.00
	TFLAG:37 += A
	;恋慕または恋人ありで愛情経験追加
	IF TALENT:85 || TALENT:153
		EXP:23 += 3
		PRINTFORML %EXPNAME:23%+3
	ENDIF
ELSE
	TIMES SOURCE:18 , 2.00
	TIMES SOURCE:16 , 2.00
	TIMES SOURCE:20 , 2.00
	TIMES SOURCE:21 , 2.00
	TFLAG:30 += 2
	TFLAG:37 += 5 + A
	;愛情経験追加
	IF TALENT:85 || TALENT:153
		EXP:23 += 9
		PRINTFORML %EXPNAME:23%+9
	ELSE
		EXP:23 += 3
		PRINTFORML %EXPNAME:23%+3
	ENDIF
ENDIF


RETURN 1

