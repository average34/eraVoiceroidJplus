@COM_ABLE367
;着衣ローター実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ローターがないと無理
SIF ITEM:0 == 0
	RETURN 0
;ウフフ中は無理
SIF TFLAG:44 == 1
	RETURN 0
;欲望6以上かつ、従順9以上or好感度900以上or恋人が必要
SIF ABL:欲望 < 5 || (ABL:親密 < 9 && CFLAG:2 < 900 && TALENT:恋人 == 0)
	RETURN 0

RETURN 1

@COM367
;着衣ローター

PRINTL 着衣ローター
CALL GET_SUCCESS_RATE
B = 90 + A / 10
SIF B > 99
	B = 99
A = RAND:100
IF A <= 9
	;10％で大成功
	TFLAG:18 = 1
ELSEIF A >= B
	;10～1％で失敗
	TFLAG:18 = -1
ELSE
	;残りは成功
	TFLAG:18 = 0
ENDIF

;15%でローターつけながら戦闘訓練
IF RAND:100 < 15
	TFLAG:17 = 1
;戦闘訓練が発生しなかった場合、デートしていなければ20%でローターつけながら家事
ELSEIF RAND:100 < 20 && TEQUIP:2 == 0
	TFLAG:17 = 2
ELSE
	TFLAG:17 = 0
ENDIF

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

STR:0 = 着衣ローター
CALL TRAIN_MESSAGE_B

LOSEBASE:気力 += 150

;固定で獲得するソース
SOURCE:9 = 50
SOURCE:18 = 50

;Ｃ感覚
IF ABL:Ｃ感覚 == 0
	SOURCE:0 = 100
ELSEIF ABL:Ｃ感覚 == 1
	SOURCE:0 = 200
ELSEIF ABL:Ｃ感覚 == 2
	SOURCE:0 = 400
ELSEIF ABL:Ｃ感覚 == 3
	SOURCE:0 = 800
ELSEIF ABL:Ｃ感覚 == 4
	SOURCE:0 = 1200
ELSE
	SOURCE:0 = 750 + (ABL:Ｃ感覚 * 150)
ENDIF

;Aは露出、恭順追加のSOURCEと恥情、Bは逸脱等の計算に利用
A = 300
B = 300

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES A , 0.80
ELSEIF PALAM:5 < PALAMLV:2
	TIMES A , 0.90
ELSEIF PALAM:5 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES A , 1.10
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES A , 1.20
ENDIF
;ABL:露出癖をみる
IF ABL:露出癖 == 0
	SOURCE:7 += 0
	TIMES A, 1.00
ELSEIF ABL:露出癖 == 1
	SOURCE:7 += 50
	TIMES A, 1.20
ELSEIF ABL:露出癖 == 2
	SOURCE:7 += 150
	TIMES A, 1.40
ELSEIF ABL:露出癖 == 3
	SOURCE:7 += 400
	TIMES A, 1.60
ELSEIF ABL:露出癖 == 4
	SOURCE:7 += 750
	TIMES A, 2.00
ELSE
	SOURCE:7 += 175 + (ABL:露出癖 * 225)
	SOURCE:10 += 175 + (ABL:露出癖 * 225)
	A = A * (ABL:露出癖 * 50 + 50) / 100
ENDIF
;ABL:マゾっ気をみる
IF ABL:マゾっ気 == 0
	TIMES A , 0.80
ELSEIF ABL:マゾっ気 == 1
	TIMES A , 1.00
ELSEIF ABL:マゾっ気 == 2
	TIMES A , 1.30
ELSEIF ABL:マゾっ気 == 3
	TIMES A , 1.60
ELSEIF ABL:マゾっ気 == 4
	TIMES A , 2.00
ELSE
	A = A * (ABL:マゾっ気 * 50 + 50) / 100
ENDIF

;目立ちたがり
SIF TALENT:目立ちたがり
	TIMES A , 1.50
;解放
SIF TALENT:解放
	TIMES A , 1.50

;臆病
SIF TALENT:臆病
	TIMES B , 2.00
;恥じらい
SIF TALENT:恥じらい
	TIMES B , 2.00

SOURCE:12 += A
SOURCE:14 += B
SOURCE:16 += A/2

UP:8 += A/2
UP:10 += SOURCE:14/2

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:21 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:21 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:21 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:21 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:21 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:21 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:20 = 600
	ELSEIF ABL:サドっ気 == 1
		SOURCE:20 = 900
	ELSEIF ABL:サドっ気 == 2
		SOURCE:20 = 1200
	ELSEIF ABL:サドっ気 == 3
		SOURCE:20 = 1600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:20 = 2000
	ELSE
		SOURCE:20 = 1000 + (ABL:サドっ気 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
;パワーアップ版ならソースを追加
IF TFLAG:17 == 1
	;戦闘訓練
	TIMES SOURCE:9 , 2.00
	TIMES SOURCE:18 , 1.20
	TIMES SOURCE:20 , 1.50
	TIMES SOURCE:21 , 1.50
	;激しく動くので刺激大
	TIMES SOURCE:0 , 1.20
	;戦闘経験
	PRINTFORML %EXPNAME:95%+1
	PRINTFORMW %EXPNAME:95%（%CALLNAME:PLAYER%）+1
	EXP:戦闘経験 += 1
	EXP:PLAYER:戦闘経験 += 1
	A += 2
ELSEIF TFLAG:17 == 2
	;家事
	SOURCE:19 = 500 + (ABL:親密 * 100) + (ABL:料理技能 * 100)
	;家事経験
	PRINTFORMW %EXPNAME:90%+1
	EXP:家事経験 += 1
	A += 2
ENDIF

TFLAG:30 += A
TFLAG:37 += A / 2

;レズ経験とBL経験
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +1
	EXP:レズ経験 += 1
	EXP:PLAYER:レズ経験 += 1
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:ＢＬ経験 += 1
	EXP:PLAYER:ＢＬ経験 += 1
ENDIF

IF TFLAG:18 == -1
	TIMES SOURCE:18 , 0.10
	TIMES SOURCE:9 , 0.50
	TIMES SOURCE:20 , 0.50
	TIMES SOURCE:21 , 0.50
	TFLAG:30 -= 10
	TFLAG:37 -= 5
ELSEIF TFLAG:18 == 0
	TIMES SOURCE:18 , 1.00
	TIMES SOURCE:9 , 1.00
	TIMES SOURCE:20 , 1.00
	TIMES SOURCE:21 , 1.00
	TFLAG:37 += A
ELSE
	TIMES SOURCE:18 , 2.00
	TIMES SOURCE:9 , 2.00
	TIMES SOURCE:20 , 2.00
	TIMES SOURCE:21 , 2.00
	TFLAG:30 += 2
	TFLAG:37 += 5 + A
ENDIF

;既成事実1に相当
TFLAG:200 = 1

RETURN 1

