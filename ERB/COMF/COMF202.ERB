LOSEBASE:気力 += 70

;欲情
SOURCE:11 = 1000
;露出
SOURCE:12 = 500
;屈服
SOURCE:13 = 500
;逸脱
SOURCE:14 = 800

IF W == 0
	;胸の場合液体が減る
	SOURCE:10 = 900
	;ABL:Ｂ感覚をみる
	IF ABL:Ｂ感覚 == 0
		SOURCE:17 = 70
	ELSEIF ABL:Ｂ感覚 == 1
		SOURCE:17 = 180
	ELSEIF ABL:Ｂ感覚 == 2
		SOURCE:17 = 750
	ELSEIF ABL:Ｂ感覚 == 3
		SOURCE:17 = 1600
	ELSEIF ABL:Ｂ感覚 == 4
		SOURCE:17 = 2800
	ELSE
		SOURCE:17 = 900 + (ABL:Ｂ感覚 * 450)
	ENDIF
	
	;Ｂ敏感、鈍感をみる
	IF TALENT:107
		TIMES SOURCE:17 , 0.50
		TIMES SOURCE:10 , 0.40
	ELSEIF TALENT:108
		TIMES SOURCE:17 , 1.40
		TIMES SOURCE:10 , 1.20
	ENDIF
ELSE
	SOURCE:10 = 2000
	;ABL:Ｃ感覚をみる
	IF ABL:Ｃ感覚 == 0
		SOURCE:0 = 100
	ELSEIF ABL:Ｃ感覚 == 1
		SOURCE:0 = 180
	ELSEIF ABL:Ｃ感覚 == 2
		SOURCE:0 = 750
	ELSEIF ABL:Ｃ感覚 == 3
		SOURCE:0 = 1600
	ELSEIF ABL:Ｃ感覚 == 4
		SOURCE:0 = 2600
	ELSE
		SOURCE:0 = 1000 + (ABL:Ｃ感覚 * 470)
	ENDIF
	
	;Ｃ敏感、鈍感をみる
	IF TALENT:101
		TIMES SOURCE:0 , 0.60
		TIMES SOURCE:10 , 0.50
	ELSEIF TALENT:102
		TIMES SOURCE:0 , 1.50
		TIMES SOURCE:10 , 1.20
	ENDIF
ENDIF

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES SOURCE:11, 0.30
	TIMES SOURCE:13, 0.30
ELSEIF PALAM:5 < PALAMLV:2
	TIMES SOURCE:11, 0.60
	TIMES SOURCE:13, 0.60
ELSEIF PALAM:5 < PALAMLV:3
	TIMES SOURCE:11, 1.00
	TIMES SOURCE:13, 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES SOURCE:11, 1.30
	TIMES SOURCE:13, 1.30
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES SOURCE:11, 1.60
	TIMES SOURCE:13, 1.60
ENDIF

;調教者のTALENT:舌使いをみる
IF TALENT:PLAYER:52
	IF W
		TIMES SOURCE:0 , 2.00
	ELSE
		TIMES SOURCE:6 , 2.00
	ENDIF
	SOURCE:16 += SOURCE:0/20
ENDIF

