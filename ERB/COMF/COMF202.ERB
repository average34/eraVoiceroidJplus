@COM_ABLE202
;わかめ酒実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;酒をプレゼントされた経験がないとダメ
SIF TFLAG:92 == 0
	RETURN 0
;性器が汚れているとMASTERの場合クンニはできない（調教者が汚れ無視か愛液、母乳のよごれならＯＫ）
SIF STAIN:3 & 14 && ASSIPLAY == 0 && TALENT:MASTER:64 == 0
	RETURN 0
;性器が汚れており、汚臭敏感で親密3以下のASSIの場合クンニはできない（調教者が汚れ無視か愛液、母乳のよごれならＯＫ）
IF STAIN:3 & 14 && ASSIPLAY
	SIF ABL:ASSI:親密 <= 3 && TALENT:ASSI:62 && TALENT:ASSI:64 == 0
		RETURN 0
ENDIF
;欲望5以上かつ、親密7以上or好感度700以上or恋人or恋慕が必要
SIF ABL:欲望 < 5 || (ABL:親密 < 7 && CFLAG:2 < 700 && TALENT:153 == 0 && TALENT:85 == 0)
	RETURN 0
;小柄体型の場合、巨乳以外だとダメ
SIF TALENT:100 && TALENT:110 == 0
	RETURN 0
;オトコだとダメ
SIF TALENT:122
	RETURN 0
;バイブまたは焼芋挿入中のときは技巧が4以上ないとダメ
SIF (TEQUIP:11 || TEQUIP:71) && ABL:PLAYER:技巧 < 4
	RETURN 0
;縄で緊縛中はダメ
SIF TEQUIP:44
	RETURN 0
;クスコ装着中はダメ
SIF TEQUIP:61
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:90
	RETURN 0
;お風呂場プレイ中はプレイマットが無いとダメ
IF TEQUIP:58
	SIF ITEM:13 == 0 && NOITEM == 0
		RETURN 0
ENDIF
RETURN 1

@COM202

;ワカメ酒（全キャラ対応改変版）

PRINTL ワカメ酒
STR:0 = ワカメ酒
SIF TALENT:110 || (STAIN:5 & 14 && TALENT:PLAYER:64)
	PRINTL [0] 胸で
PRINTL [1] 正座させて
