@COM_ABLE281
;口上独自ウフフコマンド実行判定
;COM_ABLE共通判定
CALL COM_ABLE_COMMON, SELECTCOM
SIF RESULT == 0
	RETURN 0
;ウフフ中じゃないと無理
SIF TFLAG:44 == 0
	RETURN 0
;CFLAGがたてられてないと無理
SIF !GETBIT(CFLAG:TARGET:独自コマンド使用判定, 1)
	RETURN 0
RESULT = 0
TRYCALLFORM COM_ABLE281_{NO:TARGET}
SIF RESULT == 0
	RETURN 0
RETURN 1

