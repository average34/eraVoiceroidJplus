@COM57
;羞恥プレイ
IF NAME_CSV(NO:PLAYER, 0) == "四季映姫"
	PRINTL 浄玻璃の鏡
ELSE
	PRINTL 羞恥プレイ
ENDIF
STR:0 = 羞恥プレイ
CALL TRAIN_MESSAGE_B

;鏡のセット
;終了時は修正なし
IF TEQUIP:57
	TEQUIP:57 = 0
	RETURN 1
ENDIF

IF NAME_CSV(NO:PLAYER, 0) == "四季映姫"
	LOSEBASE:0 += 0
	LOSEBASE:1 += 250
ELSE
	LOSEBASE:0 += 0
	LOSEBASE:1 += 200
ENDIF


A = 500
B = 500

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES A , 1.00
ELSEIF PALAM:5 < PALAMLV:2
	TIMES A , 1.10
ELSEIF PALAM:5 < PALAMLV:3
	TIMES A , 1.20
ELSEIF PALAM:5 < PALAMLV:4
	TIMES A , 1.30
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES A , 1.40
ENDIF

;ABL:露出癖をみる
IF ABL:7 == 0
	SOURCE:7 += 0
	SOURCE:10 += 0
	SOURCE:13 += 600
	SOURCE:14 += 1000
	SOURCE:15 += 1000
	TIMES A, 0.60
ELSEIF ABL:7 == 1
	SOURCE:7 += 150
	SOURCE:10 += 150
	SOURCE:13 += 500
	TIMES A, 1.00
ELSEIF ABL:7 == 2
	SOURCE:7 += 300
	SOURCE:10 += 300
	SOURCE:13 += 400
	TIMES A, 1.60
ELSEIF ABL:7 == 3
	SOURCE:7 += 600
	SOURCE:10 += 600
	SOURCE:13 += 300
	TIMES A, 2.00
ELSEIF ABL:7 == 4
	SOURCE:7 += 1000
	SOURCE:10 += 1000
	SOURCE:13 += 200
	TIMES A, 2.60
ELSE
	SOURCE:7 += (ABL:7 * 400) - 200
	SOURCE:10 += (ABL:7 * 400) - 200
	SOURCE:13 += 100
	A = A * (ABL:7 * 60 + 80) / 100
ENDIF
;ABL:マゾっ気をみる
IF ABL:8 == 0
	TIMES A , 1.00
ELSEIF ABL:8 == 1
	TIMES A , 1.20
ELSEIF ABL:8 == 2
	TIMES A , 1.40
ELSEIF ABL:8 == 3
	TIMES A , 1.60
ELSEIF ABL:8 == 4
	TIMES A , 1.80
ELSE
	A = A * (ABL:8 * 10 + 150) / 100
ENDIF

;無関心
SIF TALENT:21
	TIMES A , 0.80
;感情乏しい
SIF TALENT:22
	TIMES A , 0.80
;好奇心
SIF TALENT:23
	TIMES A , 2.50
;解放
SIF TALENT:33
	TIMES A , 1.50

;臆病
SIF TALENT:10
	TIMES B , 1.50
;恥じらい
SIF TALENT:35
	TIMES B , 3.00

;倒錯的
IF TALENT:80
	TIMES A , 1.50
	TIMES B , 1.20
ENDIF
;魅力
IF TALENT:113
	SOURCE:3 += 500
	SOURCE:16 += 500
	TIMES A , 1.50
	TIMES B , 1.20
ENDIF

IF NAME_CSV(NO:PLAYER, 0) == "四季映姫"
	SOURCE:12 += (A*3) / 2
	SOURCE:14 += B
	SOURCE:16 += A / 3
	UP:8 += (A*3) / 2
	UP:10 += (SOURCE:14*3) / 2
	TEQUIP:57 = 2
ELSE
	SOURCE:12 += A
	SOURCE:14 += B
	SOURCE:16 += A/2
	UP:8 += A/2
	UP:10 += SOURCE:14/2
	TEQUIP:57 = 1
ENDIF

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:0 <= 1
		SOURCE:21 += 300 + (ABL:0 * 50)
	ELSEIF ABL:0 <= 3
		SOURCE:21 += 600 + (ABL:0 * 100)
	ELSEIF ABL:0 <= 5
		SOURCE:21 += 800 + (ABL:0 * 120)
	ELSEIF ABL:0 <= 8
		SOURCE:21 += 1000 + (ABL:0 * 140)
	ELSEIF ABL:0 <= 11
		SOURCE:21 += 1200 + (ABL:0 * 160)
	ELSE
		SOURCE:21 += 1500 + (ABL:0 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:15 == 0
		SOURCE:20 = 600
	ELSEIF ABL:15 == 1
		SOURCE:20 = 900
	ELSEIF ABL:15 == 2
		SOURCE:20 = 1200
	ELSEIF ABL:15 == 3
		SOURCE:20 = 1600
	ELSEIF ABL:15 == 4
		SOURCE:20 = 2000
	ELSE
		SOURCE:20 = 1000 + (ABL:15 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
;合意がないと好感度が下がる
IF TALENT:152 == 0 && TFLAG:48 == 0
	A -= 9
	SOURCE:15 += 400
ENDIF
TFLAG:30 += A
TFLAG:37 += A / 2


RETURN 1

