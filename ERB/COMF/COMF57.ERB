@COM57
;羞恥プレイ
IF NAME_CSV(NO:PLAYER, 0) == "四季映姫"
	PRINTL 浄玻璃の鏡
ELSE
	PRINTL 羞恥プレイ
ENDIF
STR:0 = 羞恥プレイ
CALL TRAIN_MESSAGE_B

;鏡のセット
;終了時は修正なし
IF TEQUIP:57
	TEQUIP:57 = 0
	RETURN 1
ENDIF

IF NAME_CSV(NO:PLAYER, 0) == "四季映姫"
	LOSEBASE:体力 += 0
	LOSEBASE:気力 += 250
ELSE
	LOSEBASE:体力 += 0
	LOSEBASE:気力 += 200
ENDIF


A = 500
B = 500

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES A , 1.00
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES A , 1.10
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES A , 1.20
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES A , 1.30
ELSEIF PALAM:欲情 >= PALAMLV:4
	TIMES A , 1.40
ENDIF

;ABL:露出癖をみる
IF ABL:露出癖 == 0
	SOURCE:中毒充足 += 0
	SOURCE:液体追加 += 0
	SOURCE:屈従 += 600
	SOURCE:逸脱 += 1000
	SOURCE:反感追加 += 1000
	TIMES A, 0.60
ELSEIF ABL:露出癖 == 1
	SOURCE:中毒充足 += 150
	SOURCE:液体追加 += 150
	SOURCE:屈従 += 500
	TIMES A, 1.00
ELSEIF ABL:露出癖 == 2
	SOURCE:中毒充足 += 300
	SOURCE:液体追加 += 300
	SOURCE:屈従 += 400
	TIMES A, 1.60
ELSEIF ABL:露出癖 == 3
	SOURCE:中毒充足 += 600
	SOURCE:液体追加 += 600
	SOURCE:屈従 += 300
	TIMES A, 2.00
ELSEIF ABL:露出癖 == 4
	SOURCE:中毒充足 += 1000
	SOURCE:液体追加 += 1000
	SOURCE:屈従 += 200
	TIMES A, 2.60
ELSE
	SOURCE:中毒充足 += (ABL:露出癖 * 400) - 200
	SOURCE:液体追加 += (ABL:露出癖 * 400) - 200
	SOURCE:屈従 += 100
	A = A * (ABL:露出癖 * 60 + 80) / 100
ENDIF
;ABL:マゾっ気をみる
IF ABL:マゾっ気 == 0
	TIMES A , 1.00
ELSEIF ABL:マゾっ気 == 1
	TIMES A , 1.20
ELSEIF ABL:マゾっ気 == 2
	TIMES A , 1.40
ELSEIF ABL:マゾっ気 == 3
	TIMES A , 1.60
ELSEIF ABL:マゾっ気 == 4
	TIMES A , 1.80
ELSE
	A = A * (ABL:マゾっ気 * 10 + 150) / 100
ENDIF

;無関心
SIF TALENT:無関心
	TIMES A , 0.80
;感情乏しい
SIF TALENT:感情乏しい
	TIMES A , 0.80
;好奇心
SIF TALENT:好奇心
	TIMES A , 2.50
;解放
SIF TALENT:解放
	TIMES A , 1.50

;臆病
SIF TALENT:臆病
	TIMES B , 1.50
;恥じらい
SIF TALENT:恥じらい
	TIMES B , 3.00

;倒錯的
IF TALENT:倒錯的
	TIMES A , 1.50
	TIMES B , 1.20
ENDIF
;魅力
IF TALENT:魅力
	SOURCE:情愛 += 500
	SOURCE:恭順追加 += 500
	TIMES A , 1.50
	TIMES B , 1.20
ENDIF

IF NAME_CSV(NO:PLAYER, 0) == "四季映姫"
	SOURCE:露出 += (A*3) / 2
	SOURCE:逸脱 += B
	SOURCE:恭順追加 += A / 3
	UP:恥情 += (A*3) / 2
	UP:恐怖 += (SOURCE:逸脱*3) / 2
	TEQUIP:57 = 2
ELSE
	SOURCE:露出 += A
	SOURCE:逸脱 += B
	SOURCE:恭順追加 += A/2
	UP:恥情 += A/2
	UP:恐怖 += SOURCE:逸脱/2
	TEQUIP:57 = 1
ENDIF

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:受動 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:受動 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:受動 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:受動 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:受動 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:受動 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:征服 = 600
	ELSEIF ABL:サドっ気 == 1
		SOURCE:征服 = 900
	ELSEIF ABL:サドっ気 == 2
		SOURCE:征服 = 1200
	ELSEIF ABL:サドっ気 == 3
		SOURCE:征服 = 1600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:征服 = 2000
	ELSE
		SOURCE:征服 = 1000 + (ABL:サドっ気 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:10 + 5
;合意がないと好感度が下がる
IF TALENT:合意 == 0 && TFLAG:48 == 0
	A -= 9
	SOURCE:反感追加 += 400
ENDIF
TFLAG:30 += A
TFLAG:37 += A / 2


RETURN 1

