@COM169_C
;豆炙り
PRINTL 豆炙り
STR:0 = 豆炙り
CALL TRAIN_MESSAGE_B
LOSEBASE:体力 += 150
LOSEBASE:気力 += 150

SOURCE:露出 = 200
SOURCE:屈従 = 500
SOURCE:逸脱 = 500

;ABL:Ｃ感覚をみる
IF ABL:Ｃ感覚 == 0
	SOURCE:快Ｃ = 40
	SOURCE:痛み = 100
ELSEIF ABL:Ｃ感覚 == 1
	SOURCE:快Ｃ = 160
	SOURCE:痛み = 500
ELSEIF ABL:Ｃ感覚 == 2
	SOURCE:快Ｃ = 700
	SOURCE:痛み = 750
ELSEIF ABL:Ｃ感覚 == 3
	SOURCE:快Ｃ = 1500
	SOURCE:痛み = 1500
ELSEIF ABL:Ｃ感覚 == 4
	SOURCE:快Ｃ = 2400
	SOURCE:痛み = 2500
ELSE
	SOURCE:快Ｃ = 3300
	SOURCE:痛み = 3000
ENDIF

;調教者のABL:技巧をみる
IF ABL:PLAYER:技巧 == 0
	TIMES SOURCE:快Ｃ , 0.60
	TIMES SOURCE:痛み , 4.00
ELSEIF ABL:PLAYER:技巧 == 1
	TIMES SOURCE:快Ｃ , 0.80
	TIMES SOURCE:痛み , 2.00
ELSEIF ABL:PLAYER:技巧 == 2
	TIMES SOURCE:快Ｃ , 1.00
	TIMES SOURCE:痛み , 1.50
ELSEIF ABL:PLAYER:技巧 == 3
	TIMES SOURCE:快Ｃ , 1.20
	TIMES SOURCE:痛み , 1.20
ELSEIF ABL:PLAYER:技巧 == 4
	TIMES SOURCE:快Ｃ , 1.40
	TIMES SOURCE:痛み , 1.10
ELSEIF ABL:PLAYER:技巧 > 4
	TIMES SOURCE:快Ｃ , 1.60
	TIMES SOURCE:痛み , 1.00
ENDIF

;サドを見る
SIF TALENT:サド
	TIMES SOURCE:痛み , 2.00
;Ｃ敏感、鈍感をみる
SIF TALENT:Ｃ鈍感
	TIMES SOURCE:快Ｃ , 0.60
SIF TALENT:Ｃ敏感
	TIMES SOURCE:快Ｃ , 1.50
;炎が苦手そうな方々(なし)
IF 0
	TIMES SOURCE:痛み , 2.00
	PALAM:恐怖 += 3000
ENDIF

;奴隷のＶ⇔調教者の手の汚れが移動
STAIN:ヴァギナ |= STAIN:PLAYER:手
STAIN:PLAYER:手 |= STAIN:ヴァギナ

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +3
	EXP:レズ経験 += 3
ENDIF

RETURN 1

