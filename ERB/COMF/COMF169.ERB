@COM169_C
;豆炙り
PRINTL 豆炙り
STR:0 = 豆炙り
CALL TRAIN_MESSAGE_B
LOSEBASE:体力 += 150
LOSEBASE:気力 += 150

SOURCE:12 = 200
SOURCE:13 = 500
SOURCE:14 = 500

;ABL:Ｃ感覚をみる
IF ABL:Ｃ感覚 == 0
	SOURCE:0 = 40
	SOURCE:6 = 100
ELSEIF ABL:Ｃ感覚 == 1
	SOURCE:0 = 160
	SOURCE:6 = 500
ELSEIF ABL:Ｃ感覚 == 2
	SOURCE:0 = 700
	SOURCE:6 = 750
ELSEIF ABL:Ｃ感覚 == 3
	SOURCE:0 = 1500
	SOURCE:6 = 1500
ELSEIF ABL:Ｃ感覚 == 4
	SOURCE:0 = 2400
	SOURCE:6 = 2500
ELSE
	SOURCE:0 = 3300
	SOURCE:6 = 3000
ENDIF

;調教者のABL:技巧をみる
IF ABL:PLAYER:技巧 == 0
	TIMES SOURCE:0 , 0.60
	TIMES SOURCE:6 , 4.00
ELSEIF ABL:PLAYER:技巧 == 1
	TIMES SOURCE:0 , 0.80
	TIMES SOURCE:6 , 2.00
ELSEIF ABL:PLAYER:技巧 == 2
	TIMES SOURCE:0 , 1.00
	TIMES SOURCE:6 , 1.50
ELSEIF ABL:PLAYER:技巧 == 3
	TIMES SOURCE:0 , 1.20
	TIMES SOURCE:6 , 1.20
ELSEIF ABL:PLAYER:技巧 == 4
	TIMES SOURCE:0 , 1.40
	TIMES SOURCE:6 , 1.10
ELSEIF ABL:PLAYER:技巧 > 4
	TIMES SOURCE:0 , 1.60
	TIMES SOURCE:6 , 1.00
ENDIF

;サドを見る
SIF TALENT:83
	TIMES SOURCE:6 , 2.00
;Ｃ敏感、鈍感をみる
SIF TALENT:101
	TIMES SOURCE:0 , 0.60
SIF TALENT:102
	TIMES SOURCE:0 , 1.50
;炎が苦手そうな方々(なし)
IF 0
	TIMES SOURCE:6 , 2.00
	PALAM:10 += 3000
ENDIF

;奴隷のＶ⇔調教者の手の汚れが移動
STAIN:3 |= STAIN:PLAYER:1
STAIN:PLAYER:1 |= STAIN:3

IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +3
	EXP:レズ経験 += 3
ENDIF

RETURN 1

