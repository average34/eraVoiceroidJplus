	PRINTFORML %CALLNAME:TARGET%にボールギャグを取ってもらった
ELSE
	PRINTFORML %CALLNAME:TARGET%は%CALLNAME:PLAYER%にボールギャグを嵌めさせた
ENDIF


@EQUIP_COM132
;ボールギャグ装備中
PRINTFORML ＜ボールギャグ装備中（%CALLNAME:PLAYER%）＞

;緊縛経験が高いと消費減少
IF EXP:緊縛経験 < EXPLV:3
	LOSEBASE:体力 += 10
	LOSEBASE:気力 += 120
ELSEIF EXP:緊縛経験 < EXPLV:4
	LOSEBASE:体力 += 8
	LOSEBASE:気力 += 100
ELSE
	LOSEBASE:体力 += 5
	LOSEBASE:気力 += 80
ENDIF

;ABL:サドっ気をみる
IF ABL:サドっ気 == 0
	A = 40
ELSEIF ABL:サドっ気 == 1
	A = 120
ELSEIF ABL:サドっ気 == 2
	A = 250
ELSEIF ABL:サドっ気 == 3
	A = 450
ELSEIF ABL:サドっ気 == 4
	A = 600
ELSE
	A = 375 + (ABL:サドっ気 * 75)
ENDIF

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES A , 0.60
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES A , 0.80
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES A , 1.20
ELSEIF PALAM:欲情 >= PALAMLV:4
	TIMES A , 1.40
ENDIF

SOURCE:征服 += A
SOURCE:達成感 += A
SOURCE:逸脱 += A
SOURCE:恭順追加 += A

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:40
	PRINTL +1
	EXP:レズ経験 += 1
	EXP:PLAYER:レズ経験 += 1
ELSEIF TALENT:オトコ == 1 && TALENT:PLAYER:オトコ == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:ＢＬ経験 += 1
	EXP:PLAYER:ＢＬ経験 += 1
ENDIF

EXP:PLAYER:緊縛経験 += 1
PRINTFORML 緊縛経験＋１(%CALLNAME:PLAYER%)
EXP:PLAYER:異常経験 += 1
PRINTFORML %EXPNAME:50%＋１(%CALLNAME:PLAYER%)

RETURN 1
