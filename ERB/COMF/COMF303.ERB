@COM303
;スキンシップ

PRINTL スキンシップ
STR:0 = スキンシップ
CALL GET_SUCCESS_RATE
B = 90 + A / 10
SIF B > 99
	B = 99
A = RAND:100
IF A <= 9
	;10％で大成功
	TFLAG:18 = 1
ELSEIF A >= B
	;10～1％で失敗
	TFLAG:18 = -1
ELSE
	;残りは成功
	TFLAG:18 = 0
ENDIF

TFLAG:17 = 0
;連続実行は強制的に濃厚になる
IF PREVCOM == 303
	TFLAG:17 = 1
;クリスマスデート中にある天気なら濃厚になる
ELSEIF TIME:5 == 8 && TEQUIP:2
	TFLAG:17 = 1
;従順8以上or好感度1000以上or合意or恋人 なら、実行判定を行い、成功でパワーアップ
ELSEIF ABL:0 >= 8 || CFLAG:2 >= 1000 || TALENT:152 || TALENT:153

A = 0
S = 0

;合計を表示(50以上で実行)
V = 50
;デート中はイチャイチャしやすい
SIF TEQUIP:2
	V -= 10

;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:1
	A += ABL:1 * 3
ENDIF
;ABL:奉仕精神
IF ABL:6
	A += ABL:6 * 3
ENDIF
;男嫌い
IF TALENT:82 && TALENT:PLAYER:122
	A -= 7
ENDIF
;天気：雪
IF TIME:5 == 5 || TIME:5 == 6 || TIME:5 == 8
	A += 10
ENDIF
;好感度
IF CFLAG:2 < 700
	B = 0
	IF CFLAG:2 < 50
		B = 50
	ELSEIF CFLAG:2 < 300
		B = 20
	ELSEIF CFLAG:2 < 500
		B = 10
	ELSE
		B = 5
	ENDIF
	A -= B
ENDIF

;好感度
IF CFLAG:2 >= 700
	B = 0
	IF CFLAG:2 < 1000
		B = 5
	ELSE
		B = CFLAG:2 / 100
	ENDIF
	A += B
ENDIF

IF ((FLAG:23 & 1p27) == 0) && FLAG:2 != 1
	;ABL:欲望
	IF ABL:1
		SIF S
			PRINT  + 
		PRINTS ABLNAME:1
		PRINTV 'LV,ABL:1,'(,ABL:1 * 3,')
		S = 1
	ENDIF
	;ABL:奉仕精神
	IF ABL:6
		SIF S
			PRINT  + 
		PRINTS ABLNAME:6
		PRINTV 'LV,ABL:6,'(,ABL:6 * 3,')
		S = 1
	ENDIF
	;男嫌い
	IF TALENT:82 && TALENT:PLAYER:122
		PRINT  - 
		PRINTS TALENTNAME:82
		PRINTV '(,7,')
		S = 1
	ENDIF
	;天気：雪
	IF TIME:5 == 5 || TIME:5 == 6 || TIME:5 == 8
		SIF S
			PRINT  + 
		PRINT 天気:雪
		PRINTV '(,10,')
		S = 1
	ENDIF
	;好感度
	IF CFLAG:2 < 700
		B = 0
		PRINT  - 
		IF CFLAG:2 < 50
			B = 50
		ELSEIF CFLAG:2 < 300
			B = 20
		ELSEIF CFLAG:2 < 500
			B = 10
		ELSE
			B = 5
		ENDIF
		PRINT 好感度不足
		PRINTV '(,B,')
		S = 1
	ENDIF

	;好感度
	IF CFLAG:2 >= 700
		B = 0
		SIF S
			PRINT  + 
		IF CFLAG:2 < 1000
			B = 5
		ELSE
			B = CFLAG:2 / 100
		ENDIF
		PRINT 好感度
		PRINTV '(,B,')
		S = 1
	ENDIF

	PRINT  = 
	PRINTV A

	IF A < V
		PRINT  < 
		PRINT 実行値
		PRINTV V
	ELSEIF A == V
		PRINT  = 
		PRINT 実行値
		PRINTV V
	ELSEIF A > V
		PRINT  > 
		PRINT 実行値
		PRINTV V
	ENDIF
	WAIT
ENDIF

;実行できる場合
IF A >= V
	;パワーアップ
	TFLAG:17 = 1
ENDIF

ENDIF

CALL TRAIN_MESSAGE_B

LOSEBASE:1 += 70

;固定で獲得するソース
SOURCE:18 = 0
SOURCE:9 = 500

;ABL:従順をみる
IF ABL:0 <= 1
	SOURCE:9 += (ABL:0 * 30)
ELSEIF ABL:0 <= 3
	SOURCE:18 += 100 + (ABL:0 * 40)
	SOURCE:9 += 200 + (ABL:0 * 30)
ELSEIF ABL:0 <= 5
	SOURCE:18 += 400 + (ABL:0 * 50)
	SOURCE:9 += 400 + (ABL:0 * 30)
ELSEIF ABL:0 <= 8
	SOURCE:18 += 700 + (ABL:0 * 60)
	SOURCE:9 += 600 + (ABL:0 * 40)
ELSEIF ABL:0 <= 11
	SOURCE:18 += 1200 + (ABL:0 * 80)
	SOURCE:9 += 800 + (ABL:0 * 40)
ELSE
	SOURCE:18 += 2000 + (ABL:0 * 50)
	SOURCE:9 += 1800 + (ABL:0 * 20)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:18 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:18 += 500 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:18 += 2000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:18 < 0
	SOURCE:18 = 0

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:0 == 0
		SOURCE:21 = 100
	ELSEIF ABL:0 == 1
		SOURCE:21 = 200
	ELSEIF ABL:0 == 2
		SOURCE:21 = 350
	ELSEIF ABL:0 == 3
		SOURCE:21 = 500
	ELSEIF ABL:0 == 4
		SOURCE:21 = 700
	ELSE
		SOURCE:21 = 1000 + (ABL:0 * 100)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:15 == 0
		SOURCE:20 = 500
	ELSEIF ABL:15 == 1
		SOURCE:20 = 700
	ELSEIF ABL:15 == 2
		SOURCE:20 = 900
	ELSEIF ABL:15 == 3
		SOURCE:20 = 1100
	ELSEIF ABL:15 == 4
		SOURCE:20 = 1300
	ELSE
		SOURCE:20 = 1000 + (ABL:15 * 150)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:5 - 1

SOURCE:3 = 0
;パワーアップ版ならソースを追加
IF TFLAG:17
	TIMES SOURCE:18 , 1.20
	TIMES SOURCE:9 , 2.00
	TIMES SOURCE:20 , 1.50
	TIMES SOURCE:21 , 1.50
	SOURCE:3 = SOURCE:9 / 10
	A += 2
	IF TALENT:151 == 0
		PRINTFORML %EXPNAME:96%＋１
		EXP:96 += 1
		EXP:PLAYER:96 += 1
		IF TALENT:PLAYER:151
			PRINTFORMW %CALLNAME:PLAYER%は【キス未経験】を失いました
			TALENT:PLAYER:151 = 0
		ENDIF
	ENDIF

	IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
		PRINTS EXPNAME:40
		PRINTL +1
		EXP:40 += 1
		EXP:PLAYER:40 += 1
	ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
		PRINTS EXPNAME:41
		PRINTL +1
		EXP:41 += 1
		EXP:PLAYER:41 += 1
	ENDIF

ENDIF

;従順が低いと好感度低下
IF ABL:0 == 0
	A -= 3
ELSEIF ABL:0 == 1
	A -= 2
ELSEIF ABL:0 == 2
	A -= 1
ENDIF
;好感度が低いと好感度低下
IF CFLAG:2 <= 50
	A -= 3
ELSEIF CFLAG:2 <= 100
	A -= 2
ELSEIF CFLAG:2 <= 250
	A -= 1
ENDIF


;好感度変化
TFLAG:30 += A

IF TFLAG:18 == -1
	TIMES SOURCE:18 , 0.10
	TIMES SOURCE:9 , 0.50
	TIMES SOURCE:20 , 0.50
	TIMES SOURCE:21 , 0.50
	TIMES SOURCE:3 , 0.50
	TFLAG:30 -= 10
	TFLAG:37 -= 5
ELSEIF TFLAG:18 == 0
	TIMES SOURCE:18 , 1.00
	TIMES SOURCE:9 , 1.00
	TIMES SOURCE:20 , 1.00
	TIMES SOURCE:21 , 1.00
	TIMES SOURCE:3 , 1.00
	TFLAG:37 += A
ELSE
	TIMES SOURCE:18 , 2.00
	TIMES SOURCE:9 , 2.00
	TIMES SOURCE:20 , 2.00
	TIMES SOURCE:21 , 2.00
	TIMES SOURCE:3 , 2.00
	TFLAG:30 += 2
	TFLAG:37 += 5 + A
ENDIF

;デート中は更にムードアップ
SIF TEQUIP:2
	TFLAG:37 += 1 + TFLAG:17 * 2

RETURN 1

