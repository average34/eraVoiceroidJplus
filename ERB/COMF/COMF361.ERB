@COM361
;愛撫

PRINTL 愛撫
CALL GET_SUCCESS_RATE
B = 90 + A / 10
SIF B > 99
	B = 99
A = RAND:100
IF A <= 9
	;10％で大成功
	TFLAG:18 = 1
ELSEIF A >= B
	;10～1％で失敗
	TFLAG:18 = -1
ELSE
	;残りは成功
	TFLAG:18 = 0
ENDIF


;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

STR:0 = 愛撫
CALL TRAIN_MESSAGE_B

LOSEBASE:1 += 100

;固定で獲得するソース
SOURCE:18 = 50
SOURCE:9 = 1000

;ABL:従順をみる
IF ABL:親密 <= 1
	SOURCE:18 += (ABL:親密 * 20)
	SOURCE:9 += (ABL:親密 * 100)
ELSEIF ABL:親密 <= 3
	SOURCE:18 += 100 + (ABL:親密 * 20)
	SOURCE:9 += 200 + (ABL:親密 * 105)
ELSEIF ABL:親密 <= 5
	SOURCE:18 += 200 + (ABL:親密 * 20)
	SOURCE:9 += 500 + (ABL:親密 * 110)
ELSEIF ABL:親密 <= 8
	SOURCE:18 += 300 + (ABL:親密 * 30)
	SOURCE:9 += 700 + (ABL:親密 * 120)
ELSEIF ABL:親密 <= 11
	SOURCE:18 += 400 + (ABL:親密 * 30)
	SOURCE:9 += 1200 + (ABL:親密 * 135)
ELSE
	SOURCE:18 += 800 + (ABL:親密 * 15)
	SOURCE:9 += 2000 + (ABL:親密 * 90)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:18 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:18 += 500 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:18 += 2000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:18 < 0
	SOURCE:18 = 0

;ABL:Ｃ感覚をみる
IF ABL:Ｃ感覚 == 0
	SOURCE:0 = 20
	SOURCE:3 = 50
ELSEIF ABL:Ｃ感覚 == 1
	SOURCE:0 = 100
	SOURCE:3 = 100
ELSEIF ABL:Ｃ感覚 == 2
	SOURCE:0 = 500
	SOURCE:3 = 160
ELSEIF ABL:Ｃ感覚 == 3
	SOURCE:0 = 1200
	SOURCE:3 = 200
ELSEIF ABL:Ｃ感覚 == 4
	SOURCE:0 = 2000
	SOURCE:3 = 230
ELSE
	SOURCE:0 = 800 + (ABL:Ｃ感覚 * 400)
	SOURCE:3 = 200 + (ABL:Ｃ感覚 * 10)
ENDIF

;TALENT:恋慕をみる
SIF TALENT:85
	TIMES SOURCE:3 , 1.50
;TALENT:恋人をみる
SIF TALENT:153
	TIMES SOURCE:3 , 1.50
;TALENT:親愛をみる
SIF TALENT:88
	TIMES SOURCE:3 , 2.00


;着衣補正		面倒なんで、元のソースをコピーして倍率をかける形で実装
TIMES SOURCE:3 , 0.80
TIMES SOURCE:0 , 0.60



;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:21 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:21 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:21 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:21 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:21 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:21 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:20 = 600
	ELSEIF ABL:サドっ気 == 1
		SOURCE:20 = 900
	ELSEIF ABL:サドっ気 == 2
		SOURCE:20 = 1200
	ELSEIF ABL:サドっ気 == 3
		SOURCE:20 = 1600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:20 = 2000
	ELSE
		SOURCE:20 = 1000 + (ABL:サドっ気 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:6 - 1
TFLAG:30 += A

IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +4
	EXP:40 += 4
	EXP:PLAYER:40 += 4
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +4
	EXP:41 += 4
	EXP:PLAYER:41 += 4
ENDIF

IF TFLAG:18 == -1
	TIMES SOURCE:18 , 0.10
	TIMES SOURCE:9 , 0.50
	TIMES SOURCE:20 , 0.50
	TIMES SOURCE:21 , 0.50
	TFLAG:30 -= 10
	TFLAG:37 -= 5
ELSEIF TFLAG:18 == 0
	TIMES SOURCE:18 , 1.00
	TIMES SOURCE:9 , 1.00
	TIMES SOURCE:20 , 1.00
	TIMES SOURCE:21 , 1.00
	TFLAG:37 += A
ELSE
	TIMES SOURCE:18 , 2.00
	TIMES SOURCE:9 , 2.00
	TIMES SOURCE:20 , 2.00
	TIMES SOURCE:21 , 2.00
	TFLAG:30 += 2
	TFLAG:37 += 5 + A
ENDIF


;既成事実１に相当
TFLAG:200 = 1

RETURN 1

