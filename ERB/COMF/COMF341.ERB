@COM341
;ソフトキス

PRINTL ソフトキス
CALL GET_SUCCESS_RATE
B = 90 + A / 10
SIF B > 99
	B = 99
A = RAND:100
IF A <= 9
	;10％で大成功
	TFLAG:18 = 1
ELSEIF A >= B
	;10～1％で失敗
	TFLAG:18 = -1
ELSE
	;残りは成功
	TFLAG:18 = 0
ENDIF


;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

STR:0 = ソフトキス
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
;キス経験で気力消費軽減（何度もキスしたがる、の再現だとでも脳内補完）
IF EXP:キス経験 < 100
	LOSEBASE:気力 += 70
ELSEIF EXP:キス経験 < 500
	LOSEBASE:気力 += 55
ELSE
	LOSEBASE:気力 += 35
ENDIF

;Ｍ感覚を設定している場合快Ｍソース等取得
SIF FLAG:62 & 4194304
	CALL SOURCE_M_COM341

;固定で獲得するソース
SOURCE:18 = 50
SOURCE:9 = 700

;ABL:従順をみる
IF ABL:親密 <= 1
	SOURCE:18 += (ABL:親密 * 20)
	SOURCE:9 += (ABL:親密 * 80)
ELSEIF ABL:親密 <= 3
	SOURCE:18 += 100 + (ABL:親密 * 20)
	SOURCE:9 += 200 + (ABL:親密 * 85)
ELSEIF ABL:親密 <= 5
	SOURCE:18 += 200 + (ABL:親密 * 20)
	SOURCE:9 += 500 + (ABL:親密 * 90)
ELSEIF ABL:親密 <= 8
	SOURCE:18 += 300 + (ABL:親密 * 30)
	SOURCE:9 += 700 + (ABL:親密 * 100)
ELSEIF ABL:親密 <= 11
	SOURCE:18 += 400 + (ABL:親密 * 30)
	SOURCE:9 += 1200 + (ABL:親密 * 110)
ELSE
	SOURCE:18 += 800 + (ABL:親密 * 15)
	SOURCE:9 += 2000 + (ABL:親密 * 70)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:18 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:18 += 500 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:18 += 2000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:18 < 0
	SOURCE:18 = 0

;ABL:奉仕精神をみる
IF ABL:奉仕精神 == 0
	SOURCE:4 = 50
	SOURCE:5 = 10
ELSEIF ABL:奉仕精神 == 1
	SOURCE:4 = 150
	SOURCE:5 = 50
ELSEIF ABL:奉仕精神 == 2
	SOURCE:4 = 200
	SOURCE:5 = 100
ELSEIF ABL:奉仕精神 == 3
	SOURCE:4 = 250
	SOURCE:5 = 180
ELSEIF ABL:奉仕精神 == 4
	SOURCE:4 = 300
	SOURCE:5 = 300
ELSE
	SOURCE:4 = 225 + (ABL:奉仕精神 * 25)
	SOURCE:5 = ABL:奉仕精神 * 100
ENDIF

;ABL:技巧をみる
IF ABL:技巧 == 0
	TIMES SOURCE:4 , 0.50
	TIMES SOURCE:5 , 0.50
ELSEIF ABL:技巧 == 1
	TIMES SOURCE:4 , 0.80
	TIMES SOURCE:5 , 0.80
ELSEIF ABL:技巧 == 2
	TIMES SOURCE:4 , 1.00
	TIMES SOURCE:5 , 1.00
ELSEIF ABL:技巧 == 3
	TIMES SOURCE:4 , 1.50
	TIMES SOURCE:5 , 1.50
ELSEIF ABL:技巧 == 4
	TIMES SOURCE:4 , 2.50
	TIMES SOURCE:5 , 2.50
ELSE
	SOURCE:4 = SOURCE:4 * (ABL:技巧 * 75 + 25) / 100
	SOURCE:5 = SOURCE:5 * (ABL:技巧 * 75 + 25) / 100
ENDIF

;プレイヤーのABL:技巧をみる
IF ABL:PLAYER:技巧 == 0
	SOURCE:3 = 100
	SOURCE:10 = 0
ELSEIF ABL:PLAYER:技巧 == 1
	SOURCE:3 = 150
	SOURCE:10 = 0
ELSEIF ABL:PLAYER:技巧 == 2
	SOURCE:3 = 200
	SOURCE:10 = 0
ELSEIF ABL:PLAYER:技巧 == 3
	SOURCE:3 = 300
	SOURCE:10 = 50
ELSEIF ABL:PLAYER:技巧 == 4
	SOURCE:3 = 500
	SOURCE:10 = 100
ELSE
	SOURCE:3 = 50 + (ABL:PLAYER:技巧 * 150)
	SOURCE:10 = (ABL:PLAYER:技巧 * 50) - 50
ENDIF

;TALENT:恋慕をみる
SIF TALENT:85
	TIMES SOURCE:3 , 1.50
;TALENT:恋人をみる
SIF TALENT:153
	TIMES SOURCE:3 , 1.50
;TALENT:親愛をみる
SIF TALENT:88
	TIMES SOURCE:3 , 2.00


;キスの種類補正		面倒なんで、殆どのソースをコピペして、ここだけ弄ってみる
TIMES SOURCE:3 , 0.60
TIMES SOURCE:4 , 0.60
TIMES SOURCE:5 , 0.60
TIMES SOURCE:10 , 0.60



;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:親密 <= 1
		SOURCE:21 += 300 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:21 += 600 + (ABL:親密 * 100)
	ELSEIF ABL:親密 <= 5
		SOURCE:21 += 800 + (ABL:親密 * 120)
	ELSEIF ABL:親密 <= 8
		SOURCE:21 += 1000 + (ABL:親密 * 140)
	ELSEIF ABL:親密 <= 11
		SOURCE:21 += 1200 + (ABL:親密 * 160)
	ELSE
		SOURCE:21 += 1500 + (ABL:親密 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:サドっ気 == 0
		SOURCE:20 = 600
	ELSEIF ABL:サドっ気 == 1
		SOURCE:20 = 900
	ELSEIF ABL:サドっ気 == 2
		SOURCE:20 = 1200
	ELSEIF ABL:サドっ気 == 3
		SOURCE:20 = 1600
	ELSEIF ABL:サドっ気 == 4
		SOURCE:20 = 2000
	ELSE
		SOURCE:20 = 1000 + (ABL:サドっ気 * 300)
	ENDIF
ENDIF

;好感度ランダム変化
A = RAND:6 - 1
TFLAG:30 += A

IF TFLAG:18 == -1
	TIMES SOURCE:18 , 0.10
	TIMES SOURCE:9 , 0.50
	TIMES SOURCE:20 , 0.50
	TIMES SOURCE:21 , 0.50
	TFLAG:30 -= 10
	TFLAG:37 -= 5
ELSEIF TFLAG:18 == 0
	TIMES SOURCE:18 , 1.00
	TIMES SOURCE:9 , 1.00
	TIMES SOURCE:20 , 1.00
	TIMES SOURCE:21 , 1.00
	TFLAG:37 += A
ELSE
	TIMES SOURCE:18 , 2.00
	TIMES SOURCE:9 , 2.00
	TIMES SOURCE:20 , 2.00
	TIMES SOURCE:21 , 2.00
	TFLAG:30 += 2
	TFLAG:37 += 5 + A
ENDIF

;デート中は更にムードアップ
SIF TEQUIP:2
	TFLAG:37 += 11

PRINTFORML %EXPNAME:96%＋１
EXP:キス経験 += 1
EXP:PLAYER:キス経験 += 1
IF TALENT:PLAYER:151
	PRINTFORMW %CALLNAME:PLAYER%は【キス未経験】を失いました
	TALENT:PLAYER:151 = 0
ENDIF

IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +2
	EXP:レズ経験 += 2
	EXP:PLAYER:レズ経験 += 2
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +2
	EXP:ＢＬ経験 += 2
	EXP:PLAYER:ＢＬ経験 += 2
ENDIF

IF TALENT:151
	TFLAG:600 = 1
	CALL KOJO_JUN
	TALENT:151 = 0
	PRINTFORMW %CALLNAME:TARGET%は【キス未経験】を失いました
	TFLAG:38 = 1

	;既成事実１に相当
	TFLAG:200 = 1
ENDIF


RETURN 1

;Ｍ感覚を設定している場合快Ｍソース等取得
@SOURCE_M_COM341
VARSET LOCAL, 0

;屈従・反感ソース
LOCAL:13 += 100
LOCAL:14 += 10

;ABL:Ｍ感覚をみる
IF ABL:Ｍ感覚 == 0
	LOCAL:24 += 5
ELSEIF ABL:Ｍ感覚 == 1
	LOCAL:24 += 25
ELSEIF ABL:Ｍ感覚 == 2
	LOCAL:24 += 100
