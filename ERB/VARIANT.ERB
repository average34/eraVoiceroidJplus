@ADD_YUKARISAMA
;ゆかり様加入処理

;絶対加入させない場合
SIF FLAG:28 & 2
	RETURN 1

;ゆかりを検索
T = 4
CALL GET_EXISTANCE
;計算しやすいように、存在位置を+1された値から、本来の値に戻す
E -= 1
;ゆかりが居ない
IF E < 0
	PRINTFORMW 特典としてゆかり様(ドＳ版ゆかり)を仲間に加える事ができます。仲間に加えますか？
	PRINTL [0] はい
	PRINTL [1] いいえ（次の機会に、また加入させるか聞く）
	PRINTL [2] 絶対使わないから次から聞かなくても良い

	INPUT
	IF RESULT < 0 || RESULT > 2
		RESTART
	ELSEIF RESULT == 0
		PRINTFORMW それではゆかり様を仲間に加えます。ゆかり様のご機嫌を損ねないよう、くれぐれもご注意下さい
		CALL ADDSPCHARA_4
	ELSEIF RESULT == 1
		PRINTFORMW それでは今回の加入は見送ります
	ELSEIF RESULT == 2
		PRINTFORMW 了解です。不快な思いをさせてしまい申し訳ありませんでした
		FLAG:28 |= 2
	ENDIF
	RETURN 1

;ゆかりが主人公
ELSEIF E == 0
	;変更できない
	FLAG:28 |= 2
;普通のゆかりが居る
ELSEIF TALENT:E:eraVoiceroidJも支配する程度の能力 == 0
	PRINTFORMW 特典としてゆかり様(ドＳ版ゆかり)を仲間に加える事ができます
	PRINTFORMW 今居る普通のゆかりは居なくなりますが、仲間に加えますか？
	PRINTL [0] はい
	PRINTL [1] いいえ（次の機会に、また加入させるか聞く）
	PRINTL [2] 絶対使わないから次から聞かなくても良い

	INPUT
	IF RESULT < 0 || RESULT > 2
		RESTART
	ELSEIF RESULT == 0
		PRINTFORMW それではゆかり様を仲間に加えます。ゆかり様のご機嫌を損ねないよう、くれぐれもご注意下さい

		IF TARGET >= 0
			LOCAL:1 = NO:TARGET
		ELSE
			LOCAL:1 = -1
		ENDIF
		IF ASSI >= 0
			LOCAL:2 = NO:ASSI
		ELSE
			LOCAL:2 = -1
		ENDIF
		;パートナーフラグを記憶
		LOCAL:3 = TALENT:E:パートナー
		DELCHARA E
		CALL ADDSPCHARA_4
		PRINTFORMW ＜ゆかりの様子が変わった＞
		REPEAT CHARANUM
			SIF NO:COUNT == LOCAL:1
				TARGET = COUNT
			SIF NO:COUNT == LOCAL:2
				ASSI = COUNT
		REND
		SIF LOCAL:2 == 1
			ASSI = -1
		
		;パートナーフラグ復元
		TALENT:A:パートナー = LOCAL:3
	ELSEIF RESULT == 1
		PRINTFORMW それでは今回の加入は見送ります
	ELSEIF RESULT == 2
		PRINTFORMW 了解です。不快な思いをさせてしまい申し訳ありませんでした
		FLAG:28 |= 2
	ENDIF
	RETURN 1

;もうゆかり様が居る
ELSE
	;多分何もしなくてOK
ENDIF

RETURN 1

