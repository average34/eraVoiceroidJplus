	RETURN 0
ENDIF



;-------------------------------------------------
;共通コンフィグ保存
;-------------------------------------------------
@STORE_GLOBAL_CONFIGURE, ARG
;グローバル変数読み込み
LOADGLOBAL

;グローバルコンフィグを使う設定か自動保存でないなら保存
IF GLOBAL:920 || ARG
	GLOBAL:923 = FLAG:23
	GLOBAL:961 = FLAG:61
	GLOBAL:962 = FLAG:62
	;コマンドフィルターの共通設定
	FOR LOCAL, SET_COM_FILTERING_NUM(), SET_COM_FILTERING_NUM()+16
		GLOBAL:(900+LOCAL) = CFLAG:MASTER:LOCAL
	NEXT
	SAVEGLOBAL
;そうでなければリターン
ELSE
	RETURN 0
ENDIF



