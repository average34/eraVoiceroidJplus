LOCAL:1 = ARG % 63
;フラグチェック
SIF GETBIT(CFLAG:(ARG:1):LOCAL, LOCAL:1)
	RETURNF 1
RETURNF 0
@INVERT_COM_FILTERING(ARG, ARG:1 = -123456789)
;隠し番号入力で対象をTARGETにもとい、省略でTARGET
SIF ARG:1 == -123456789
	ARG:1 = TARGET
