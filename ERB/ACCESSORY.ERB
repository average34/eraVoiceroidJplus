;アクセサリプレゼント判定
;デート終了時に呼ぶ
@ACCESSORY_CHECK
;コンフィグでonでないとダメ
SIF (FLAG:62 & 4) == 0
	RETURN 0
;判定はほとんど告白のコピペってのは秘密だぜ
IF ABL:0 >= 3 && CFLAG:2 >= 300 && ASSIPLAY == 0
	A = 0
	;目標難易度は50
	V = 50

	;純愛系コマンド実行値取得
	CALL GET_JUN_VALUE

	;好感度
	A += CFLAG:2 / 50

	;恋慕
	SIF TALENT:85
		A += 30

	;臆病
	SIF TALENT:10
		A -= 10

	;恥じらい
	SIF TALENT:35
		A -= 10

	;恥薄い
	SIF TALENT:36
		A += 5

	;悲観的
	SIF TALENT:26
		A -= 5

	;一線越えない
	SIF TALENT:27
		A -= 10

	;Aの値を退避
	Z = A
	;主導権基準値ボーナス
	T = TARGET
	CALL GET_INITIATIVE_RATE
	;退避させた値を戻す
	A = Z
	IF R < 0
		A += R / 5 + 5
	ELSEIF R > 0
		A -= R / 5
	ENDIF

	;ムードボーナス この値が本命
	IF TFLAG:37 < 10
		A -= 10
	ELSEIF TFLAG:37 < 30
		A -= 1
	ELSEIF TFLAG:37 < 50
		A += 1
	ELSEIF TFLAG:37 < 100
		A += TFLAG:37 / 5
	ELSEIF TFLAG:37 < 300
		A += TFLAG:37 / 3
	ELSE
		A += TFLAG:37
	ENDIF

	;デート経験 これも割と大きい
	IF EXP:94 < 50
		A -= 5
	ELSEIF EXP:94 < 100
		A += 5
	ELSEIF EXP:94 < 500
		A += EXP:94 / 15
	ELSE
		A += EXP:94 / 10
	ENDIF

	;判定成功
	IF A >= V
		;既に貰っている個数に応じて発生判定
		B = 6000 + NO:TARGET
		IF FLAG:B > 10
			C = RAND:5
			SIF C
				RETURN 1
		ELSEIF FLAG:B > 5
			C = RAND:3
			SIF C
				RETURN 1
		ELSEIF FLAG:B > 0
			C = RAND:2
			SIF C
				RETURN 1
		ENDIF
		FLAG:B += 1
		;この辺の描写は口上との兼ね合いが難しいけど、とりあえず暫定処置
		;口上表示
		TFLAG:600 = 37
		CALL KOJO_JUN
		PRINTFORMW %CALLNAME:PLAYER%は%CALLNAME:TARGET%からアクセサリをもらった
	ENDIF
ENDIF

;小物入れ
