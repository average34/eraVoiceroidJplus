	CSVCALLNAME CFLAG:MASTER:24, 0
	PRINTFORML %CALLNAME:MASTER%：(%RESULTS%から貰ったアクセサリ)
ELSE
	PRINTFORML %CALLNAME:MASTER%：(装備なし)
ENDIF
PRINTL 

REPEAT 100
	IF FLAG:(6000 + COUNT) > 0
		CSVCALLNAME COUNT, 0
		TSTR:COUNT = %RESULTS%から貰ったアクセサリ
		PRINTFORML [{COUNT,3}]%TSTR:COUNT%
		LOCAL:COUNT = 1
	ENDIF
REND
