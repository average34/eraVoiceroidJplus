IF CHARANUM <= 100
	PRINTL [100] 戻る
ELSE
	PRINTL [1000][-1] 戻る
ENDIF
IF CFLAG:MASTER:23
	PRINTL [200] 自動的にアクセサリを付けないようにする
ELSE
	PRINTL [200] 自動的にアクセサリを付ける
ENDIF
$INPUT_LOOP
INPUT

IF RESULT == -1 || (CHARANUM <= 100 && RESULT == 100) || RESULT == 1000
	RETURN 0
ELSEIF RESULT == 200
	IF CFLAG:MASTER:23
		CFLAG:MASTER:23 = 0
		PRINTL パートナーと過ごす時に相手のアクセサリを持っていて身につけていない場合、
		PRINTW 自動的にアクセサリを付けず、付けるか選択するようにしました
	ELSE
		CFLAG:MASTER:23 = 1
		PRINTL パートナーと過ごす時に相手のアクセサリを持っていて身につけていない場合、
		PRINTW 自動的にアクセサリを付けるようにしました
	ENDIF
	RESTART
ELSEIF LOCAL:RESULT
	IF RESULT == CFLAG:MASTER:24
		PRINTFORMW %TSTR:(CFLAG:MASTER:24)%をはずしました
		CFLAG:MASTER:24 = 0
	ELSE
		CFLAG:MASTER:24 = RESULT
		PRINTFORMW %TSTR:(CFLAG:MASTER:24)%を身につけました
	ENDIF
	RESTART
ELSE
	PRINTW 正しい数値を入力してください
	GOTO INPUT_LOOP
ENDIF

RETURN 1

;ターゲットから贈られたアクセサリを付けていると多少ソース追加
@EQUIP_COM4

SIF ASSIPLAY
	RETURN 1
SIF TEQUIP:4 != NO:TARGET
	RETURN 1

B = 100
D = 0
E = 0

;ABL:従順をみる
IF ABL:0 <= 1
	B += (ABL:0 * 20)
ELSEIF ABL:0 <= 3
	B += 200 + (ABL:0 * 40)
ELSEIF ABL:0 <= 5
	B += 500 + (ABL:0 * 50)
ELSEIF ABL:0 <= 8
	B += 700 + (ABL:0 * 80)
ELSEIF ABL:0 <= 11
	B += 1200 + (ABL:0 * 100)
ELSE
	B += 2000 + (ABL:0 * 130)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	B += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	B += 500 + (CFLAG:2 - 500) / 3
ELSE
	B += 2000 + (CFLAG:2 - 5000) / 5
ENDIF

;主導権をチェック
IF TFLAG:45 == 0
	;主導権が主人公側
	;ABL:従順をみる
	IF ABL:0 <= 1
		E += 300 + (ABL:0 * 50)
	ELSEIF ABL:0 <= 3
		E += 600 + (ABL:0 * 100)
	ELSEIF ABL:0 <= 5
		E += 800 + (ABL:0 * 120)
	ELSEIF ABL:0 <= 8
		E += 1000 + (ABL:0 * 140)
	ELSEIF ABL:0 <= 11
		E += 1200 + (ABL:0 * 160)
	ELSE
		E += 1500 + (ABL:0 * 180)
	ENDIF
ELSE
	;主導権が相手側
	;ABL:サドっ気をみる
	IF ABL:15 == 0
		D = 600
	ELSEIF ABL:15 == 1
		D = 900
	ELSEIF ABL:15 == 2
		D = 1200
	ELSEIF ABL:15 == 3
		D = 1600
	ELSEIF ABL:15 == 4
		D = 2000
	ELSE
		D = 1000 + (ABL:15 * 300)
	ENDIF
ENDIF

;恋慕
IF TALENT:85
	TIMES B , 1.10
	TIMES D , 1.10
	TIMES E , 1.20
ENDIF
;恋人
IF TALENT:153
	TIMES B , 1.20
	TIMES D , 1.20
	TIMES E , 1.10
ENDIF
;親愛
IF TALENT:88
	TIMES B , 1.50
	TIMES D , 1.50
	TIMES E , 1.50
ENDIF

TIMES B , 0.05
TIMES D , 0.05
TIMES E , 0.05

SOURCE:18 += B
SOURCE:20 += D
SOURCE:21 += E

SIF RAND:3
	TFLAG:30 += 1

RETURN 1

