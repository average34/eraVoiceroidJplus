		IF A < 30
			TIME:5 = 0
		ELSEIF A < 40
			TIME:5 = 1
		ELSEIF A < 60
			TIME:5 = 2
		ELSEIF A < 95
			TIME:5 = 5
		ELSE
			TIME:5 = 6
		ENDIF
	ENDIF
	SIF (TIME:1 == 42 || TIME:1 == 43) && TIME:5 != 1
		TIME:5 = 0
	SIF TIME:1 == 45
		TIME:5 = 6

ENDIF

