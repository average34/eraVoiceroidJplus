@WEATHER
;TIME:5が天気(0=晴1=快晴2=曇り3=雨4=大雨5=雪6=大雪)
;TIME:6はひとつ前の時間
;TIME:7はひとつ前の天気
SIF TIME == TIME:6
	RETURN 0
TIME:6 = TIME
TIME:7 = TIME:5
TIME:5 = 0
TIME:8 = 0
TIME:11 = 0
A = RAND:100
;春ですよー
IF DAY:2 == 0
;TIME:5が天気(0=晴1=快晴2=曇り3=雨4=大雨5=雪6=大雪)
	IF A < 30
		TIME:5 = 0
	ELSEIF A < 38 || (TIME == 1 && A < 40)
		TIME:5 = 1
	ELSEIF A < 68 || (TIME == 1 && A < 70)
		TIME:5 = 2
	ELSEIF A < 98 || TIME == 1
		TIME:5 = 3
	ELSE
		TIME:5 = 7
	ENDIF
	SIF (TIME:1 == 12 || TIME:1 == 13 || TIME:1 == 14 || TIME:1 == 15) && TIME:5 != 1 && TIME:5 != 7
		TIME:5 = 0

;夏
ELSEIF DAY:2 == 1
;TIME:5が天気(0=晴1=快晴2=曇り3=雨4=大雨5=雪6=大雪)
	IF TIME:1 == 21 || TIME:1 == 22
		IF A < 10
			TIME:5 = 0
		ELSEIF A < 20
			TIME:5 = 1
		ELSEIF A < 50
			TIME:5 = 2
		ELSEIF A < 90
			TIME:5 = 3
		ELSE
			TIME:5 = 4
		ENDIF
	ELSEIF TIME == 0
		IF A < 40
			TIME:5 = 0
		ELSEIF A < 60
			TIME:5 = 1
		ELSEIF A < 90
			TIME:5 = 2
		ELSE
			TIME:5 = 3
		ENDIF
	ELSE
		IF A < 30
			TIME:5 = 0
		ELSEIF A < 50
			TIME:5 = 1
		ELSEIF A < 80
			TIME:5 = 2
		ELSE
			TIME:5 = 4
		ENDIF
	ENDIF
	SIF (TIME:1 == 23 || TIME:1 == 24 || TIME:1 == 25 || TIME:1 == 27) && TIME:5 != 1
		TIME:5 = 0

;秋
ELSEIF DAY:2 == 2
;TIME:5が天気(0=晴1=快晴2=曇り3=雨4=大雨5=雪6=大雪)
	IF DAY:1 >= 15
		IF A < 40
			TIME:5 = 0
		ELSEIF A < 50
			TIME:5 = 1
		ELSEIF A < 90
			TIME:5 = 2
		ELSE
			TIME:5 = 3
		ENDIF
	ELSEIF TIME == 0
		IF A < 30
			TIME:5 = 0
		ELSEIF A < 40
			TIME:5 = 1
		ELSEIF A < 70
			TIME:5 = 2
		ELSE
			TIME:5 = 3
		ENDIF
	ELSE
		IF A < 20
			TIME:5 = 0
		ELSEIF A < 30
			TIME:5 = 1
		ELSEIF A < 40
			TIME:5 = 2
		ELSEIF A < 60
			TIME:5 = 3
		ELSE
			TIME:5 = 4
		ENDIF
	ENDIF
	SIF (TIME:1 == 33 || TIME:1 == 34 || TIME:1 == 35 || TIME:1 == 36 || TIME:1 == 30 || TIME:1 == 40) && TIME:5 != 1
		TIME:5 = 0
	SIF TIME:1 == 31
		TIME:5 = 4

;冬
;TIME:5が天気(0=晴1=快晴2=曇り3=雨4=大雨5=雪6=大雪)
ELSEIF DAY:2 == 3
	IF (TIME:1 == 47 && TIME == 1) || (TIME:1 == 48 && TIME == 0)
		IF A < 38
			TIME:5 = 0
		ELSEIF A < 47
			TIME:5 = 1
		ELSEIF A < 95
			TIME:5 = 5
		ELSE
			TIME:5 = 8
		ENDIF
	ELSEIF TIME:1 == 47 || TIME:1 == 48 || TIME:1 == 49
		IF A < 40
			TIME:5 = 0
		ELSEIF A < 50
			TIME:5 = 1
		ELSE
			TIME:5 = 5
		ENDIF
