@ADD_MAKISAMA
;マキ様加入処理

;絶対加入させない場合
SIF FLAG:28 & 4
	RETURN 1

;マキを検索
T = 3
CALL GET_EXISTANCE
;計算しやすいように、存在位置を+1された値から、本来の値に戻す
E -= 1
;マキが居ない
IF E < 0
	PRINTFORMW 特典としてマキ様(ドエロ版マキ)を仲間に加える事ができます。仲間に加えますか？
	PRINTL [0] はい
	PRINTL [1] いいえ（次の機会に、また加入させるか聞く）
	PRINTL [2] 絶対使わないから次から聞かなくても良い

	INPUT
	IF RESULT < 0 || RESULT > 2
		RESTART
	ELSEIF RESULT == 0
		PRINTFORMW それではマキ様を仲間に加えます。恋慕をつけちゃった場合マキ様に搾り取られないようくれぐれもご注意下さい
		CALL ADDSPCHARA_3
	ELSEIF RESULT == 1
		PRINTFORMW それでは今回の加入は見送ります
	ELSEIF RESULT == 2
		PRINTFORMW 了解です。不快な思いをさせてしまい申し訳ありませんでした
		FLAG:28 |= 4
	ENDIF
	RETURN 1

;マキが主人公
ELSEIF E == 0
	;変更できない
	FLAG:28 |= 4
;普通のマキが居る
ELSEIF TALENT:E:淫魔 == 0
	PRINTFORMW 特典としてマキ様(ドエロ版マキ)を仲間に加える事ができます
	PRINTFORMW 今居る普通のマキは居なくなりますが、仲間に加えますか？
	PRINTL [0] はい
	PRINTL [1] いいえ（次の機会に、また加入させるか聞く）
	PRINTL [2] 絶対使わないから次から聞かなくても良い

	INPUT
	IF RESULT < 0 || RESULT > 2
		RESTART
	ELSEIF RESULT == 0
		PRINTFORMW それではマキ様を仲間に加えます。恋慕をつけちゃった場合マキ様に搾り取られないようくれぐれもご注意下さい
		IF TARGET >= 0
			LOCAL:1 = NO:TARGET
		ELSE
			LOCAL:1 = -1
		ENDIF
		IF ASSI >= 0
			LOCAL:2 = NO:ASSI
		ELSE
			LOCAL:2 = -1
		ENDIF
		;パートナーフラグを記憶
		LOCAL:3 = TALENT:E:パートナー
		DELCHARA E
		CALL ADDSPCHARA_3
		PRINTFORMW ＜マキの様子が変わった＞
		REPEAT CHARANUM
			SIF NO:COUNT == LOCAL:1
				TARGET = COUNT
			SIF NO:COUNT == LOCAL:2
				ASSI = COUNT
		REND
		SIF LOCAL:2 == 1
			ASSI = -1
		
		;パートナーフラグ復元
		TALENT:A:パートナー = LOCAL:3
	ELSEIF RESULT == 1
		PRINTFORMW それでは今回の加入は見送ります
	ELSEIF RESULT == 2
		PRINTFORMW 了解です。不快な思いをさせてしまい申し訳ありませんでした
		FLAG:28 |= 4
	ENDIF
	RETURN 1

;もうマキ様が居る
ELSE
	;多分何もしなくてOK
ENDIF

RETURN 1



