;-------------------------------------------------
;サドっ気が上げられるかチェック
;-------------------------------------------------
@ISABLUP15
IF ABL:サドっ気 >= 9999
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF

;能力アップに必要なコストを計算
CALL COSTABLUP15

;条件別にＯＫかダメかを記録する
I = 0
J = 0

;能力アップ可能なら1にする
Z = 0

;欲望がサドっ気＋１レベルでないといけない
IF ABL:欲望 < ABL:サドっ気 + 1
	;欲望が不足
	I |= 4
	J |= 4
ENDIF


IF EXP:異常経験 < F
	;異常経験が不足
	I |= 2
	J |= 2
ENDIF

IF B > 0
	;欲情の珠で上げる
	SIF JUEL:欲情 < A
		I |= 1
	;習得の珠で上げる
	SIF JUEL:習得 < B
		I |= 1

	IF I == 0
		Z = 1
	ENDIF
ENDIF

IF D > 0
	;欲情の珠で上げる
	SIF JUEL:欲情 < D
		J |= 1
	;優越の珠で上げる
	SIF JUEL:優越 < E
		J |= 1

	IF J == 0
		Z = 1
	ENDIF
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



