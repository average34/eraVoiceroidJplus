;-------------------------------------------------
;技巧が上げられるかチェック
;-------------------------------------------------
@ISABLUP2
IF ABL:技巧 >= 9999
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF
;能力アップに必要なコストを計算
CALL COSTABLUP2

;条件別にＯＫかダメかを記録する
I = 0
J = 0
K = 0
;能力アップ可能なら1にする
Z = 0


;習得の珠で上げる
SIF JUEL:習得 < A
	I |= 1

IF I == 0
	Z = 1
ENDIF

IF B > 0
	;好意の珠で上げる
	SIF JUEL:好意 < B
		J |= 1

	IF J == 0
		Z = 1
	ENDIF
ENDIF

IF C > 0
	;優越の珠で上げる
	SIF JUEL:優越 < C
		K |= 1

	IF K == 0
		Z = 1
	ENDIF
ENDIF


IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;技巧を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP2
IF ABL:技巧 == 0
	A = 1
	B = 1
	C = 1
ELSEIF ABL:技巧 == 1
	A = 10
	B = 10
	C = 10
ELSEIF ABL:技巧 <= 3
	A = 25
	B = 50
	C = 50
	A = A * (ABL:技巧 - 1)
	B = B * (ABL:技巧 - 1)
	C = C * (ABL:技巧 - 1)
ELSEIF ABL:技巧 <= 5
	A = 200
	B = 500
	C = 800
	A = A * (ABL:技巧 - 3)
	B = B * (ABL:技巧 - 3)
	C = C * (ABL:技巧 - 3)
ELSEIF ABL:技巧 <= 8
	A = 3000
	B = 0
	C = 0
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.10
	ENDIF
	A = A * (ABL:技巧 - 5)
ELSEIF ABL:技巧 <= 11
	A = 20000
	B = 0
	C = 0
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.30
	ENDIF
	A = A + 7000 * (ABL:技巧 - 9)
ELSE
	A = 20000
	B = 0
	C = 0
	
	A = A * (ABL:技巧 - 9)
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.30
	ENDIF
ENDIF

