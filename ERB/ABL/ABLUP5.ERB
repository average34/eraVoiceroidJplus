;-------------------------------------------------
;A感覚が上げられるかチェック
;-------------------------------------------------
@ISABLUP5
IF ABL:Ａ感覚 >= 9999
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF
;能力アップに必要なコストを計算
CALL COSTABLUP5

;条件別にＯＫかダメかを記録する
I = 0
;能力アップ可能なら1にする
Z = 0

;快Ａの珠で上げる
SIF JUEL:快Ａ < A
	I |= 1

IF I == 0
	Z = 1
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;A感覚を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP5
IF ABL:Ａ感覚 == 0
	A = 1
ELSEIF ABL:Ａ感覚 == 1
	A = 50
ELSEIF ABL:Ａ感覚 == 2
	A = 600
ELSEIF ABL:Ａ感覚 == 3
	A = 7000
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.10
	ENDIF
ELSEIF ABL:Ａ感覚 == 4
	A = 45000
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.30
	ENDIF
ELSE
	A = 45000
	
	A = A * (ABL:Ａ感覚 - 3)
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.30
	ENDIF
ENDIF

;A鈍感
IF TALENT:Ａ鈍感
	TIMES A , 1.20
ENDIF

;A敏感
IF TALENT:Ａ敏感
	TIMES A , 0.80
ENDIF

;淫乱化
IF TALENT:淫乱
	TIMES A , 0.80
ENDIF

;尻穴狂い
IF TALENT:尻穴狂い
	TIMES A , 0.80
ENDIF
