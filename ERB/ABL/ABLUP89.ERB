	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 条件を満たしていません。
	RESTART
ELSEIF J != 0 && RESULT == 1
	PRINTL 条件を満たしていません。
	RESTART
ELSEIF I != 0 && RESULT == 20
	PRINTL 条件を満たしていません。
	RESTART
ELSEIF J != 0 && RESULT == 21
	PRINTL 条件を満たしていません。
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

SIF RESULT < 20
	ABL:金銭感覚 += 1

IF RESULT == 0
	JUEL:生活 -= A
ELSEIF RESULT == 1
	JUEL:習得 -= C
ELSEIF RESULT == 20
	CALL AUT_KINSEN_0
ELSEIF RESULT == 21
	CALL AUT_KINSEN_1
ENDIF

PRINTS ABLNAME:89
