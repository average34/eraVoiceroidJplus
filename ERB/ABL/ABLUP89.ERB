;-------------------------------------------------
;金銭感覚が上げられるかチェック
;-------------------------------------------------
@ISABLUP89
;上限越してるならリターン
IF ABL:金銭感覚 >= 9999
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF

;能力アップに必要なコストを計算
CALL COSTABLUP89

;条件別にＯＫかダメかを記録する
I = 0
J = 0

;能力アップ可能なら1にする
Z = 0

;生活の珠で上げる
SIF JUEL:生活 < A
	I |= 1

;習得の珠で上げる
SIF JUEL:習得 < C
	J |= 1

IF I == 0
	Z = 1
ENDIF

IF J == 0
	Z = 1
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;金銭感覚を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP89
IF ABL:金銭感覚 == 0
	A = 1
	B = 0
	C = 75
ELSEIF ABL:金銭感覚 == 1
	A = 50
	B = 0
	C = 500
ELSEIF ABL:金銭感覚 == 2
	A = 600
	C = 3000
ELSEIF ABL:金銭感覚 == 3
	A = 5000
	C = 9000
ELSEIF ABL:金銭感覚 == 4
	A = 20000
	C = 24000
ELSE
	A = 20000
	C = 24000
	
	A = A * (ABL:金銭感覚 - 3)
	C = C * (ABL:金銭感覚 - 3)
ENDIF

;自制心
IF TALENT:自制心
	TIMES A , 0.80
	TIMES C , 0.80
ENDIF

;恋慕
IF TALENT:恋慕
	TIMES A , 0.80
	TIMES C , 0.80
ENDIF
