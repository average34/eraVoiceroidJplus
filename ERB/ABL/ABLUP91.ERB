;-------------------------------------------------
;撮影技能が上げられるかチェック
;-------------------------------------------------
@ISABLUP91
;上限越してるならリターン
IF ABL:撮影技能 >= 9999
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF

;能力アップに必要なコストを計算
CALL COSTABLUP91

;条件別にＯＫかダメかを記録する
I = 0
;能力アップ可能なら1にする
Z = 0

;習得の珠で上げる
SIF JUEL:7 < A
	I |= 1

SIF EXP:91 < B
	I |= 2

IF I == 0
	Z = 1
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;撮影技能を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP91
IF ABL:撮影技能 == 0
	A = 1
	B = 5
ELSEIF ABL:撮影技能 == 1
	A = 25
	B = 10
	SIF EXP:91 >= EXPLV:3
		A = 15
ELSEIF ABL:撮影技能 == 2
	A = 200
	B = 20
	SIF EXP:91 >= EXPLV:4
		A = 150
ELSEIF ABL:撮影技能 == 3
	A = 3000
	B = 40
	SIF EXP:91 >= EXPLV:5
		A = 1500
ELSEIF ABL:撮影技能 == 4
	A = 20000
	B = 80
	SIF EXP:91 >= EXPLV:5
		A = 10000
ELSE
	A = 20000
	B = 80
	
	A = A * (ABL:撮影技能 - 3)
	B = B * (ABL:撮影技能 - 2) / 2
ENDIF

;習得早い
IF TALENT:50
	TIMES A , 0.80
	TIMES B , 0.75
ENDIF

;習得遅い
IF TALENT:51
	TIMES A , 1.20
	TIMES B , 1.10
ENDIF


;撮影素質で補正をかける
IF ABL:撮影素質 == 2
	TIMES A , 0.80
	TIMES B , 0.80
ELSEIF ABL:撮影素質 == 1
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF

;必要経験を上限999に変更
SIF B >= 9999
	B = 9999
;倍の経験を持っているなら必要数軽減
IF EXP:91 >= B * 2
	A = A / 2
ENDIF
