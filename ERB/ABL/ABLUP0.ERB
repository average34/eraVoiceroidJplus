@ISABLUP0
IF ABL:親密 >= 9999
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF

;自分への親密は上げられない
IF TARGET == MASTER
	RETURN 0
ENDIF

;能力アップに必要なコストを計算
CALL COSTABLUP0

;能力アップ可能なら1にする
Z = 0

;条件別にＯＫかダメかを記録する
I = 0
J = 0
K = 0
L = 0
M = 0

IF F && EXP:異常経験 == 0
	;異常経験がない
	I |= 2
	J |= 2
	K |= 2
	L |= 2
	M |= 2
ENDIF

;好意の珠で上げる
SIF JUEL:好意 < E
	M |= 1

IF M == 0
	Z = 1
ENDIF

;恐怖の珠で上げる
SIF JUEL:恐怖 < A
	I |= 1

IF I == 0
	Z = 1
ENDIF

;恭順の珠で上げる
SIF JUEL:恭順 < B
	J |= 1

IF J == 0
	Z = 1
ENDIF

IF C > 0
	;欲情の珠で上げる
	SIF JUEL:欲情 < C
		K |= 1

	IF K == 0
		Z = 1
	ENDIF
ENDIF

IF D > 0
	;屈服の珠で上げる
	SIF JUEL:屈服 < D
		L |= 1

	IF L == 0
		Z = 1
	ENDIF
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;親密を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP0
IF ABL:親密 <= 1
	IF TALENT:臆病 == 0
		A = 10
	ELSE
		A = 1
	ENDIF
	B = 10
	C = 300
	D = 200
	E = 5

	A = A * (ABL:親密 + 1)
	B = B * (ABL:親密 + 1)
	C = C * (ABL:親密 + 1)
	D = D * (ABL:親密 + 1)
	E = E * (ABL:親密 + 1)
ELSEIF ABL:親密 <= 3
	IF TALENT:臆病 == 0
		A = 150
	ELSE
		A = 10
	ENDIF
	B = 100
	C = 1000
	D = 1200
	E = 100

	A = A * (ABL:親密 - 1)
	B = B * (ABL:親密 - 1)
	C = C * (ABL:親密 - 1)
	D = D * (ABL:親密 - 1)
	E = E * (ABL:親密 - 1)
ELSEIF ABL:親密 <= 5
	IF TALENT:臆病 == 0
		A = 1000
	ELSE
		A = 50
	ENDIF
	B = 800
	C = 2000
	D = 3000
	E = 1000

	A = A * (ABL:親密 - 3)
	B = B * (ABL:親密 - 3)
	C = C * (ABL:親密 - 3)
	D = D * (ABL:親密 - 3)
	E = E * (ABL:親密 - 3)
ELSEIF ABL:親密 <= 8
	IF TALENT:臆病 == 0
		A = 3000
	ELSE
		A = 600
	ENDIF
	B = 3000
	C = 0
	D = 0
	E = 5000
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.10
		TIMES B , 1.10
		TIMES E , 1.10
	ENDIF
	A = A * (ABL:親密 - 5)
	B = B * (ABL:親密 - 5)
	E = E * (ABL:親密 - 5)
ELSEIF ABL:親密 <= 11
	IF TALENT:臆病 == 0
		A = 8000
	ELSE
		A = 3000
	ENDIF
	B = 15000
	C = 0
	D = 0
	E = 25000
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.30
		TIMES B , 1.30
		TIMES E , 1.30
	ENDIF
	IF TALENT:臆病 == 0
		A = A + 2000 * (ABL:親密 - 9)
	ELSE
		A = A + 1000 * (ABL:親密 - 9)
	ENDIF
	B = B + 5000 * (ABL:親密 - 9)
	E = E + 8000 * (ABL:親密 - 9)
ELSE
	IF TALENT:臆病 == 0
		A = 8000
	ELSE
		A = 3000
	ENDIF
	B = 15000
	C = 0
	D = 0
	E = 25000
	
	A = A * (ABL:親密 - 9)
	B = B * (ABL:親密 - 9)
	E = E * (ABL:親密 - 9)
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.30
		TIMES B , 1.30
		TIMES E , 1.30
	ENDIF
ENDIF

