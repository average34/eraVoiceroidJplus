;-------------------------------------------------
;レズっ気が上げられるかチェック
;-------------------------------------------------
@ISABLUP9
IF ABL:レズっ気 >= 9999 || TALENT:オトコ
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF
;能力アップに必要なコストを計算
CALL COSTABLUP9

;条件別にＯＫかダメかを記録する
I = 0
J = 0
;能力アップ可能なら1にする
Z = 0

;ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[両刀]なら無視できる）
IF ABL:レズっ気 >= 3 && TALENT:両刀 == 0
	F = ABL:レズっ気 * 3
	IF EXP:異常経験 < F
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
ENDIF
;欲情の珠で上げる
SIF JUEL:欲情 < A
	I |= 1
;屈服の珠で上げる
SIF JUEL:屈服 < C
	I |= 1
;レズ経験が必要
SIF EXP:レズ経験 < B
	I |= 2

IF I == 0
	Z = 1
ENDIF

IF D > 0
	;快Ｃの珠で上げる
	SIF JUEL:快Ｃ < D
		J |= 1
	;レズ経験が必要
	SIF EXP:レズ経験 < B
		J |= 2
	
	IF J == 0
		Z = 1
	ENDIF
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;レズっ気を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP9
IF ABL:レズっ気 == 0
	A = 200
	B = 50
	C = 0
	D = 1000
ELSEIF ABL:レズっ気 == 1
	A = 1000
	B = 200
	C = 0
	D = 5000
ELSEIF ABL:レズっ気 == 2
	A = 3000
	B = 500
	C = 1000
	D = 0
ELSEIF ABL:レズっ気 == 3
	A = 8000
	B = 1000
	C = 2000
	D = 0
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.10
		TIMES B , 1.10
		TIMES C , 1.10
	ENDIF
ELSEIF ABL:レズっ気 == 4
	A = 20000
	B = 2000
	C = 5000
	D = 0
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.30
		TIMES B , 1.30
		TIMES C , 1.30
	ENDIF
ELSE
	A = 20000
	B = 2000
	C = 5000
	D = 0
	
	A = A * (ABL:レズっ気 - 3)
	B = B * (ABL:レズっ気 - 2) / 2
	C = C * (ABL:レズっ気 - 3)
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.30
		TIMES B , 1.30
		TIMES C , 1.30
	ENDIF
ENDIF

;レズ素質
IF TALENT:両刀
	TIMES A , 0.25
	TIMES B , 0.25
	TIMES C , 0.25
	TIMES D , 0.25
ENDIF

;倒錯的
IF TALENT:倒錯的
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
	TIMES D , 0.75
ENDIF

;ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[両刀]なら無視できる）
IF ABL:レズっ気 >= 3 && TALENT:両刀 == 0
	F = ABL:レズっ気 * 3
ELSE
	F = 0
ENDIF
