;-------------------------------------------------
;マゾっ気が上げられるかチェック
;-------------------------------------------------
@ISABLUP8
IF ABL:マゾっ気 >= 9999
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF
;能力アップに必要なコストを計算
CALL COSTABLUP8

;条件別にＯＫかダメかを記録する
I = 0
J = 0
K = 0
L = 0
;能力アップ可能なら1にする
Z = 0

;欲望がマゾっ気＋１レベルでないといけない
IF ABL:欲望 < ABL:マゾっ気+1
	;欲望が不足
	I |= 4
	J |= 4
	K |= 4
	L |= 4
ENDIF

;ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[解放]なら無視できる）
IF EXP:異常経験 < F
	;異常経験が不足
	I |= 2
	J |= 2
	K |= 2
	L |= 2
ENDIF

IF B > 0
	;苦痛の珠で上げる
	SIF JUEL:苦痛 < A
		I |= 1
	;欲情の珠で上げる
	SIF JUEL:欲情 < B
		I |= 1
	;苦痛快楽経験が必要な場合
	SIF EXP:苦痛快楽経験 < C
		I |= 2

	IF I == 0
		Z = 1
	ENDIF
ENDIF

IF D > 0
	;苦痛の珠で上げる
	SIF JUEL:苦痛 < D
		J |= 1
	;屈服の珠で上げる
	SIF JUEL:屈服 < E
		J |= 1
	;この場合苦痛快楽経験が必要なことあり
	SIF EXP:苦痛快楽経験 < C
		J |= 2
	;この場合絶頂経験が１以上必要
	SIF EXP:絶頂経験 < 1
		J |= 2
	
	IF J == 0
		Z = 1
	ENDIF
	
	;恥情の珠で上げる
	SIF JUEL:恥情 < D
		L |= 1
	;恭順の珠で上げる
	SIF JUEL:恭順 < E
		L |= 1
	;この場合絶頂経験が１以上必要
	SIF EXP:絶頂経験 < 1
		L |= 2
	
	IF L == 0
		Z = 1
	ENDIF
ENDIF

IF B > 0
	;恐怖の珠で上げる
	SIF JUEL:恐怖 < A
		K |= 1
	;欲情の珠で上げる
	SIF JUEL:欲情 < B
		K |= 1

	IF K == 0
		Z = 1
	ENDIF
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;マゾっ気を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP8
IF ABL:マゾっ気 == 0
	A = 100
	B = 100
	C = 0
	D = 100
	E = 100
ELSEIF ABL:マゾっ気 == 1
	A = 500
	B = 500
	C = 0
	D = 500
	E = 300
ELSEIF ABL:マゾっ気 == 2
	A = 1200
	B = 1000
	C = 0
	D = 1500
	E = 1000
ELSEIF ABL:マゾっ気 == 3
	A = 0
	B = 0
	C = 10
	D = 3000
	E = 6000
	;一線越えない
	IF TALENT:一線越えない
		TIMES C , 1.10
		TIMES D , 1.10
		TIMES E , 1.10
	ENDIF
ELSEIF ABL:マゾっ気 == 4
	A = 0
	B = 0
	C = 50
	D = 5000
	E = 12000
	;一線越えない
	IF TALENT:一線越えない
		TIMES C , 1.30
		TIMES D , 1.30
		TIMES E , 1.30
	ENDIF
ELSE
	A = 0
	B = 0
	C = 50
	D = 5000
	E = 12000
	
	C = C * (ABL:マゾっ気 - 2) / 2
	D = D * (ABL:マゾっ気 - 3)
	E = E * (ABL:マゾっ気 - 3)
	;一線越えない
	IF TALENT:一線越えない
		TIMES C , 1.30
		TIMES D , 1.30
		TIMES E , 1.30
	ENDIF
ENDIF

