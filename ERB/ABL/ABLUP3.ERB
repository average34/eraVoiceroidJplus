;-------------------------------------------------
;C感覚が上げられるかチェック
;-------------------------------------------------
@ISABLUP3
IF ABL:3 >= 9999
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF

;能力アップに必要なコストを計算
CALL COSTABLUP3

;条件別にＯＫかダメかを記録する
I = 0
;能力アップ可能なら1にする
Z = 0

;快Ｃの珠で上げる
SIF JUEL:0 < A
	I |= 1

IF I == 0
	Z = 1
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;C感覚を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP3
IF ABL:3 == 0
	A = 1
ELSEIF ABL:3 == 1
	A = 20
ELSEIF ABL:3 == 2
	A = 400
ELSEIF ABL:3 == 3
	A = 5000
	;一線越えない
	IF TALENT:27
		TIMES A , 1.10
	ENDIF
ELSEIF ABL:3 == 4
	A = 20000
	;一線越えない
	IF TALENT:27
		TIMES A , 1.30
	ENDIF
ELSE
	A = 20000
	
	A = A * (ABL:3 - 3)
	;一線越えない
	IF TALENT:27
		TIMES A , 1.30
	ENDIF
ENDIF

;C鈍感
IF TALENT:101
	TIMES A , 1.20
ENDIF

;C敏感
IF TALENT:102
	TIMES A , 0.80
ENDIF

;淫乱化
IF TALENT:76
	TIMES A , 0.80
ENDIF

;淫核
IF TALENT:75
	TIMES A , 0.80
ENDIF
