;-------------------------------------------------
;精液中毒が上げられるかチェック
;-------------------------------------------------
@ISABLUP11
IF ABL:精液中毒 >= 9999
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF
;能力アップに必要なコストを計算
CALL COSTABLUP11

;条件別にＯＫかダメかを記録する
I = 0
;能力アップ可能なら1にする
Z = 0

IF EXP:異常経験 < F
	;異常経験が不足
	I |= 2
ENDIF

;奉仕精神が必要
IF ABL:奉仕精神 < ABL:精液中毒 + 1
	I |= 4
ENDIF

;欲情の珠で上げる
SIF JUEL:欲情 < A
	I |= 1
;充実の珠で上げる
SIF JUEL:屈服 < B
	I |= 1
;精液経験が必要
SIF EXP:精液経験 < C
	I |= 2

IF I == 0
	Z = 1
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;精液中毒を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP11
IF ABL:精液中毒 == 0
	A = 9000
	B = 30000
	C = 5
ELSEIF ABL:精液中毒 == 1
	A = 24000
	B = 75000
	C = 12
ELSEIF ABL:精液中毒 == 2
	A = 45000
	B = 150000
	C = 20
ELSEIF ABL:精液中毒 == 3
	A = 90000
	B = 300000
	C = 40
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.10
		TIMES B , 1.10
		TIMES C , 1.10
	ENDIF
ELSEIF ABL:精液中毒 == 4
	A = 165000
	B = 900000
	C = 100
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.30
		TIMES B , 1.30
		TIMES C , 1.30
	ENDIF
ELSE
	A = 165000
	B = 900000
	C = 100
	
	A = A * (ABL:精液中毒 - 3)
	B = B * (ABL:精液中毒 - 3)
	C = C * (ABL:精液中毒 - 2) / 2
	;一線越えない
	IF TALENT:一線越えない
		TIMES A , 1.30
		TIMES B , 1.30
		TIMES C , 1.30
	ENDIF
ENDIF

;倍の経験を持っているなら必要数軽減
IF EXP:精液経験 >= C * 2
	A = A / 3
	B = B / 3
ENDIF

;汚臭鈍感
IF TALENT:汚臭鈍感
	TIMES A , 0.25
	TIMES B , 0.25
	TIMES C , 0.25
ENDIF

;汚臭敏感
IF TALENT:汚臭敏感
	TIMES A , 2.50
	TIMES B , 2.50
	TIMES C , 2.50
ENDIF

;中毒しやすい
IF TALENT:中毒しやすい
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF

;倒錯的
IF TALENT:倒錯的
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
ENDIF

;ＬＶ２以降に上げるときは異常経験必要（素質：[汚臭鈍感][中毒しやすい]なら無視できる）
IF ABL:精液中毒 >= 2 && TALENT:汚臭鈍感 == 0 && TALENT:中毒しやすい == 0
	F = ABL:精液中毒 * 5
ELSE
	F = 0
ENDIF
